<% content_for :title, "Unsubscribed" %>

<div class="container mx-auto px-4 py-16">
  <div class="max-w-2xl mx-auto text-center">
    <div class="w-20 h-20 bg-gray-200 rounded-full flex items-center justify-center mx-auto mb-6">
      <svg class="w-10 h-10 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
      </svg>
    </div>
    
    <h1 class="text-3xl font-bold text-gray-900 mb-4">You've Been Unsubscribed</h1>
    <p class="text-lg text-gray-600 mb-8">
      You have been successfully unsubscribed from our mailing list.
    </p>
    
    <p class="text-gray-600 mb-8">
      Email: <strong><%= @subscriber.email %></strong>
    </p>
    
    <div class="bg-blue-50 border border-blue-200 rounded-lg p-6 mb-8">
      <p class="text-gray-700 mb-4">
        We're sorry to see you go! If you change your mind, you can resubscribe at any time.
      </p>
      <%= link_to "Go to Homepage", root_path, class: "inline-block px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition" %>
    </div>
    
    <p class="text-sm text-gray-500">
      If you unsubscribed by mistake, please contact us at <%= mail_to SiteSetting.get('admin_email', 'admin@example.com') %>
    </p>
  </div>
</div>





