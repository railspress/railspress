<% content_for :title, "Email Confirmed" %>

<div class="container mx-auto px-4 py-16">
  <div class="max-w-2xl mx-auto text-center">
    <div class="w-20 h-20 bg-emerald-100 rounded-full flex items-center justify-center mx-auto mb-6">
      <svg class="w-10 h-10 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
      </svg>
    </div>
    
    <% if @already_confirmed %>
      <h1 class="text-3xl font-bold text-gray-900 mb-4">Already Confirmed</h1>
      <p class="text-lg text-gray-600 mb-8">
        Your email address has already been confirmed.
      </p>
    <% else %>
      <h1 class="text-3xl font-bold text-gray-900 mb-4">Email Confirmed!</h1>
      <p class="text-lg text-gray-600 mb-8">
        Thank you for confirming your subscription.
      </p>
    <% end %>
    
    <p class="text-gray-600 mb-8">
      Email: <strong><%= @subscriber.email %></strong>
    </p>
    
    <div class="bg-emerald-50 border border-emerald-200 rounded-lg p-6 mb-8">
      <p class="text-gray-700 mb-4">
        You're now subscribed to our newsletter. We'll send you updates, news, and exclusive content.
      </p>
      <%= link_to "Go to Homepage", root_path, class: "inline-block px-6 py-3 bg-emerald-600 text-white rounded-lg hover:bg-emerald-700 transition" %>
    </div>
    
    <p class="text-sm text-gray-500">
      Don't want to receive emails? <%= link_to "Unsubscribe", unsubscribe_path(token: @subscriber.unsubscribe_token), class: "text-blue-600 hover:text-blue-700" %>
    </p>
  </div>
</div>




