              <% end %>
            <% else %>
              <div class="text-center text-gray-500 py-8">
                <p>No sections added yet</p>
                <p class="text-sm">Click "Add Section" to get started</p>
              </div>
            <% end %>
          </div>
        </div>
        
        <div class="p-4 border-t border-gray-200">
