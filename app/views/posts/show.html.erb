<div class="container mx-auto px-4 py-8">
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Main Content -->
    <article class="lg:col-span-2">
      <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <% if @post.featured_image_file.attached? %>
          <%= image_tag @post.featured_image_file, class: "w-full h-96 object-cover" %>
        <% end %>
        
        <div class="p-8">
          <!-- Categories -->
          <div class="flex flex-wrap gap-2 mb-4">
            <% @post.categories.each do |category| %>
              <%= link_to category.name, category_path(category.slug), class: "text-xs bg-blue-100 text-blue-800 px-3 py-1 rounded-full hover:bg-blue-200" %>
            <% end %>
          </div>
          
          <!-- Title -->
          <h1 class="text-4xl font-bold text-gray-900 mb-4"><%= @post.title %></h1>
          
          <!-- Meta Info -->
          <div class="flex items-center space-x-4 text-sm text-gray-500 mb-8 pb-8 border-b border-gray-200">
            <div class="flex items-center">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <%= @post.published_at.strftime("%B %d, %Y") %>
            </div>
            <span>•</span>
            <div class="flex items-center">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
              By <%= @post.author_name %>
            </div>
            <% if defined?(reading_time) %>
              <span>•</span>
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <%= reading_time(@post.content) %>
              </div>
            <% end %>
            <% if @comments.any? %>
              <span>•</span>
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
                </svg>
                <%= @comments.count %> comments
              </div>
            <% end %>
          </div>
          
          <!-- Social Sharing Buttons (Plugin) -->
          <% if defined?(social_share_buttons) %>
            <div class="mb-6 pb-6 border-b border-gray-200">
              <p class="text-sm text-gray-600 mb-3">Share this post:</p>
              <%= social_share_buttons(@post) %>
            </div>
          <% end %>
          
          <!-- Content -->
          <div class="prose prose-lg max-w-none">
            <%= process_shortcodes(@post.content).html_safe %>
          </div>
          
          <!-- Tags -->
          <% if @post.tags.any? %>
            <div class="mt-8 pt-8 border-t border-gray-200">
              <div class="flex items-center flex-wrap gap-2">
                <span class="text-sm font-semibold text-gray-700">Tags:</span>
                <% @post.tags.each do |tag| %>
                  <%= link_to tag.name, tag_path(tag.slug), class: "px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-sm hover:bg-blue-100 hover:text-blue-800" %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Related Posts -->
      <% if @related_posts.any? %>
        <div class="mt-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-4">Related Posts</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <% @related_posts.each do |related_post| %>
              <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition">
                <% if related_post.featured_image_file.attached? %>
                  <%= image_tag related_post.featured_image_file, class: "w-full h-40 object-cover" %>
                <% else %>
                  <div class="w-full h-40 bg-gradient-to-r from-blue-400 to-purple-500"></div>
                <% end %>
                
                <div class="p-4">
                  <h3 class="font-bold text-gray-900 mb-2">
                    <%= link_to related_post.title, blog_post_path(related_post.slug), class: "hover:text-blue-600" %>
                  </h3>
                  <p class="text-xs text-gray-500"><%= related_post.published_at.strftime("%B %d, %Y") %></p>
                </div>
              </article>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Comments Section -->
      <div class="mt-8 bg-white rounded-lg shadow-md p-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Comments (<%= @comments.count %>)</h2>
        
        <!-- Comment Form -->
        <div class="mb-8">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Leave a Comment</h3>
          <%= form_with model: Comment.new, url: comments_path, class: "space-y-4" do |f| %>
            <%= f.hidden_field :post_id, value: @post.id %>
            
            <% unless current_user %>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <%= f.label :author_name, "Name *", class: "block text-sm font-medium text-gray-700 mb-2" %>
                  <%= f.text_field :author_name, required: true, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
                </div>
                <div>
                  <%= f.label :author_email, "Email *", class: "block text-sm font-medium text-gray-700 mb-2" %>
                  <%= f.email_field :author_email, required: true, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
                </div>
              </div>
              
              <div>
                <%= f.label :author_url, "Website", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= f.url_field :author_url, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
              </div>
            <% end %>
            
            <div>
              <%= f.label :content, "Comment *", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.text_area :content, required: true, rows: 4, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
            </div>
            
            <%= f.submit "Post Comment", class: "px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 cursor-pointer font-medium" %>
          <% end %>
        </div>
        
        <!-- Comments List -->
        <% if @comments.any? %>
          <div class="space-y-6">
            <% @comments.each do |comment| %>
              <div class="border-b border-gray-200 pb-6 last:border-0">
                <div class="flex items-start space-x-4">
                  <div class="flex-shrink-0">
                    <div class="w-10 h-10 bg-blue-600 rounded-full flex items-center justify-center text-white font-bold">
                      <%= comment.author[0].upcase %>
                    </div>
                  </div>
                  <div class="flex-1">
                    <div class="flex items-center space-x-2 mb-2">
                      <span class="font-semibold text-gray-900"><%= comment.author %></span>
                      <span class="text-sm text-gray-500">
                        <%= time_ago_in_words(comment.created_at) %> ago
                      </span>
                    </div>
                    <p class="text-gray-700"><%= comment.content %></p>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-gray-500 text-center py-8">No comments yet. Be the first to comment!</p>
        <% end %>
      </div>
    </article>

    <!-- Sidebar -->
    <aside class="space-y-6">
      <!-- Author Info -->
      <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-lg font-bold text-gray-900 mb-4">About the Author</h3>
        <div class="flex items-center space-x-4 mb-4">
          <div class="w-16 h-16 bg-blue-600 rounded-full flex items-center justify-center text-white font-bold text-2xl">
            <%= @post.author_name[0].upcase %>
          </div>
          <div>
            <p class="font-semibold text-gray-900"><%= @post.author_name %></p>
            <p class="text-sm text-gray-500">Author</p>
          </div>
        </div>
      </div>

      <!-- Recent Posts -->
      <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-lg font-bold text-gray-900 mb-4">Recent Posts</h3>
        <ul class="space-y-3">
          <% Post.published.recent.where.not(id: @post.id).limit(5).each do |recent_post| %>
            <li class="border-b border-gray-200 pb-3 last:border-0">
              <%= link_to recent_post.title, blog_post_path(recent_post.slug), class: "text-gray-900 hover:text-blue-600 font-medium" %>
              <p class="text-xs text-gray-500 mt-1"><%= recent_post.published_at.strftime("%B %d, %Y") %></p>
            </li>
          <% end %>
        </ul>
      </div>

      <!-- Categories -->
      <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-lg font-bold text-gray-900 mb-4">Categories</h3>
        <ul class="space-y-2">
          <% Term.for_taxonomy('category').limit(10).each do |term| %>
            <li class="flex items-center justify-between">
              <%= link_to term.name, category_path(term.slug), class: "text-gray-700 hover:text-blue-600" %>
              <span class="text-sm text-gray-500">(<%= term.posts.count %>)</span>
            </li>
          <% end %>
        </ul>
      </div>

      <!-- Tags Cloud -->
      <% if Term.for_taxonomy('post_tag').any? %>
        <div class="bg-white rounded-lg shadow-md p-6">
          <h3 class="text-lg font-bold text-gray-900 mb-4">Tags</h3>
          <div class="flex flex-wrap gap-2">
            <% Term.for_taxonomy('post_tag').limit(20).each do |term| %>
              <%= link_to term.name, tag_path(term.slug), class: "px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-sm hover:bg-blue-100 hover:text-blue-800" %>
            <% end %>
          </div>
        </div>
      <% end %>
    </aside>
  </div>
</div>
