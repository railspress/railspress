<% content_for :title, @post.title %>

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div class="text-center">
      <svg class="mx-auto h-16 w-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
      </svg>
      <h2 class="mt-6 text-3xl font-extrabold text-gray-900">
        Protected Content
      </h2>
      <p class="mt-2 text-sm text-gray-600">
        <%= @post.title %>
      </p>
      <% if @post.password_hint.present? %>
        <p class="mt-2 text-sm text-indigo-600 font-medium">
          ðŸ’¡ Hint: <%= @post.password_hint %>
        </p>
      <% end %>
    </div>
    
    <%= form_with url: verify_password_blog_post_path(@post), method: :post, class: "mt-8 space-y-6" do |f| %>
      <% if flash[:alert] %>
        <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded">
          <%= flash[:alert] %>
        </div>
      <% end %>
      
      <div>
        <%= label_tag :password, 'Password', class: 'sr-only' %>
        <%= password_field_tag :password, nil, 
            class: 'appearance-none rounded-lg relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm',
            placeholder: 'Enter password',
            required: true,
            autofocus: true %>
      </div>

      <div>
        <%= submit_tag 'Submit', class: 'group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-lg text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition' %>
      </div>
    <% end %>
    
    <div class="text-center">
      <%= link_to 'Back to Blog', blog_path, class: 'text-indigo-600 hover:text-indigo-500 text-sm' %>
    </div>
  </div>
</div>






