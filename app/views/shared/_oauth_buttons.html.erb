<% 
  # Get available OAuth providers
  available_providers = []
  
  # Helper method to check if a client ID is valid (not a test value)
  def valid_oauth_client_id?(client_id)
    return false if client_id.blank?
    # Reject common test/dummy values
    test_values = ['test-client-id', 'test-github-client-id', 'invalid-app-id', 'invalid-api-key', 'dummy', 'test', 'example']
    !test_values.include?(client_id.downcase) && client_id.length > 10
  end
  
  # Check each provider if it's enabled and properly configured
  if SiteSetting.get('google_oauth_enabled', false) && valid_oauth_client_id?(SiteSetting.get('google_oauth_client_id', ''))
    available_providers << { name: 'google_oauth2', display: 'Google', icon: 'google', color: 'bg-red-600 hover:bg-red-700' }
  end
  
  if SiteSetting.get('github_oauth_enabled', false) && valid_oauth_client_id?(SiteSetting.get('github_oauth_client_id', ''))
    available_providers << { name: 'github', display: 'GitHub', icon: 'github', color: 'bg-gray-800 hover:bg-gray-900' }
  end
  
  if SiteSetting.get('facebook_oauth_enabled', false) && valid_oauth_client_id?(SiteSetting.get('facebook_oauth_app_id', ''))
    available_providers << { name: 'facebook', display: 'Facebook', icon: 'facebook', color: 'bg-blue-600 hover:bg-blue-700' }
  end
  
  if SiteSetting.get('twitter_oauth_enabled', false) && valid_oauth_client_id?(SiteSetting.get('twitter_oauth_api_key', ''))
    available_providers << { name: 'twitter', display: 'Twitter', icon: 'twitter', color: 'bg-sky-500 hover:bg-sky-600' }
  end
%>

<% if available_providers.any? %>
  <div class="space-y-3">
    <div class="relative">
      <div class="absolute inset-0 flex items-center">
        <div class="w-full border-t <%= request.path.include?('/admin/') ? 'border-[#2a2a2a]' : 'border-gray-300' %>"></div>
      </div>
      <div class="relative flex justify-center text-sm">
        <span class="px-2 <%= request.path.include?('/admin/') ? 'bg-[#1a1a1a] text-gray-400' : 'bg-white text-gray-500' %>">Or continue with</span>
      </div>
    </div>
    
    <div class="grid grid-cols-<%= available_providers.length > 2 ? '2' : available_providers.length %> gap-3">
      <% available_providers.each do |provider| %>
        <% 
          # Determine the correct OAuth path based on context
          oauth_path = if request.path.include?('/admin/')
            "/admin/auth/#{provider[:name]}"
          else
            omniauth_authorize_path(resource_name, provider[:name])
          end
        %>
        <%= button_to oauth_path, 
            method: :post,
            data: { turbo: false },
            class: "w-full inline-flex justify-center items-center px-4 py-2 border #{request.path.include?('/admin/') ? 'border-[#2a2a2a] text-gray-300 bg-[#0a0a0a] hover:bg-[#111111]' : 'border-gray-300 text-gray-700 bg-white hover:bg-gray-50'} rounded-lg shadow-sm text-sm font-medium focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors" do %>
          
          <!-- Provider Icon -->
          <% case provider[:icon] %>
          <% when 'google' %>
            <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24">
              <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
