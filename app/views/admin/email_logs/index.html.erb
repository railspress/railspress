<% content_for :page_title, "Email Logs" %>

<div class="max-w-7xl mx-auto">
  <div class="mb-6 flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold text-white mb-2">Email Logs</h1>
      <p class="text-gray-400">View all sent emails and delivery status</p>
    </div>
    <div class="flex items-center space-x-3">
      <%= link_to admin_email_settings_path, class: "px-4 py-2 border border-[#2a2a2a] hover:border-[#3a3a3a] text-gray-300 hover:text-white rounded-lg transition flex items-center space-x-2" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>
        <span>Email Settings</span>
      <% end %>
      
      <% if @email_logs.any? %>
        <%= button_to destroy_all_admin_email_logs_path, method: :delete, data: { confirm: 'Are you sure you want to clear all email logs?' }, class: "px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg transition flex items-center space-x-2" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
          </svg>
          <span>Clear All Logs</span>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Stats -->
  <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
    <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-400 text-sm">Total Emails</p>
          <p class="text-2xl font-bold text-white mt-1"><%= @stats[:total] %></p>
        </div>
        <div class="p-3 bg-indigo-500/10 rounded-lg">
          <svg class="w-6 h-6 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-400 text-sm">Sent Successfully</p>
          <p class="text-2xl font-bold text-emerald-400 mt-1"><%= @stats[:sent] %></p>
        </div>
        <div class="p-3 bg-emerald-500/10 rounded-lg">
          <svg class="w-6 h-6 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-400 text-sm">Failed</p>
          <p class="text-2xl font-bold text-red-400 mt-1"><%= @stats[:failed] %></p>
        </div>
        <div class="p-3 bg-red-500/10 rounded-lg">
          <svg class="w-6 h-6 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-400 text-sm">Today</p>
          <p class="text-2xl font-bold text-blue-400 mt-1"><%= @stats[:today] %></p>
        </div>
        <div class="p-3 bg-blue-500/10 rounded-lg">
          <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Email Logs Table -->
  <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl overflow-hidden">
    <% if @email_logs.any? %>
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-[#0a0a0a] border-b border-[#2a2a2a]">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-semibold text-gray-400 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-semibold text-gray-400 uppercase tracking-wider">To</th>
              <th class="px-6 py-3 text-left text-xs font-semibold text-gray-400 uppercase tracking-wider">Subject</th>
              <th class="px-6 py-3 text-left text-xs font-semibold text-gray-400 uppercase tracking-wider">Provider</th>
              <th class="px-6 py-3 text-left text-xs font-semibold text-gray-400 uppercase tracking-wider">Sent At</th>
              <th class="px-6 py-3 text-left text-xs font-semibold text-gray-400 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-[#2a2a2a]">
            <% @email_logs.each do |log| %>
              <tr class="hover:bg-[#1a1a1a] transition">
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if log.status_sent? %>
                    <span class="px-3 py-1 bg-emerald-500/10 text-emerald-400 rounded-full text-xs font-medium">
                      ✓ Sent
                    </span>
                  <% elsif log.status_failed? %>
                    <span class="px-3 py-1 bg-red-500/10 text-red-400 rounded-full text-xs font-medium">
                      ✗ Failed
                    </span>
                  <% elsif log.status_pending? %>
                    <span class="px-3 py-1 bg-yellow-500/10 text-yellow-400 rounded-full text-xs font-medium">
                      ⏳ Pending
                    </span>
                  <% else %>
                    <span class="px-3 py-1 bg-gray-500/10 text-gray-400 rounded-full text-xs font-medium">
                      <%= log.status.titleize %>
                    </span>
                  <% end %>
                </td>
                <td class="px-6 py-4">
                  <div class="text-sm text-white"><%= log.to_address %></div>
                  <div class="text-xs text-gray-500">From: <%= log.from_address %></div>
                </td>
                <td class="px-6 py-4">
                  <div class="text-sm text-white"><%= log.subject %></div>
                </td>
                <td class="px-6 py-4">
                  <span class="px-2 py-1 bg-indigo-500/10 text-indigo-400 rounded text-xs font-mono">
                    <%= log.provider.upcase %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-300">
                    <%= log.sent_at ? log.sent_at.strftime('%b %d, %Y') : 'Not sent' %>
                  </div>
                  <div class="text-xs text-gray-500">
                    <%= log.sent_at ? log.sent_at.strftime('%H:%M:%S') : '' %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm">
                  <div class="flex items-center space-x-2">
                    <%= link_to admin_email_log_path(log), class: "text-indigo-400 hover:text-indigo-300" do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                      </svg>
                    <% end %>
                    
                    <%= button_to admin_email_log_path(log), method: :delete, data: { confirm: 'Delete this log?' }, class: "text-red-400 hover:text-red-300" do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                      </svg>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <% if @pagy.pages > 1 %>
        <div class="px-6 py-4 border-t border-[#2a2a2a] flex items-center justify-between">
          <div class="text-sm text-gray-400">
            Page <%= @pagy.page %> of <%= @pagy.pages %>
          </div>
          <div class="flex space-x-2">
            <% if @pagy.prev %>
              <%= link_to admin_email_logs_path(page: @pagy.prev), class: "px-3 py-1 border border-[#2a2a2a] hover:border-[#3a3a3a] text-gray-300 rounded" do %>
                Previous
              <% end %>
            <% end %>
            
            <% if @pagy.next %>
              <%= link_to admin_email_logs_path(page: @pagy.next), class: "px-3 py-1 border border-[#2a2a2a] hover:border-[#3a3a3a] text-gray-300 rounded" do %>
                Next
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="px-6 py-12 text-center">
        <svg class="w-16 h-16 text-gray-600 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
        </svg>
        <h3 class="text-lg font-semibold text-white mb-2">No Email Logs</h3>
        <p class="text-gray-400 mb-4">No emails have been sent yet or logging is disabled.</p>
        <%= link_to 'Configure Email Settings', email_admin_settings_path, class: "inline-block px-6 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg transition" %>
      </div>
    <% end %>
  </div>
</div>

