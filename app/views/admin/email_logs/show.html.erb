<% content_for :page_title, "Email Log Details" %>

<div class="max-w-5xl mx-auto">
  <div class="mb-6">
    <%= link_to admin_email_logs_path, class: "inline-flex items-center text-gray-400 hover:text-white transition mb-4" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      Back to Email Logs
    <% end %>
    
    <h1 class="text-2xl font-bold text-white mb-2">Email Log Details</h1>
    <p class="text-gray-400">Detailed information about this email</p>
  </div>

  <div class="space-y-6">
    <!-- Status Card -->
    <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-xl font-semibold text-white">Status</h2>
        <% if @email_log.status_sent? %>
          <span class="px-4 py-2 bg-emerald-500/10 text-emerald-400 rounded-full text-sm font-medium">
            ✓ Successfully Sent
          </span>
        <% elsif @email_log.status_failed? %>
          <span class="px-4 py-2 bg-red-500/10 text-red-400 rounded-full text-sm font-medium">
            ✗ Failed
          </span>
        <% elsif @email_log.status_pending? %>
          <span class="px-4 py-2 bg-yellow-500/10 text-yellow-400 rounded-full text-sm font-medium">
            ⏳ Pending
          </span>
        <% end %>
      </div>

      <div class="grid grid-cols-2 gap-6">
        <div>
          <p class="text-sm text-gray-400 mb-1">From</p>
          <p class="text-white font-mono text-sm"><%= @email_log.from_address %></p>
        </div>
        
        <div>
          <p class="text-sm text-gray-400 mb-1">To</p>
          <p class="text-white font-mono text-sm"><%= @email_log.to_address %></p>
        </div>
        
        <div>
          <p class="text-sm text-gray-400 mb-1">Provider</p>
          <p class="text-white">
            <span class="px-3 py-1 bg-indigo-500/10 text-indigo-400 rounded font-mono text-sm">
              <%= @email_log.provider.upcase %>
            </span>
          </p>
        </div>
        
        <div>
          <p class="text-sm text-gray-400 mb-1">Sent At</p>
          <p class="text-white">
            <%= @email_log.sent_at ? @email_log.sent_at.strftime('%B %d, %Y at %H:%M:%S %Z') : 'Not sent yet' %>
          </p>
        </div>
      </div>
    </div>

    <!-- Subject -->
    <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6">
      <h2 class="text-lg font-semibold text-white mb-3">Subject</h2>
      <p class="text-white"><%= @email_log.subject %></p>
    </div>

    <!-- Email Body -->
    <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-lg font-semibold text-white">Email Body</h2>
        <button onclick="toggleBodyView()" class="px-3 py-1 border border-[#2a2a2a] hover:border-[#3a3a3a] text-gray-300 hover:text-white rounded text-sm transition">
          <span id="view-toggle-text">View HTML</span>
        </button>
      </div>
      
      <!-- Raw View -->
      <div id="body-raw" class="bg-[#0a0a0a] rounded-lg p-4 overflow-auto max-h-96">
        <pre class="text-sm text-gray-300 whitespace-pre-wrap"><%= @email_log.body %></pre>
      </div>
      
      <!-- HTML View -->
      <div id="body-html" class="hidden bg-white rounded-lg overflow-auto max-h-96">
        <iframe srcdoc="<%= @email_log.body.to_s.gsub('"', '&quot;') %>" 
                class="w-full h-96 border-0"></iframe>
      </div>
    </div>

    <!-- Error Message (if failed) -->
    <% if @email_log.error_message.present? %>
      <div class="bg-red-500/10 border border-red-500/20 rounded-xl p-6">
        <h2 class="text-lg font-semibold text-red-400 mb-3 flex items-center">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          Error Message
        </h2>
        <p class="text-red-300 font-mono text-sm"><%= @email_log.error_message %></p>
      </div>
    <% end %>

    <!-- Metadata -->
    <% if @email_log.metadata.present? && @email_log.metadata.any? %>
      <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6">
        <h2 class="text-lg font-semibold text-white mb-4">Additional Information</h2>
        <div class="bg-[#0a0a0a] rounded-lg p-4">
          <pre class="text-sm text-gray-300"><%= JSON.pretty_generate(@email_log.metadata) %></pre>
        </div>
      </div>
    <% end %>

    <!-- Actions -->
    <div class="flex items-center justify-between">
      <%= link_to admin_email_logs_path, class: "px-6 py-2 border border-[#2a2a2a] hover:border-[#3a3a3a] text-gray-300 hover:text-white rounded-lg transition" do %>
        ← Back to Logs
      <% end %>
      
      <%= button_to admin_email_log_path(@email_log), 
          method: :delete,
          data: { confirm: 'Are you sure you want to delete this log?' },
          class: "px-6 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg transition" do %>
        Delete Log
      <% end %>
    </div>
  </div>
</div>

<script>
  function toggleBodyView() {
    const rawView = document.getElementById('body-raw');
    const htmlView = document.getElementById('body-html');
    const toggleText = document.getElementById('view-toggle-text');
    
    if (rawView.classList.contains('hidden')) {
      rawView.classList.remove('hidden');
      htmlView.classList.add('hidden');
      toggleText.textContent = 'View HTML';
    } else {
      rawView.classList.add('hidden');
      htmlView.classList.remove('hidden');
      toggleText.textContent = 'View Raw';
    }
  }
</script>






