<% content_for :page_title, "Login" %>

<div id="login-error" class="hidden bg-red-900/20 border border-red-500/50 text-red-400 px-4 py-3 rounded-lg text-sm mb-4">
</div>

<% if alert %>
  <div class="bg-red-900/20 border border-red-500/50 text-red-400 px-4 py-3 rounded-lg text-sm mb-4">
    <%= alert %>
  </div>
<% end %>

<% if notice %>
  <div class="bg-green-900/20 border border-green-500/50 text-green-400 px-4 py-3 rounded-lg text-sm mb-4">
    <%= notice %>
  </div>
<% end %>

<%= form_for(resource, as: resource_name, url: admin_user_session_path, html: { class: "space-y-6", id: "admin-login-form", "data-turbo": "false" }) do |f| %>

  <div class="space-y-4">
    <div>
      <label for="user_email" class="block text-sm font-medium text-secondary mb-2">
        Email Address
      </label>
      <%= f.email_field :email, 
          autofocus: true, 
          autocomplete: "email",
          class: "form-input w-full px-4 py-3 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
          placeholder: "Enter your email address",
          required: true %>
    </div>

    <div>
      <label for="user_password" class="block text-sm font-medium text-secondary mb-2">
        Password
      </label>
      <%= f.password_field :password, 
          autocomplete: "current-password",
          class: "form-input w-full px-4 py-3 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
          placeholder: "Enter your password",
          required: true %>
    </div>
  </div>

  <div class="flex items-center justify-between">
    <% if devise_mapping.rememberable? %>
      <div class="flex items-center">
        <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
        <label for="user_remember_me" class="ml-2 block text-sm text-secondary">
          Remember me
        </label>
      </div>
    <% end %>

    <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Forgot password?", new_admin_user_password_path, 
          class: "text-sm text-blue-600 hover:text-blue-500 transition-colors" %>
    <% end %>
  </div>

  <div>
    <%= f.submit "Sign In", 
        class: "btn-primary w-full flex justify-center py-3 px-4 border border-transparent rounded-lg text-sm font-medium text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  </div>
<% end %>

<div class="mt-6 text-center">
  <p class="text-sm text-secondary">
    Don't have an account? 
    <%= link_to "Contact your administrator", "#", 
        class: "text-blue-600 hover:text-blue-500 transition-colors" %>
  </p>
</div>
