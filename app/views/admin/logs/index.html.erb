<% content_for :page_title, "Application Logs" %>
<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "admin/shared", "data-turbo-track": "reload" %>
<% end %>

<div class="max-w-7xl mx-auto">
  <!-- Header -->
  <div class="flex items-center justify-between mb-8">
    <div>
      <h1 class="text-2xl font-bold text-white mb-2">Application Logs</h1>
      <p class="text-gray-400">Real-time log viewer for development and debugging</p>
    </div>
    
    <div class="flex items-center gap-3">
      <!-- Log File Selector -->
      <%= form_with url: admin_logs_path, method: :get, class: "flex items-center gap-2" do |f| %>
        <%= f.select :file,
            options_for_select(@log_files.map { |lf| [lf[:name], lf[:name]] }, @current_log),
            {},
            class: "px-4 py-2 bg-[#0a0a0a] border border-[#2a2a2a] text-white rounded-lg focus:border-indigo-500",
            onchange: "this.form.submit()" %>
      <% end %>
      
      <%= link_to admin_download_logs_path(file: @current_log), class: "flex items-center gap-2 px-4 py-2 bg-green-600 hover:bg-green-700 text-white rounded-lg transition" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
        </svg>
        <span>Download</span>
      <% end %>
    </div>
  </div>

  <!-- Stats Cards -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
    <% @log_files.first(4).each do |log_file| %>
      <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6 <%= 'ring-2 ring-indigo-500' if log_file[:name] == @current_log %>">
        <div class="flex items-center justify-between">
          <div class="flex-1">
            <p class="text-sm text-gray-400 mb-1"><%= log_file[:name].titleize %></p>
            <p class="text-2xl font-bold text-white"><%= number_to_human_size(log_file[:size]) %></p>
            <p class="text-xs text-gray-500 mt-1">Modified <%= time_ago_in_words(log_file[:modified]) %> ago</p>
          </div>
          <% if log_file[:name] == @current_log %>
            <div class="w-3 h-3 bg-green-400 rounded-full animate-pulse"></div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Log Viewer -->
  <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl overflow-hidden"
       data-controller="log-viewer"
       data-log-viewer-file-value="<%= @current_log %>">
    
    <!-- Toolbar -->
    <div class="bg-[#0a0a0a] border-b border-[#2a2a2a] p-4">
      <div class="flex items-center justify-between flex-wrap gap-4">
        <!-- Left Side -->
        <div class="flex items-center gap-3">
          <!-- Status -->
          <div class="flex items-center gap-2">
            <div class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></div>
            <span data-log-viewer-target="status" class="text-sm text-green-400 font-medium">Connected</span>
          </div>
          
          <!-- Separator -->
          <div class="w-px h-6 bg-[#2a2a2a]"></div>
          
          <!-- Controls -->
          <button data-action="click->log-viewer#togglePause"
                  class="px-3 py-1.5 bg-yellow-600 hover:bg-yellow-700 text-white text-sm rounded transition">
            ‚è∏ Pause
          </button>
          
          <button data-action="click->log-viewer#toggleAutoScroll"
                  class="px-3 py-1.5 bg-indigo-600 hover:bg-indigo-700 text-white text-sm rounded transition">
            ‚¨á Auto-scroll
          </button>
          
          <button data-action="click->log-viewer#scrollToTop"
                  class="px-3 py-1.5 bg-gray-700 hover:bg-gray-600 text-white text-sm rounded transition">
            ‚¨Ü Top
          </button>
          
          <button data-action="click->log-viewer#scrollToBottom"
                  class="px-3 py-1.5 bg-gray-700 hover:bg-gray-600 text-white text-sm rounded transition">
            ‚¨á Bottom
          </button>
          
          <button data-action="click->log-viewer#clear"
                  class="px-3 py-1.5 bg-red-600 hover:bg-red-700 text-white text-sm rounded transition">
            üóë Clear
          </button>
        </div>

        <!-- Right Side -->
        <div class="flex items-center gap-3">
          <!-- Search -->
          <div class="flex items-center gap-2">
            <input type="text"
                   placeholder="Search logs..."
                   data-log-viewer-target="search"
                   data-action="input->log-viewer#search"
                   class="px-3 py-1.5 bg-[#1a1a1a] border border-[#2a2a2a] text-white text-sm rounded focus:border-indigo-500 w-64">
            
            <button data-action="click->log-viewer#copyToClipboard"
                    class="px-3 py-1.5 bg-gray-700 hover:bg-gray-600 text-white text-sm rounded transition"
                    title="Copy all logs">
              üìã Copy
            </button>
          </div>
          
          <!-- Actions Dropdown -->
          <div class="relative">
            <%= link_to clear_logs_file_path(@current_log), 
                data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to clear this log file? This cannot be undone." },
                class: "px-3 py-1.5 bg-red-600 hover:bg-red-700 text-white text-sm rounded transition" do %>
              Clear File
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Log Output -->
    <div class="relative">
      <div data-log-viewer-target="output"
           class="bg-black text-gray-300 p-4 overflow-y-auto overflow-x-auto"
           style="height: 600px; font-family: 'Monaco', 'Menlo', 'Consolas', monospace;">
        <!-- Logs will be streamed here -->
        <div class="text-center text-gray-500 py-8">
          <div class="animate-spin inline-block w-8 h-8 border-4 border-current border-t-transparent text-indigo-400 rounded-full mb-4"></div>
          <p>Connecting to log stream...</p>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <div class="bg-[#0a0a0a] border-t border-[#2a2a2a] px-4 py-3">
      <div class="flex items-center justify-between text-xs text-gray-500">
        <div>
          <span class="font-mono"><%= @current_log %>.log</span>
          <span class="mx-2">‚Ä¢</span>
          <span>Real-time streaming</span>
        </div>
        <div class="flex items-center gap-4">
          <span>Press <kbd class="px-2 py-1 bg-[#1a1a1a] rounded">‚åò + F</kbd> to search</span>
          <span>Max 1000 lines in memory</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Log Level Legend -->
  <div class="mt-6 bg-[#111111] border border-[#2a2a2a] rounded-xl p-6">
    <h3 class="text-white font-semibold mb-4">Log Level Colors</h3>
    <div class="grid grid-cols-2 md:grid-cols-5 gap-4">
      <div class="flex items-center gap-2">
        <span class="text-gray-400 font-mono">DEBUG</span>
        <span class="text-xs text-gray-500">‚Üí Gray</span>
      </div>
      <div class="flex items-center gap-2">
        <span class="text-blue-400 font-mono">INFO</span>
        <span class="text-xs text-gray-500">‚Üí Blue</span>
      </div>
      <div class="flex items-center gap-2">
        <span class="text-yellow-400 font-mono">WARN</span>
        <span class="text-xs text-gray-500">‚Üí Yellow</span>
      </div>
      <div class="flex items-center gap-2">
        <span class="text-red-400 font-mono font-bold">ERROR</span>
        <span class="text-xs text-gray-500">‚Üí Red</span>
      </div>
      <div class="flex items-center gap-2">
        <span class="text-red-600 font-mono font-bold">FATAL</span>
        <span class="text-xs text-gray-500">‚Üí Dark Red</span>
      </div>
    </div>
  </div>

  <!-- Tips -->
  <div class="mt-6 bg-blue-900/20 border border-blue-500/30 rounded-xl p-6">
    <div class="flex gap-4">
      <div class="flex-shrink-0">
        <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>
      <div class="flex-1">
        <h4 class="text-blue-300 font-semibold mb-2">Tips</h4>
        <ul class="text-blue-200 text-sm space-y-1">
          <li>‚Ä¢ Logs stream in real-time automatically</li>
          <li>‚Ä¢ Use Pause to stop streaming and review specific errors</li>
          <li>‚Ä¢ Search is case-insensitive and highlights matches</li>
          <li>‚Ä¢ Download full log files for offline analysis</li>
          <li>‚Ä¢ Clear button only clears the viewer, not the file</li>
        </ul>
      </div>
    </div>
  </div>
</div>

