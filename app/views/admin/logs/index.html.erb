<% content_for :page_title, "Application Logs" %>
<% content_for :stylesheets do %>
<% end %>

<div class="max-w-7xl mx-auto">
  <!-- Header -->
  <div class="flex items-center justify-between mb-8">
    <div>
      <h1 class="text-2xl font-bold text-white mb-2">Application Logs</h1>
      <p class="text-gray-400">Real-time log viewer for development and debugging</p>
    </div>
    
    <div class="flex items-center gap-3">
      <!-- Log File Selector -->
      <%= form_with url: admin_logs_path, method: :get, class: "flex items-center gap-2" do |f| %>
        <%= f.select :file,
            options_for_select(@log_files.map { |lf| [lf[:name], lf[:name]] }, @current_log),
            {},
            class: "px-4 py-2 bg-[#0a0a0a] border border-[#2a2a2a] text-white rounded-lg focus:border-indigo-500",
            onchange: "this.form.submit()" %>
      <% end %>
      
      <%= link_to admin_download_logs_path(file: @current_log), class: "flex items-center gap-2 px-4 py-2 bg-green-600 hover:bg-green-700 text-white rounded-lg transition" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
        </svg>
        <span>Download</span>
      <% end %>
    </div>
  </div>

  <!-- Stats Cards -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
    <% @log_files.first(4).each do |log_file| %>
      <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6 <%= 'ring-2 ring-indigo-500' if log_file[:name] == @current_log %>">
        <div class="flex items-center justify-between">
          <div class="flex-1">
            <p class="text-sm text-gray-400 mb-1"><%= log_file[:name].titleize %></p>
            <p class="text-2xl font-bold text-white"><%= number_to_human_size(log_file[:size]) %></p>
            <p class="text-xs text-gray-500 mt-1">Modified <%= time_ago_in_words(log_file[:modified]) %> ago</p>
          </div>
          <% if log_file[:name] == @current_log %>
            <div class="w-3 h-3 bg-green-400 rounded-full animate-pulse"></div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Log Viewer -->
  <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl overflow-hidden">
    <!-- Header -->
    <div class="bg-[#0a0a0a] border-b border-[#2a2a2a] px-4 py-3">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-2">
          <div class="w-2 h-2 bg-green-400 rounded-full"></div>
          <span class="text-sm text-green-400 font-medium">Live Logs</span>
          <span class="text-xs text-gray-500 mx-2">â€¢</span>
          <span class="font-mono text-sm text-gray-300"><%= @current_log %>.log</span>
        </div>
        
        <div class="flex items-center gap-3">
          <%= link_to admin_clear_logs_file_path(@current_log), 
              data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to clear this log file? This cannot be undone." },
              class: "px-3 py-1.5 bg-red-600 hover:bg-red-700 text-white text-sm rounded transition" do %>
            Clear File
          <% end %>
        </div>
      </div>
    </div>

    <!-- Logster iframe -->
    <div class="relative" style="height: 600px;">
      <iframe src="/logs"
              class="w-full h-full border-0"
              title="Log Viewer"
              style="background: #000;">
      </iframe>
    </div>

    <!-- Footer -->
    <div class="bg-[#0a0a0a] border-t border-[#2a2a2a] px-4 py-3">
      <div class="flex items-center justify-between text-xs text-gray-500">
        <div>
          <span>Powered by Logster</span>
        </div>
        <div class="flex items-center gap-4">
          <span>Real-time log monitoring</span>
          <span>Search & filter enabled</span>
        </div>
      </div>
    </div>
  </div>

  

