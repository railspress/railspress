<% content_for :page_title, "Add Custom Font" %>

<div class="max-w-4xl mx-auto">
  <div class="mb-8">
    <div class="flex items-center gap-3 mb-2">
      <%= link_to admin_fonts_path, class: "text-gray-400 hover:text-white" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
      <% end %>
      <h1 class="text-2xl font-bold text-white">Add Custom Font</h1>
    </div>
    <p class="text-gray-400">Add a new font to use across your site</p>
  </div>

  <%= render 'form', font: @font %>
</div>





