<% content_for :page_title, "Themes" %>

<div class="max-w-7xl mx-auto">
  <div class="flex items-center justify-between mb-8">
    <div>
      <h1 class="text-2xl font-bold text-white mb-2">Themes</h1>
      <p class="text-gray-400">Manage and customize your site's appearance</p>
    </div>
    <div class="flex items-center gap-3">
      <%= link_to root_path, { target: "_blank", class: "flex items-center space-x-2 px-4 py-2 border border-[#2a2a2a] hover:border-indigo-500 text-gray-300 hover:text-white rounded-lg transition" } do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
        </svg>
        <span>View Frontend</span>
      <% end %>
      <%= link_to new_admin_theme_path, { class: "flex items-center space-x-2 px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg transition" } do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        <span>Add Theme</span>
      <% end %>
    </div>
  </div>
  

  <!-- Active Theme -->
  <% if @active_theme %>
    <div class="mb-8">
      <h2 class="text-lg font-semibold text-white mb-4">Active Theme</h2>
      <div class="bg-[#111111] border-2 border-indigo-500/50 rounded-xl p-6">
        <div class="flex items-start gap-6">
          <!-- Theme Screenshot/Preview -->
          <div class="w-48 h-32 bg-gradient-to-br from-indigo-500/20 to-purple-500/20 rounded-lg overflow-hidden flex-shrink-0 relative">
            <%= image_tag screenshot_api_v1_theme_url(@active_theme.id, api_key: current_user.api_key), class: "w-full h-full object-cover", alt: "#{@active_theme.name} screenshot" %>
            
            <div class="absolute top-2 right-2">
              <span class="px-2 py-1 bg-emerald-500 text-white rounded-full text-xs font-semibold">
                Active
              </span>
            </div>
          </div>
          
          <!-- Theme Info -->
          <div class="flex-1">
          <h3 class="text-lg font-bold text-white mb-2"><%= @active_theme.name %></h3>
          <p class="text-gray-400 text-sm mb-4"><%= @active_theme.description %></p>
          
          <div class="flex items-center text-xs text-gray-500 mb-4">
            <span>By <%= @active_theme.author %></span>
            <span class="mx-2">•</span>
            <span>v<%= @active_theme.version %></span>
            <span class="mx-2">•</span>
            <%= link_to root_path, target: "_blank", class: "flex items-center text-indigo-400 hover:text-indigo-300 transition", title: "View Live Site" do %>
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
              </svg>
              <span>View Live</span>
            <% end %>
          </div>
          
          <div class="flex items-center gap-2">
            <span class="px-3 py-1 bg-emerald-500/10 text-emerald-400 rounded-full text-sm font-medium">
              ✓ Active
            </span>
            <%= link_to "Customize", load_customizer_admin_theme_path(@active_theme.id), class: "px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg transition" %>
          </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Available Themes -->
  <div>
    <h2 class="text-lg font-semibold text-white mb-4">Available Themes</h2>
    
    <% if @available_themes.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @available_themes.each do |theme| %>
          <% is_active = @active_theme && @active_theme.name.downcase == theme[:name].downcase %>
          <% unless is_active %>
            <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl overflow-hidden hover:border-[#3a3a3a] transition group">
            <!-- Theme Screenshot/Preview -->
            <div class="aspect-video bg-gradient-to-br from-indigo-500/20 to-purple-500/20 relative overflow-hidden">
              <%= image_tag screenshot_api_v1_theme_url(theme[:id], api_key: current_user.api_key), class: "w-full h-full object-cover", alt: "#{theme[:name]} screenshot" %>
              
             
            </div>
            
            <!-- Theme Info -->
            <div class="p-6">
              <h3 class="text-lg font-bold text-white mb-2"><%= theme[:display_name] %></h3>
              <p class="text-gray-400 text-sm mb-4 line-clamp-2"><%= theme[:description] %></p>
              
              <div class="flex items-center text-xs text-gray-500 mb-4">
                <span>By <%= theme[:author] %></span>
                <span class="mx-2">•</span>
                <span>v<%= theme[:version] %></span>
                <span class="mx-2">•</span>
                <%= link_to load_preview_admin_theme_path(theme[:id]), target: "_blank", class: "flex items-center text-indigo-400 hover:text-indigo-300 transition", title: "Preview Theme" do %>
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                  </svg>
                  <span>Preview</span>
                <% end %>
              </div>
              
              <div class="flex items-center gap-2">
                <%= button_to activate_admin_theme_path(theme[:id]), 
                    method: :patch,
                    class: "flex-1 px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg transition text-center font-medium",
                    data: { 
                      confirm: "Activate #{theme[:display_name]}? This will change your site's appearance immediately.",
                      turbo_confirm: "Activate #{theme[:display_name]}?"
                    },
                    form: { data: { turbo: "false" } } do %>
                  Activate
                <% end %>
                
                <%= link_to "Customize", load_customizer_admin_theme_path(theme[:id]), class: "px-4 py-2 border border-[#2a2a2a] hover:border-indigo-500 text-gray-300 hover:text-white rounded-lg transition" %>
              </div>
            </div>
          </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-12 text-center">
        <svg class="w-16 h-16 text-gray-600 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343"/>
        </svg>
        <h3 class="text-lg font-semibold text-white mb-2">No Themes Found</h3>
        <p class="text-gray-400 mb-4">Add themes to the app/themes directory to see them here.</p>
        <%= link_to "Creating themes", admin_api_docs_path, class: "text-indigo-400 hover:text-indigo-300 underline", target: "_blank" %>
        <%= link_to admin_api_docs_path, target: "_blank", class: "text-indigo-400 hover:text-indigo-300 inline-flex items-baseline gap-1" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
          </svg>
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Theme Development Info -->
  <div class="mt-8 bg-[#111111] border border-[#2a2a2a] rounded-xl p-6">
    <div class="flex items-start space-x-4">
      <div class="bg-indigo-500/10 p-3 rounded-lg">
        <svg class="w-6 h-6 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>
      <div class="flex-1">
        <h3 class="text-white font-semibold mb-2">Developing Themes</h3>
        <p class="text-gray-400 text-sm mb-3">
            <%= link_to "Creating themes", admin_api_docs_path, class: "text-indigo-400 hover:text-indigo-300 underline", target: "_blank" %> in RailsPress is easy
            
            <%= link_to admin_api_docs_path, target: "_blank", class: "text-indigo-400 hover:text-indigo-300 inline-flex items-baseline gap-1" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
            </svg>
            <% end %>
          
        </p>
      </div>
    </div>
  </div>
</div>
