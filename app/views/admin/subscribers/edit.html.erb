<% content_for :page_title, "Edit Subscriber" %>

<div class="max-w-3xl mx-auto">
  <div class="mb-8">
    <h1 class="text-2xl font-bold text-white mb-2">Edit Subscriber</h1>
    <p class="text-gray-400">Update subscriber information</p>
  </div>

  <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6 mb-6">
    <%= render "form", subscriber: @subscriber %>
  </div>

  <% if @subscriber.versions.any? %>
    <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6">
      <h3 class="text-white font-semibold mb-4">Change History</h3>
      <div class="space-y-2">
        <% @subscriber.versions.last(5).reverse.each do |version| %>
          <div class="flex items-center justify-between text-sm p-2 bg-[#0a0a0a] rounded">
            <div class="text-gray-300">
              <span class="font-medium"><%= version.event.titleize %></span>
              <span class="text-gray-500 ml-2"><%= time_ago_in_words(version.created_at) %> ago</span>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>






