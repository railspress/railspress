<%# Shared admin table partial %>
<%# Usage: render 'admin/shared/admin_table', table_type: 'posts', data: @posts_data, columns: @columns, bulk_actions: @bulk_actions %>

<%= render 'admin/shared/admin_table_settings', 
    table_type: table_type, 
    columns: columns, 
    data: data, 
    search_placeholder: search_placeholder,
    bulk_actions: bulk_actions,
    status_options: defined?(status_options) ? status_options : [] %>

<div data-controller="admin-table">

  <!-- Search and Filter Bar -->
  <div class="mb-4 flex items-center justify-between bg-card border border-border rounded-lg p-4">
    <div class="flex items-center space-x-4">
      <!-- Search -->
      <div class="relative">
        <input type="text" 
               data-admin-table-target="search"
               placeholder="<%= search_placeholder || "Search #{table_type.pluralize}..." %>"
               class="bg-elevated border border-border text-primary rounded px-3 py-2 pl-10 text-sm w-64">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
          <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
          </svg>
        </div>
      </div>

      <!-- Status Filter -->
      <% if defined?(status_options) && status_options.any? %>
        <select data-admin-table-target="statusFilter"
                class="bg-elevated border border-border text-primary rounded px-3 py-2 text-sm">
          <option value="">All Statuses</option>
          <% status_options.each do |option| %>
            <option value="<%= option[:value] %>"><%= option[:label] %></option>
          <% end %>
        </select>
      <% end %>
    </div>

    <div class="flex items-center space-x-4">
      <select data-admin-table-target="bulkAction" 
              class="bg-elevated border border-border text-primary rounded px-3 py-2 text-sm opacity-50 cursor-not-allowed"
              disabled>
        <option value="">Bulk Actions</option>
        <% bulk_actions.each do |action| %>
          <option value="<%= action[:value] %>"><%= action[:label] %></option>
        <% end %>
      </select>
      
      <button data-admin-table-target="applyButton"
              class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded text-sm font-medium opacity-50 cursor-not-allowed"
              disabled>
        Apply
      </button>
    </div>
  </div>

  <!-- Table Container -->
  <div class="bg-card border border-border rounded-lg shadow">
    <!-- Table -->
    <div data-admin-table-target="table" id="<%= table_type %>-table"></div>
  </div>
</div>

