<%
  # AI SEO Panel Component
  # Usage: <%= render 'admin/shared/ai_seo_panel', content: @post %>
  
  plugin = Railspress::PluginSystem.get_plugin('ai_seo') rescue nil
  return unless plugin&.enabled?
  
  content_type = content.class.name.downcase
  content_id = content.id
%>

<div class="bg-gradient-to-br from-purple-900/20 to-blue-900/20 border-2 border-purple-500/30 rounded-xl p-6 mb-6">
  <div class="flex items-start justify-between mb-4">
    <div class="flex items-center gap-3">
      <div class="w-10 h-10 bg-gradient-to-br from-purple-500 to-blue-600 rounded-lg flex items-center justify-center">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
        </svg>
      </div>
      <div>
        <h3 class="text-lg font-semibold text-white">AI SEO Assistant</h3>
        <p class="text-sm text-gray-400">Generate optimized meta tags with AI</p>
      </div>
    </div>
    
    <span class="px-3 py-1 bg-purple-500/20 text-purple-400 text-xs font-medium rounded-full border border-purple-500/30">
      ‚ú® AI Powered
    </span>
  </div>

  <!-- Current SEO Status -->
  <div class="mb-4 p-4 bg-black/30 rounded-lg">
    <h4 class="text-sm font-semibold text-gray-300 mb-3">Current SEO Status</h4>
    <div class="grid grid-cols-2 gap-3 text-sm">
      <div class="flex items-center gap-2">
        <%= content.meta_title.present? ? '‚úÖ' : '‚ùå' %>
        <span class="text-gray-400">Meta Title</span>
      </div>
      <div class="flex items-center gap-2">
        <%= content.meta_description.present? ? '‚úÖ' : '‚ùå' %>
        <span class="text-gray-400">Meta Description</span>
      </div>
      <div class="flex items-center gap-2">
        <%= content.focus_keyphrase.present? ? '‚úÖ' : '‚ùå' %>
        <span class="text-gray-400">Focus Keyphrase</span>
      </div>
      <div class="flex items-center gap-2">
        <%= content.og_title.present? ? '‚úÖ' : '‚ùå' %>
        <span class="text-gray-400">Open Graph</span>
      </div>
    </div>
  </div>

  <!-- Actions -->
  <div class="flex gap-3">
    <button type="button" 
            onclick="generateAiSeo('<%= content_type %>', <%= content_id %>)"
            class="flex-1 px-4 py-3 bg-gradient-to-r from-purple-600 to-blue-600 hover:from-purple-700 hover:to-blue-700 text-white font-medium rounded-lg transition flex items-center justify-center gap-2">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
      </svg>
      Generate SEO with AI
    </button>
    
    <button type="button"
            onclick="showAiSeoInfo()"
            class="px-4 py-3 bg-gray-800 hover:bg-gray-700 text-gray-300 rounded-lg transition">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
    </button>
  </div>

  <!-- Status Message -->
  <div id="ai-seo-status" class="mt-4 hidden">
    <div class="p-3 rounded-lg bg-blue-500/20 border border-blue-500/30">
      <p class="text-sm text-blue-300"></p>
    </div>
  </div>
</div>

<script>
  function generateAiSeo(contentType, contentId) {
    const statusEl = document.getElementById('ai-seo-status');
    const statusText = statusEl.querySelector('p');
    
    // Show loading
    statusEl.classList.remove('hidden');
    statusEl.querySelector('div').className = 'p-3 rounded-lg bg-blue-500/20 border border-blue-500/30';
    statusText.textContent = 'üîÑ Generating SEO with AI... This may take a moment.';
    
    // Call API
    fetch('/api/v1/ai_seo/generate', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
      },
      body: JSON.stringify({
        content_type: contentType,
        content_id: contentId
      })
    })
    .then(response => response.json())
    .then(data => {
      if (data.success) {
        // Success
        statusEl.querySelector('div').className = 'p-3 rounded-lg bg-green-500/20 border border-green-500/30';
        statusText.textContent = '‚úÖ SEO generated successfully! Refresh the page to see updates.';
        
        // Auto-reload after 2 seconds
        setTimeout(() => {
          window.location.reload();
        }, 2000);
      } else {
        // Error
        statusEl.querySelector('div').className = 'p-3 rounded-lg bg-red-500/20 border border-red-500/30';
        statusText.textContent = '‚ùå ' + (data.message || 'Failed to generate SEO');
      }
    })
    .catch(error => {
      statusEl.querySelector('div').className = 'p-3 rounded-lg bg-red-500/20 border border-red-500/30';
      statusText.textContent = '‚ùå Network error: ' + error.message;
    });
  }
  
  function showAiSeoInfo() {
    const provider = '<%= plugin.get_setting("ai_provider", "openai").titleize rescue "OpenAI" %>';
    const model = '<%= plugin.get_setting("model", "gpt-3.5-turbo") rescue "gpt-3.5-turbo" %>';
    
    Swal.fire({
      title: 'AI SEO Assistant',
      html: `
        <div class="text-left space-y-3">
          <p class="text-sm text-gray-600 dark:text-gray-400">
            This feature uses AI to automatically generate optimized SEO meta tags for your content.
          </p>
          
          <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-4">
            <p class="text-xs font-semibold text-gray-700 dark:text-gray-300 mb-2">Configuration:</p>
            <ul class="text-xs text-gray-600 dark:text-gray-400 space-y-1">
              <li><strong>Provider:</strong> ${provider}</li>
              <li><strong>Model:</strong> ${model}</li>
              <li><strong>Auto-generate:</strong> On save & publish</li>
            </ul>
          </div>
          
          <p class="text-xs text-gray-500 dark:text-gray-500">
            Configure settings in <a href="/admin/plugins" class="text-blue-600 hover:underline">Plugins ‚Üí AI SEO ‚Üí Settings</a>
          </p>
        </div>
      `,
      icon: 'info',
      confirmButtonColor: '#8B5CF6'
    });
  }
</script>




