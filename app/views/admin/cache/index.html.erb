<% content_for :page_title, "Cache Settings" %>
<% content_for :stylesheets do %>
<% end %>

<div class="max-w-7xl mx-auto" data-controller="cache" data-cache-stats-url-value="<%= admin_cache_stats_path %>">
  <div class="mb-8">
    <h1 class="text-2xl font-bold text-white mb-2">Cache Management</h1>
    <p class="text-gray-400">Configure and manage Redis caching for better performance</p>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Left Section: Redis Cache Configuration -->
    <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6">
      <h2 class="text-lg font-semibold text-white mb-6">Redis Cache Configuration</h2>
      
      <%= form_with url: admin_cache_path, method: :patch, class: "space-y-6", data: { action: "submit->cache#submitForm" } do |form| %>
        <!-- Enable Redis Caching -->
        <div>
          <div class="flex items-center justify-between mb-2">
            <label class="text-white font-medium">Enable Redis Caching</label>
            <div class="relative">
              <%= form.hidden_field :enabled, value: "0" %>
              <div class="toggle-switch <%= 'active' if @cache_enabled %>" 
                   onclick="toggleRedisEnabled(this)">
                <div class="toggle-slider <%= 'active' if @cache_enabled %>"></div>
              </div>
            </div>
          </div>
          <p class="text-sm text-gray-400">Use Redis for application caching and sessions.</p>
        </div>

        <!-- Redis URL -->
        <div>
          <label class="block text-white font-medium mb-2">Redis URL</label>
              <%= form.text_field :url, 
                  value: @redis_url || 'redis://localhost:6379/0',
                  placeholder: "redis://localhost:6379/0",
                  class: "w-full px-4 py-2 bg-[#0a0a0a] border border-[#2a2a2a] rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
          <p class="text-sm text-gray-400 mt-1">Main Redis connection URL.</p>
        </div>

        <!-- Cache URL -->
        <div>
          <label class="block text-white font-medium mb-2">Cache URL</label>
              <%= form.text_field :cache_url, 
                  value: @cache_url || 'redis://localhost:6379/1',
                  placeholder: "redis://localhost:6379/1",
                  class: "w-full px-4 py-2 bg-[#0a0a0a] border border-[#2a2a2a] rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
          <p class="text-sm text-gray-400 mt-1">Redis database for caching (separate from sessions).</p>
        </div>

        <!-- Session URL -->
        <div>
          <label class="block text-white font-medium mb-2">Session URL</label>
              <%= form.text_field :session_url, 
                  value: @session_url || 'redis://localhost:6379/2',
                  placeholder: "redis://localhost:6379/2",
                  class: "w-full px-4 py-2 bg-[#0a0a0a] border border-[#2a2a2a] rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
          <p class="text-sm text-gray-400 mt-1">Redis database for sessions.</p>
        </div>

        <!-- Connection Settings -->
        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="block text-white font-medium mb-2">Connection Timeout (seconds)</label>
            <%= form.number_field :timeout, 
                value: @timeout || 5,
                class: "w-full px-4 py-2 bg-[#0a0a0a] border border-[#2a2a2a] rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
          </div>
          
          <div>
            <label class="block text-white font-medium mb-2">Connect Timeout (seconds)</label>
            <%= form.number_field :connect_timeout, 
                value: @connect_timeout || 5,
                class: "w-full px-4 py-2 bg-[#0a0a0a] border border-[#2a2a2a] rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
          </div>
        </div>

        <!-- Reconnection Settings -->
        <div class="grid grid-cols-1 gap-4">
          <div>
            <label class="block text-white font-medium mb-2">Reconnect Attempts</label>
            <%= form.number_field :reconnect_attempts, 
                value: @reconnect_attempts || 3,
                class: "w-full px-4 py-2 bg-[#0a0a0a] border border-[#2a2a2a] rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
            <p class="text-sm text-gray-400 mt-1">Note: reconnect_delay and reconnect_delay_max are not supported in Redis 5.x</p>
          </div>
        </div>

        <!-- Expiration Settings -->
        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="block text-white font-medium mb-2">Cache Expires In (hours)</label>
            <%= form.number_field :cache_expires_in, 
                value: @cache_expires_in || 1,
                class: "w-full px-4 py-2 bg-[#0a0a0a] border border-[#2a2a2a] rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
          </div>
          
          <div>
            <label class="block text-white font-medium mb-2">Session Expires In (hours)</label>
            <%= form.number_field :session_expires_in, 
                value: @session_expires_in || 24,
                class: "w-full px-4 py-2 bg-[#0a0a0a] border border-[#2a2a2a] rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
          </div>
        </div>

        <!-- Save Button -->
        <div class="pt-4">
          <%= form.submit "Save Redis Settings", 
              class: "w-full px-6 py-3 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-lg transition" %>
        </div>
      <% end %>
    </div>

    <!-- Right Section: Redis Status and Actions -->
    <div class="space-y-6">
      <!-- Redis Status -->
      <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6">
        <h2 class="text-lg font-semibold text-white mb-4">Redis Status</h2>
        
        <div class="space-y-4">
          <!-- Redis Connection -->
          <div class="flex items-center justify-between p-4 bg-[#0a0a0a] rounded-lg">
            <div class="flex items-center space-x-3">
              <div class="w-8 h-8 bg-gray-600 rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"/>
                </svg>
              </div>
              <div>
                <p class="text-white font-medium">Redis Connection</p>
                <p class="text-sm text-gray-400">
                  <%= (@cache_stats.present? && @cache_stats[:store_type] == 'redis' && !@cache_stats[:error]) ? 'Connected' : 'Not Available' %>
                </p>
              </div>
            </div>
            <div class="flex items-center space-x-2">
              <div class="w-3 h-3 rounded-full <%= (@cache_stats.present? && @cache_stats[:store_type] == 'redis' && !@cache_stats[:error]) ? 'bg-emerald-500' : 'bg-red-500' %>"></div>
              <span class="text-sm <%= (@cache_stats.present? && @cache_stats[:store_type] == 'redis' && !@cache_stats[:error]) ? 'text-emerald-400' : 'text-red-400' %>">
                <%= (@cache_stats.present? && @cache_stats[:store_type] == 'redis' && !@cache_stats[:error]) ? 'Connected' : 'Disconnected' %>
              </span>
            </div>
          </div>

          <!-- Memory Usage -->
          <div class="p-4 bg-[#0a0a0a] rounded-lg">
            <p class="text-gray-400 text-sm mb-1">Memory Usage</p>
            <p class="text-xl font-bold text-white"><%= @cache_stats[:memory_usage] || 'Unknown' %></p>
          </div>

          <!-- Connected Clients -->
          <div class="p-4 bg-[#0a0a0a] rounded-lg">
            <p class="text-gray-400 text-sm mb-1">Connected Clients</p>
            <p class="text-xl font-bold text-white"><%= @cache_stats[:connected_clients] || '0' %></p>
          </div>

          <!-- Cache Hit Rate -->
          <div class="p-4 bg-[#0a0a0a] rounded-lg">
            <p class="text-gray-400 text-sm mb-1">Cache Hit Rate</p>
            <p class="text-xl font-bold text-white">
              <% if @cache_stats[:hit_rate] %>
                <%= "#{(@cache_stats[:hit_rate].to_f * 100).round(1)}%" %>
              <% else %>
                0%
              <% end %>
            </p>
          </div>
        </div>
      </div>

      <!-- Cache Actions -->
      <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6">
        <h2 class="text-lg font-semibold text-white mb-4">Cache Actions</h2>
        
        <div class="space-y-3">
          <%= button_to admin_cache_test_connection_path, 
              method: :post,
              data: { 
                confirm: 'Test Redis connection?',
                action: 'click->cache#testConnection'
              },
              class: "w-full flex items-center justify-center px-4 py-2 bg-gray-600 hover:bg-gray-700 text-white rounded-lg transition" do %>
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zm0 4a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1V8zm8 0a1 1 0 011-1h4a1 1 0 011 1v2a1 1 0 01-1 1h-4a1 1 0 01-1-1V8zm0 4a1 1 0 011-1h4a1 1 0 011 1v2a1 1 0 01-1 1h-4a1 1 0 01-1-1v-2z" clip-rule="evenodd"/>
            </svg>
            <span>Test Redis Connection</span>
          <% end %>
          
          <%= button_to admin_cache_flush_path, 
              method: :post,
              data: { 
                confirm: 'Are you sure you want to flush all cache data?',
                action: 'click->cache#flushCache'
              },
              class: "w-full flex items-center justify-center px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg transition" do %>
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"/>
            </svg>
            <span>Flush All Cache</span>
          <% end %>
          
        </div>
      </div>

      <!-- Cache Statistics -->
      <% if @cache_stats.present? && @cache_stats[:store_type] == 'redis' %>
        <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6">
          <h2 class="text-lg font-semibold text-white mb-4">Cache Statistics</h2>
          
          <div class="space-y-3">
            <div class="flex justify-between items-center py-2 border-b border-[#2a2a2a]">
              <span class="text-gray-400">Total Keys</span>
              <span class="text-white font-medium"><%= @cache_stats[:total_keys] || '0' %></span>
            </div>
            
            <div class="flex justify-between items-center py-2 border-b border-[#2a2a2a]">
              <span class="text-gray-400">Cache Size</span>
              <span class="text-white font-medium"><%= @cache_stats[:memory_usage] || '0' %></span>
            </div>
            
            <div class="flex justify-between items-center py-2 border-b border-[#2a2a2a]">
              <span class="text-gray-400">Hit Rate</span>
              <span class="text-white font-medium">
                <% if @cache_stats[:hit_rate] %>
                  <%= "#{(@cache_stats[:hit_rate].to_f * 100).round(1)}%" %>
                <% else %>
                  0%
                <% end %>
              </span>
            </div>
            
            <div class="flex justify-between items-center py-2">
              <span class="text-gray-400">Uptime</span>
              <span class="text-white font-medium">
                <% if @cache_stats[:uptime] %>
                  <% uptime_seconds = @cache_stats[:uptime].to_i %>
                  <%= "#{uptime_seconds / 3600}h #{(uptime_seconds % 3600) / 60}m" %>
                <% else %>
                  0h 0m
                <% end %>
              </span>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
function toggleRedisEnabled(toggleElement) {
  const hiddenField = toggleElement.parentElement.querySelector('input[name="enabled"]');
  const isActive = toggleElement.classList.contains('active');
  
  if (isActive) {
    // Turn off
    toggleElement.classList.remove('active');
    toggleElement.querySelector('.toggle-slider').classList.remove('active');
    hiddenField.value = '0';
  } else {
    // Turn on
    toggleElement.classList.add('active');
    toggleElement.querySelector('.toggle-slider').classList.add('active');
    hiddenField.value = '1';
  }
}

</script>