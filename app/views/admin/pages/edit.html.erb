<% content_for :title, "Editing page" %>

<div class="flex gap-6">
  <!-- Main Content Area -->
  <div class="flex-1">
    <div class="flex items-center justify-between mb-6">
      <h1 class="text-2xl font-bold text-white">Editing page</h1>
      
      <!-- Toolbar Blocks -->
      <div class="flex items-center gap-2">
        <%= render_plugin_blocks :page, position: :toolbar, record: @page %>
        
        <%= link_to "Back to pages", admin_pages_path, class: "inline-flex items-center gap-2 px-3 py-1.5 bg-[#1a1a1a] hover:bg-[#2a2a2a] text-gray-300 hover:text-white text-sm rounded-lg transition border border-[#2a2a2a]" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          <span>Back</span>
        <% end %>
      </div>
    </div>

    <%= render "form", page: @page %>
  </div>

  <!-- Sidebar for Plugin Blocks -->
  <div class="w-80 flex-shrink-0">
    <%= render_plugin_blocks :page, position: :sidebar, record: @page %>
    
    <!-- Default Publish Box -->
    <div class="bg-[#1a1a1a] border border-[#2a2a2a] rounded-lg p-4 mb-4">
      <h3 class="text-sm font-semibold text-white mb-3">Publish</h3>
      <div class="space-y-2 text-sm text-gray-400">
        <div class="flex justify-between">
          <span>Status:</span>
          <span class="text-white"><%= @page.status.titleize %></span>
        </div>
        <div class="flex justify-between">
          <span>Author:</span>
          <span class="text-white"><%= @page.user.name || @page.user.email %></span>
        </div>
        <% if @page.published_at %>
          <div class="flex justify-between">
            <span>Published:</span>
            <span class="text-white"><%= @page.published_at.strftime("%b %d, %Y") %></span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
