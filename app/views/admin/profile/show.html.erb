<% content_for :page_title, "My Profile" %>

<div class="max-w-5xl mx-auto">
  <!-- Header -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-white mb-2">My Profile</h1>
    <p class="text-gray-400">Manage your account information and settings</p>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Profile Card -->
    <div class="lg:col-span-1">
      <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6 text-center">
        <!-- Avatar -->
        <div class="mb-4">
          <% if @user.avatar_url.present? %>
            <img src="<%= @user.avatar_url %>" alt="<%= @user.name || @user.email %>" class="w-32 h-32 rounded-full mx-auto object-cover border-4 border-[#2a2a2a]">
          <% else %>
            <div class="w-32 h-32 rounded-full mx-auto bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center text-4xl font-bold text-white">
              <%= (@user.name || @user.email).first.upcase %>
            </div>
          <% end %>
        </div>
        
        <!-- User Info -->
        <h2 class="text-xl font-bold text-white mb-1"><%= @user.name || 'User' %></h2>
        <p class="text-sm text-gray-400 mb-3"><%= @user.email %></p>
        <span class="inline-block px-3 py-1 bg-indigo-500/20 text-indigo-400 text-xs font-medium rounded-full border border-indigo-500/30">
          <%= @user.role.titleize %>
        </span>
        
        <!-- Stats -->
        <div class="mt-6 pt-6 border-t border-[#2a2a2a]">
          <div class="grid grid-cols-2 gap-4 text-sm">
            <div>
              <p class="text-2xl font-bold text-white"><%= @user.posts.count %></p>
              <p class="text-gray-500">Posts</p>
            </div>
            <div>
              <p class="text-2xl font-bold text-white"><%= @user.pages.count %></p>
              <p class="text-gray-500">Pages</p>
            </div>
          </div>
        </div>
        
        <!-- Edit Button -->
        <div class="mt-6">
          <%= link_to edit_admin_profile_path, class: "block w-full px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg transition font-medium" do %>
            Edit Profile
          <% end %>
        </div>
      </div>
    </div>

    <!-- Profile Details -->
    <div class="lg:col-span-2 space-y-6">
      <!-- About -->
      <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6">
        <h3 class="text-lg font-semibold text-white mb-4">About</h3>
        <% if @user.bio.present? %>
          <p class="text-gray-300 leading-relaxed"><%= @user.bio %></p>
        <% else %>
          <p class="text-gray-500 italic">No bio added yet. <%= link_to 'Add one?', edit_admin_profile_path, class: 'text-indigo-400 hover:text-indigo-300' %></p>
        <% end %>
      </div>

      <!-- Contact Information -->
      <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6">
        <h3 class="text-lg font-semibold text-white mb-4">Contact Information</h3>
        <dl class="space-y-4">
          <div class="flex justify-between items-center pb-3 border-b border-[#2a2a2a]">
            <dt class="text-sm text-gray-400 flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
              Email:
            </dt>
            <dd class="text-sm font-medium text-white"><%= @user.email %></dd>
          </div>
          
          <div class="flex justify-between items-center pb-3 border-b border-[#2a2a2a]">
            <dt class="text-sm text-gray-400 flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
              Phone:
            </dt>
            <dd class="text-sm font-medium text-white"><%= @user.phone.presence || 'Not set' %></dd>
          </div>
          
          <div class="flex justify-between items-center pb-3 border-b border-[#2a2a2a]">
            <dt class="text-sm text-gray-400 flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              Location:
            </dt>
            <dd class="text-sm font-medium text-white"><%= @user.location.presence || 'Not set' %></dd>
          </div>
          
          <div class="flex justify-between items-center">
            <dt class="text-sm text-gray-400 flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
              </svg>
              Website:
            </dt>
            <dd class="text-sm font-medium text-white">
              <% if @user.website.present? %>
                <%= link_to @user.website, @user.website, target: '_blank', class: 'text-indigo-400 hover:text-indigo-300 hover:underline' %>
              <% else %>
                Not set
              <% end %>
            </dd>
          </div>
        </dl>
      </div>

      <!-- Account Details -->
      <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6">
        <h3 class="text-lg font-semibold text-white mb-4">Account Details</h3>
        <dl class="space-y-4">
          <div class="flex justify-between items-center pb-3 border-b border-[#2a2a2a]">
            <dt class="text-sm text-gray-400">Member Since:</dt>
            <dd class="text-sm font-medium text-white"><%= @user.created_at.strftime('%B %d, %Y') %></dd>
          </div>
          <div class="flex justify-between items-center pb-3 border-b border-[#2a2a2a]">
            <dt class="text-sm text-gray-400">Last Sign In:</dt>
            <dd class="text-sm font-medium text-white"><%= @user.last_sign_in_at&.strftime('%B %d, %Y at %H:%M') || 'Just now' %></dd>
          </div>
          <div class="flex justify-between items-center">
            <dt class="text-sm text-gray-400">Two-Factor Auth:</dt>
            <dd>
              <% if @user.two_factor_enabled %>
                <span class="px-2 py-1 bg-green-500/20 text-green-400 text-xs font-medium rounded-full">Enabled</span>
              <% else %>
                <span class="px-2 py-1 bg-gray-500/20 text-gray-400 text-xs font-medium rounded-full">Disabled</span>
              <% end %>
            </dd>
          </div>
        </dl>
      </div>

      <!-- Quick Actions -->
      <div class="flex gap-3">
        <%= link_to edit_admin_profile_path, class: "flex-1 px-4 py-3 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg transition text-center font-medium" do %>
          Edit Profile
        <% end %>
        <%= link_to admin_security_path, class: "flex-1 px-4 py-3 border border-[#2a2a2a] hover:border-indigo-500 text-gray-300 hover:text-white rounded-lg transition text-center font-medium" do %>
          Security Settings
        <% end %>
      </div>
    </div>
  </div>
</div>








