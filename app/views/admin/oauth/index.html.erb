          <%= label_tag 'twitter_redirect_uri', 'Redirect URI', class: 'block text-sm font-medium text-gray-300 mb-2' %>
          <%= text_field_tag 'twitter_redirect_uri', @settings[:twitter_redirect_uri],
              placeholder: 'https://yoursite.com/auth/twitter/callback',
              class: 'w-full px-4 py-2 bg-[#0a0a0a] border border-[#2a2a2a] text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500' %>
