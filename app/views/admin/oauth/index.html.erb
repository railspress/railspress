          <%= text_field_tag 'github_redirect_uri', @settings[:github_redirect_uri],
              placeholder: 'https://yoursite.com/auth/github/callback',
              class: 'w-full px-4 py-2 bg-[#0a0a0a] border border-[#2a2a2a] text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500' %>
        </div>
      </div>
    </div>

    <!-- Facebook OAuth -->
    <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold text-white">Facebook</h3>
        <div class="flex items-center space-x-3">
          <button type="button" onclick="testConnection('facebook')" class="px-3 py-1 text-xs bg-blue-600 hover:bg-blue-700 text-white rounded transition-colors">
            Test Connection
          </button>
          <label class="flex items-center space-x-2 cursor-pointer">
            <%= check_box_tag 'settings[facebook_oauth_enabled]', '1', @settings[:facebook_enabled],
                class: 'w-4 h-4 text-indigo-600 bg-[#0a0a0a] border-gray-600 focus:ring-indigo-500' %>
            <span class="text-gray-300 text-sm">Enabled</span>
          </label>
        </div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <%= label_tag 'facebook_app_id', 'App ID', class: 'block text-sm font-medium text-gray-300 mb-2' %>
          <%= text_field_tag 'facebook_app_id', @settings[:facebook_app_id],
              placeholder: '1234567890123456',
              class: 'w-full px-4 py-2 bg-[#0a0a0a] border border-[#2a2a2a] text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500' %>
        </div>
        
        <div>
          <%= label_tag 'facebook_app_secret', 'App Secret', class: 'block text-sm font-medium text-gray-300 mb-2' %>
          <div class="relative">
            <%= password_field_tag 'facebook_app_secret', @settings[:facebook_app_secret],
                placeholder: 'Enter your app secret',
                class: 'w-full px-4 py-2 pr-10 bg-[#0a0a0a] border border-[#2a2a2a] text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500' %>
            <button type="button" onclick="togglePasswordVisibility('facebook_app_secret')" class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-white">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
              </svg>
            </button>
          </div>
        </div>
        
        <div class="md:col-span-2">
          <%= label_tag 'facebook_redirect_uri', 'Redirect URI', class: 'block text-sm font-medium text-gray-300 mb-2' %>
          <%= text_field_tag 'facebook_redirect_uri', @settings[:facebook_redirect_uri],
              placeholder: 'https://yoursite.com/auth/facebook/callback',
              class: 'w-full px-4 py-2 bg-[#0a0a0a] border border-[#2a2a2a] text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500' %>
        </div>
      </div>
    </div>

    <!-- Twitter OAuth -->
    <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold text-white">Twitter</h3>
        <div class="flex items-center space-x-3">
          <button type="button" onclick="testConnection('twitter')" class="px-3 py-1 text-xs bg-blue-600 hover:bg-blue-700 text-white rounded transition-colors">
            Test Connection
          </button>
          <label class="flex items-center space-x-2 cursor-pointer">
            <%= check_box_tag 'settings[twitter_oauth_enabled]', '1', @settings[:twitter_enabled],
                class: 'w-4 h-4 text-indigo-600 bg-[#0a0a0a] border-gray-600 focus:ring-indigo-500' %>
            <span class="text-gray-300 text-sm">Enabled</span>
