  </div>

  <%= form_with url: admin_oauth_settings_path, method: :patch, class: "space-y-8" do |f| %>
    
    <!-- Google OAuth -->
    <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold text-white">Google</h3>
        <div class="flex items-center space-x-3">
          <button type="button" onclick="testConnection('google')" class="px-3 py-1 text-xs bg-blue-600 hover:bg-blue-700 text-white rounded transition-colors">
            Test Connection
          </button>
          <label class="flex items-center space-x-2 cursor-pointer">
            <%= check_box_tag 'settings[google_oauth_enabled]', '1', @settings[:google_enabled],
                class: 'w-4 h-4 text-indigo-600 bg-[#0a0a0a] border-gray-600 focus:ring-indigo-500' %>
            <span class="text-gray-300 text-sm">Enabled</span>
          </label>
        </div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <%= label_tag 'google_client_id', 'Client ID', class: 'block text-sm font-medium text-gray-300 mb-2' %>
          <%= text_field_tag 'google_client_id', @settings[:google_client_id],
              placeholder: '123456789-abcdefghijklmnop.apps.googleusercontent.com',
              class: 'w-full px-4 py-2 bg-[#0a0a0a] border border-[#2a2a2a] text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500' %>
        </div>
        
        <div>
          <%= label_tag 'google_client_secret', 'Client Secret', class: 'block text-sm font-medium text-gray-300 mb-2' %>
          <div class="relative">
            <%= password_field_tag 'google_client_secret', @settings[:google_client_secret],
                placeholder: 'Enter your client secret',
                class: 'w-full px-4 py-2 pr-10 bg-[#0a0a0a] border border-[#2a2a2a] text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500' %>
            <button type="button" onclick="togglePasswordVisibility('google_client_secret')" class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-white">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
              </svg>
            </button>
          </div>
        </div>
        
        <div>
          <%= label_tag 'google_redirect_uri', 'Redirect URI', class: 'block text-sm font-medium text-gray-300 mb-2' %>
          <%= text_field_tag 'google_redirect_uri', @settings[:google_redirect_uri],
              placeholder: 'https://yoursite.com/auth/google/callback',
              class: 'w-full px-4 py-2 bg-[#0a0a0a] border border-[#2a2a2a] text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500' %>
        </div>
        
        <div>
          <%= label_tag 'google_tenant', 'Tenant', class: 'block text-sm font-medium text-gray-300 mb-2' %>
          <div class="flex items-center space-x-2">
            <%= text_field_tag 'google_tenant', @settings[:google_tenant],
                placeholder: 'Optional: your-tenant.com',
                class: 'w-full px-4 py-2 bg-[#0a0a0a] border border-[#2a2a2a] text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500' %>
            <div class="relative group">
              <div class="w-5 h-5 bg-yellow-500 rounded-full flex items-center justify-center cursor-help">
                <span class="text-black text-xs font-bold">i</span>
              </div>
              <div class="absolute bottom-full left-1/2 transform -translate-x-1/2 mb-2 px-3 py-2 bg-gray-800 text-white text-xs rounded-lg opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none whitespace-nowrap z-10">
                For Google Workspace domains
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

