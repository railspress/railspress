<% content_for :page_title, @channel.name %>
<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "admin/shared", "data-turbo-track": "reload" %>
<% end %>

<div class="max-w-7xl mx-auto">
  <!-- Header -->
  <div class="flex items-center justify-between mb-6">
    <div>
      <h1 class="text-2xl font-bold text-white mb-2"><%= @channel.name %></h1>
      <p class="text-gray-400">Channel details and override management</p>
    </div>
    <div class="flex items-center gap-3">
      <%= link_to admin_system_channel_channel_overrides_path(@channel), class: "flex items-center gap-2 px-4 py-2 border border-[#2a2a2a] hover:border-indigo-500 text-gray-300 hover:text-white rounded-lg transition" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>
        Manage Overrides
      <% end %>
      <%= link_to edit_admin_system_channel_path(@channel), class: "flex items-center gap-2 px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg transition font-medium" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
        Edit Channel
      <% end %>
    </div>
  </div>

  <!-- Channel Info -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-6">
    <!-- Basic Info -->
    <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6">
      <h3 class="text-lg font-semibold text-white mb-4">Channel Information</h3>
      <div class="space-y-4">
        <div>
          <label class="text-sm text-gray-400">Name</label>
          <p class="text-white font-medium"><%= @channel.name %></p>
        </div>
        <div>
          <label class="text-sm text-gray-400">Slug</label>
          <p class="text-white font-mono text-sm"><%= @channel.slug %></p>
        </div>
        <div>
          <label class="text-sm text-gray-400">Domain</label>
          <p class="text-white"><%= @channel.domain.present? ? @channel.domain : 'Not set' %></p>
        </div>
        <div>
          <label class="text-sm text-gray-400">Locale</label>
          <p class="text-white"><%= @channel.locale.upcase %></p>
        </div>
        <div>
          <label class="text-sm text-gray-400">Created</label>
          <p class="text-white"><%= @channel.created_at.strftime("%B %d, %Y") %></p>
        </div>
      </div>
    </div>

    <!-- Content Stats -->
    <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6">
      <h3 class="text-lg font-semibold text-white mb-4">Content Distribution</h3>
      <div class="space-y-4">
        <div class="flex items-center justify-between">
          <span class="text-gray-400">Posts</span>
          <span class="text-white font-semibold"><%= @channel.posts.count %></span>
        </div>
        <div class="flex items-center justify-between">
          <span class="text-gray-400">Pages</span>
          <span class="text-white font-semibold"><%= @channel.pages.count %></span>
        </div>
        <div class="flex items-center justify-between">
          <span class="text-gray-400">Media</span>
          <span class="text-white font-semibold"><%= @channel.media.count %></span>
        </div>
        <div class="flex items-center justify-between">
          <span class="text-gray-400">Total Items</span>
          <span class="text-white font-semibold"><%= @channel.posts.count + @channel.pages.count + @channel.media.count %></span>
        </div>
      </div>
    </div>

    <!-- Override Stats -->
    <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6">
      <h3 class="text-lg font-semibold text-white mb-4">Override Statistics</h3>
      <div class="space-y-4">
        <div class="flex items-center justify-between">
          <span class="text-gray-400">Total Overrides</span>
          <span class="text-white font-semibold"><%= @channel.channel_overrides.count %></span>
        </div>
        <div class="flex items-center justify-between">
          <span class="text-gray-400">Active Overrides</span>
          <span class="text-white font-semibold"><%= @channel.channel_overrides.enabled.count %></span>
        </div>
        <div class="flex items-center justify-between">
          <span class="text-gray-400">Exclusions</span>
          <span class="text-white font-semibold"><%= @channel.channel_overrides.exclusions.count %></span>
        </div>
        <div class="flex items-center justify-between">
          <span class="text-gray-400">Data Overrides</span>
          <span class="text-white font-semibold"><%= @channel.channel_overrides.overrides.count %></span>
        </div>
      </div>
    </div>
  </div>

  <!-- Recent Overrides -->
  <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6">
    <div class="flex items-center justify-between mb-6">
      <h3 class="text-lg font-semibold text-white">Recent Overrides</h3>
      <%= link_to admin_system_channel_channel_overrides_path(@channel), class: "text-indigo-400 hover:text-indigo-300 text-sm font-medium" do %>
        View All Overrides
      <% end %>
    </div>

    <% if @overrides.any? %>
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead>
            <tr class="border-b border-[#2a2a2a]">
              <th class="text-left text-gray-400 text-sm font-medium py-3">Resource</th>
              <th class="text-left text-gray-400 text-sm font-medium py-3">Type</th>
              <th class="text-left text-gray-400 text-sm font-medium py-3">Path</th>
              <th class="text-left text-gray-400 text-sm font-medium py-3">Kind</th>
              <th class="text-left text-gray-400 text-sm font-medium py-3">Status</th>
              <th class="text-left text-gray-400 text-sm font-medium py-3">Updated</th>
            </tr>
          </thead>
          <tbody>
            <% @overrides.limit(10).each do |override| %>
              <tr class="border-b border-[#2a2a2a]/50 hover:bg-[#0a0a0a]/50">
                <td class="py-3">
                  <div class="text-white text-sm">
                    <%= override.resource_name %>
                  </div>
                  <div class="text-gray-500 text-xs">
                    ID: <%= override.resource_id %>
                  </div>
                </td>
                <td class="py-3">
                  <span class="px-2 py-1 bg-blue-500/10 text-blue-400 text-xs rounded">
                    <%= override.resource_type %>
                  </span>
                </td>
                <td class="py-3">
                  <code class="text-gray-300 text-sm"><%= override.path %></code>
                </td>
                <td class="py-3">
                  <% if override.is_override? %>
                    <span class="px-2 py-1 bg-green-500/10 text-green-400 text-xs rounded">Override</span>
                  <% else %>
                    <span class="px-2 py-1 bg-red-500/10 text-red-400 text-xs rounded">Exclude</span>
                  <% end %>
                </td>
                <td class="py-3">
                  <% if override.enabled? %>
                    <span class="px-2 py-1 bg-green-500/10 text-green-400 text-xs rounded">Active</span>
                  <% else %>
                    <span class="px-2 py-1 bg-gray-500/10 text-gray-400 text-xs rounded">Disabled</span>
                  <% end %>
                </td>
                <td class="py-3 text-gray-400 text-sm">
                  <%= time_ago_in_words(override.updated_at) %> ago
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-12">
        <div class="w-16 h-16 bg-gray-500/10 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-white mb-2">No Overrides Yet</h3>
        <p class="text-gray-400 mb-6">Create your first override to customize content for this channel.</p>
        <%= link_to new_admin_system_channel_channel_override_path(@channel), class: "inline-flex items-center gap-2 px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg transition font-medium" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Create First Override
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- JSON Data -->
  <% if @channel.metadata.present? || @channel.settings.present? %>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mt-6">
      <% if @channel.metadata.present? %>
        <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6">
          <h3 class="text-lg font-semibold text-white mb-4">Metadata</h3>
          <pre class="bg-[#0a0a0a] border border-[#2a2a2a] rounded-lg p-4 text-gray-300 text-sm overflow-x-auto"><%= JSON.pretty_generate(@channel.metadata) %></pre>
        </div>
      <% end %>

      <% if @channel.settings.present? %>
        <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6">
          <h3 class="text-lg font-semibold text-white mb-4">Settings</h3>
          <pre class="bg-[#0a0a0a] border border-[#2a2a2a] rounded-lg p-4 text-gray-300 text-sm overflow-x-auto"><%= JSON.pretty_generate(@channel.settings) %></pre>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

