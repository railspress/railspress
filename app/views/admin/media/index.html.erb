<% content_for :title, "Media" %>
<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "admin/shared", "data-turbo-track": "reload" %>
<% end %>

<div class="space-y-6" data-controller="media-library">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold text-white">Media Library</h1>
    </div>
    <div class="flex items-center space-x-3">
      <button data-action="click->media-library#openUploadArea" class="inline-flex items-center px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium rounded-lg transition-colors">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Add Media File
      </button>
    </div>
  </div>

  <!-- Upload Area -->
  <div data-media-library-target="uploadArea" 
       class="hidden border-2 border-dashed border-gray-600 rounded-xl p-16 text-center bg-gradient-to-br from-gray-800/50 to-gray-900/50 backdrop-blur-sm"
       data-action="dragover->media-library#dragOver dragleave->media-library#dragLeave drop->media-library#drop">
    <div class="relative max-w-md mx-auto">
      <button data-action="click->media-library#closeUploadArea" class="absolute -top-4 -right-4 w-8 h-8 bg-gray-700 hover:bg-gray-600 text-gray-300 hover:text-white rounded-full flex items-center justify-center transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
      
      <!-- Upload Icon -->
      <div class="mb-6">
        <svg class="w-16 h-16 mx-auto text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
        </svg>
      </div>
      
      <div class="space-y-4">
        <div class="text-xl font-semibold text-white">Drop files to upload</div>
        <div class="text-gray-400 text-sm">Drag and drop your files here, or</div>
        <button data-action="click->media-library#selectFiles" class="inline-flex items-center px-6 py-3 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg font-medium transition-colors">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Choose Files
        </button>
        <div class="text-xs text-gray-500">
          <div>Maximum upload file size: 100 MB</div>
          <div class="mt-1">Supported formats: Images, Videos, Documents</div>
        </div>
      </div>
      
      <!-- Progress Bar (hidden by default) -->
      <div data-media-library-target="uploadProgress" class="hidden mt-6">
        <div class="bg-gray-700 rounded-full h-2 mb-2">
          <div data-media-library-target="progressBar" class="bg-indigo-600 h-2 rounded-full transition-all duration-300" style="width: 0%"></div>
        </div>
        <div data-media-library-target="progressText" class="text-sm text-gray-400">Uploading...</div>
      </div>
    </div>
  </div>

  <!-- Filter and Search Controls -->
  <div class="flex items-center justify-between bg-gray-800/50 rounded-lg p-4">
    <div class="flex items-center space-x-4">
      <!-- View Toggle -->
      <div class="flex items-center bg-gray-700 rounded-lg p-1">
        <button data-action="click->media-library#setGridView" class="p-2 rounded text-white bg-indigo-600" title="Grid View">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"/>
          </svg>
        </button>
        <button data-action="click->media-library#setListView" class="p-2 rounded text-gray-400 hover:text-white" title="List View">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"/>
          </svg>
        </button>
      </div>

      <!-- Filter Dropdowns -->
      <select class="bg-gray-700 border border-gray-600 text-white rounded px-3 py-2 text-sm focus:ring-2 focus:ring-indigo-500 focus:border-transparent">
        <option>All media items</option>
        <option>Images</option>
        <option>Videos</option>
        <option>Documents</option>
      </select>

      <select class="bg-gray-700 border border-gray-600 text-white rounded px-3 py-2 text-sm focus:ring-2 focus:ring-indigo-500 focus:border-transparent">
        <option>All dates</option>
        <option>Today</option>
        <option>This week</option>
        <option>This month</option>
      </select>

      <button class="px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white text-sm rounded-lg transition-colors">
        Bulk select
      </button>
    </div>

    <!-- Search -->
    <div class="flex items-center space-x-2">
      <label class="text-sm text-gray-400">Search media</label>
      <input type="text" 
             placeholder="Search media files..." 
             data-media-library-target="searchInput"
             data-action="input->media-library#search"
             class="bg-gray-700 border border-gray-600 text-white rounded px-3 py-2 text-sm focus:ring-2 focus:ring-indigo-500 focus:border-transparent w-64">
    </div>
  </div>

  <!-- Media Grid -->
  <div data-media-library-target="mediaGrid" class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 xl:grid-cols-8 gap-4">
    <% @media.each do |medium| %>
      <div class="bg-gray-800 rounded-lg overflow-hidden hover:bg-gray-700 transition-colors cursor-pointer group" 
           data-media-library-target="mediaItem"
           data-media-id="<%= medium.id %>">
        <div class="aspect-square bg-gradient-to-br from-gray-600 to-gray-800 flex items-center justify-center relative">
          <% if medium.file.attached? %>
            <% if medium.file.image? %>
              <%= image_tag medium.file, class: "w-full h-full object-cover", alt: medium.title %>
            <% elsif medium.file.video? %>
              <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
              </svg>
            <% else %>
              <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
            <% end %>
          <% else %>
            <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          <% end %>
          
          <!-- Selection checkbox -->
          <div class="absolute top-2 left-2 opacity-0 group-hover:opacity-100 transition-opacity">
            <input type="checkbox" class="w-4 h-4 text-indigo-600 bg-gray-800 border-gray-600 rounded focus:ring-indigo-500">
          </div>
        </div>
        
        <div class="p-2">
          <div class="text-xs text-gray-300 truncate" title="<%= medium.title || 'Untitled' %>">
            <%= medium.title || 'Untitled' %>
          </div>
          <div class="text-xs text-gray-500">
            <%= medium.file.attached? ? number_to_human_size(medium.file.byte_size) : 'No file' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Empty State -->
  <% if @media.empty? %>
    <div class="text-center py-12">
      <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
      </svg>
      <h3 class="text-lg font-medium text-white mb-2">No media files yet</h3>
      <p class="text-gray-400 mb-4">Upload your first media file to get started</p>
      <button data-action="click->media-library#openUploadArea" class="inline-flex items-center px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium rounded-lg transition-colors">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Add Media File
      </button>
    </div>
  <% end %>
</div>

<!-- Hidden file input -->
<input type="file" 
       data-media-library-target="fileInput" 
       data-action="change->media-library#handleFileSelect"
       multiple 
       class="hidden">