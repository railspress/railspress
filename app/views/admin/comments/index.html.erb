<% content_for :title, "Comments" %>
<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "admin/shared", "data-turbo-track": "reload" %>
  <%= stylesheet_link_tag "tabulator_custom", "data-turbo-track": "reload" %>
<% end %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold text-white">Comments</h1>
      <p class="text-gray-400">Manage comments on your posts and pages</p>
    </div>
  </div>

  <!-- Stats Cards -->
  <%= render 'admin/shared/stats_cards', stats: @stats %>

  <!-- Admin Table -->
  <%= render 'admin/shared/admin_table', 
      table_type: 'comments', 
      data: @comments_data, 
      columns: @columns,
      bulk_actions: @bulk_actions,
      status_options: @status_options,
      search_placeholder: "Search comments..." %>
</div>