<% content_for :page_title, "Analytics" %>
<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "admin/shared", "data-turbo-track": "reload" %>
<% end %>

<div class="max-w-7xl mx-auto space-y-6" 
     data-controller="analytics"
     data-analytics-traffic-data-value="<%= @traffic_data.to_json %>"
     data-analytics-device-data-value="<%= @device_stats.to_a.to_json %>">
  
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-white">Analytics Dashboard</h1>
      <p class="text-gray-400 mt-1">Comprehensive website performance and visitor insights</p>
    </div>
    
    <div class="flex items-center space-x-3">
      <%= link_to "View Realtime", admin_analytics_realtime_path, 
          class: "px-4 py-2 bg-green-600 hover:bg-green-700 text-white text-sm font-medium rounded-lg transition-colors" %>
      <div class="flex items-center bg-gray-800 rounded-lg p-1">
        <% %w[today week month year].each do |period| %>
          <%= link_to period.titleize, admin_analytics_path(period: period), 
              class: "px-3 py-2 text-sm font-medium rounded-md transition-colors #{'bg-indigo-600 text-white' if @period == period} #{'text-gray-400 hover:text-white' if @period != period}" %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Key Metrics -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
    <div class="bg-gradient-to-br from-blue-500/20 to-blue-600/20 border border-blue-500/30 rounded-xl p-4">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-blue-100 text-sm font-medium mb-1">Total Pageviews</p>
          <p class="text-2xl font-bold text-white"><%= number_with_delimiter(@total_pageviews || 0) %></p>
        </div>
        <div class="w-10 h-10 bg-blue-500/20 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-gradient-to-br from-purple-500/20 to-purple-600/20 border border-purple-500/30 rounded-xl p-4">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-purple-100 text-sm font-medium mb-1">Unique Visitors</p>
          <p class="text-2xl font-bold text-white"><%= number_with_delimiter(@unique_visitors || 0) %></p>
        </div>
        <div class="w-10 h-10 bg-purple-500/20 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-gradient-to-br from-green-500/20 to-green-600/20 border border-green-500/30 rounded-xl p-4">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-green-100 text-sm font-medium mb-1">Avg Session Duration</p>
          <p class="text-2xl font-bold text-white"><%= @avg_session_duration ? "#{@avg_session_duration.round(1)}m" : "0m" %></p>
        </div>
        <div class="w-10 h-10 bg-green-500/20 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-gradient-to-br from-orange-500/20 to-orange-600/20 border border-orange-500/30 rounded-xl p-4">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-orange-100 text-sm font-medium mb-1">Bounce Rate</p>
          <p class="text-2xl font-bold text-white"><%= @bounce_rate ? "#{@bounce_rate.round(1)}%" : "0%" %></p>
        </div>
        <div class="w-10 h-10 bg-orange-500/20 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Performance Metrics -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
    <div class="bg-gray-800/50 border border-gray-700 rounded-xl p-6">
      <div class="text-center">
        <p class="text-2xl font-bold text-white"><%= @bounce_rate ? "#{@bounce_rate.round(1)}%" : "0%" %></p>
        <p class="text-sm text-gray-400 mt-1">Bounce Rate</p>
      </div>
    </div>
    
    <div class="bg-gray-800/50 border border-gray-700 rounded-xl p-6">
      <div class="text-center">
        <p class="text-2xl font-bold text-white"><%= @pages_per_session ? @pages_per_session.round(1) : "0" %></p>
        <p class="text-sm text-gray-400 mt-1">Pages per Session</p>
      </div>
    </div>
    
    <div class="bg-gray-800/50 border border-gray-700 rounded-xl p-6">
      <div class="text-center">
        <p class="text-2xl font-bold text-white"><%= Pageview.where(is_reader: true).count %></p>
        <p class="text-sm text-gray-400 mt-1">Engaged Readers</p>
      </div>
    </div>
    
    <div class="bg-gray-800/50 border border-gray-700 rounded-xl p-6">
      <div class="text-center">
        <p class="text-2xl font-bold text-white"><%= Pageview.where.not(scroll_depth: nil).average(:scroll_depth)&.round(1) || 0 %>%</p>
        <p class="text-sm text-gray-400 mt-1">Avg Scroll Depth</p>
      </div>
    </div>
  </div>

  <!-- Charts Row -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Traffic Trend Chart -->
    <div class="bg-gray-800/50 border border-gray-700 rounded-xl p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold text-white">Traffic Trend</h3>
        <div class="flex items-center space-x-2">
          <div class="w-3 h-3 bg-blue-500 rounded-full"></div>
          <span class="text-sm text-gray-400">Pageviews</span>
        </div>
      </div>
      <div class="h-64">
        <canvas data-analytics-target="trafficChart"></canvas>
      </div>
    </div>

    <!-- Device Breakdown Chart -->
    <div class="bg-gray-800/50 border border-gray-700 rounded-xl p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold text-white">Device Breakdown</h3>
        <div class="flex items-center space-x-2">
          <div class="w-3 h-3 bg-green-500 rounded-full"></div>
          <span class="text-sm text-gray-400">Visitors</span>
        </div>
      </div>
      <div class="h-64">
        <canvas data-analytics-target="deviceChart"></canvas>
      </div>
    </div>
  </div>

  <!-- Content Performance & Engagement -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Top Performing Content -->
    <div class="bg-gray-800/50 border border-gray-700 rounded-xl p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold text-white">Top Performing Content</h3>
        <span class="text-sm text-gray-400"><%= @top_pages&.length || 0 %> pages</span>
      </div>
      <div class="space-y-3">
        <% if @top_pages&.any? %>
          <% @top_pages.first(5).each_with_index do |page, index| %>
            <div class="flex items-center justify-between py-3 px-4 bg-gray-700/50 rounded-lg">
              <div class="flex items-center space-x-3">
                <span class="text-xs font-medium text-gray-400 bg-gray-600 px-2 py-1 rounded">#<%= index + 1 %></span>
                <div class="flex-1 min-w-0">
                  <p class="text-sm font-medium text-gray-200 truncate"><%= page[:path] %></p>
                  <p class="text-xs text-gray-400">
                    <%= Pageview.where(path: page[:path]).where.not(scroll_depth: nil).average(:scroll_depth)&.round(1) || 0 %>% scroll depth
                  </p>
                </div>
              </div>
              <div class="text-right">
                <p class="text-sm font-semibold text-white"><%= number_with_delimiter(page[:count]) %></p>
                <p class="text-xs text-gray-400">pageviews</p>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="text-center py-8">
            <p class="text-gray-400">No page data available</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Engagement Insights -->
    <div class="bg-gray-800/50 border border-gray-700 rounded-xl p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold text-white">Engagement Insights</h3>
        <span class="text-sm text-gray-400">Reader behavior</span>
      </div>
      <div class="space-y-4">
        <div class="bg-gray-700/30 rounded-lg p-4">
          <div class="flex items-center justify-between mb-2">
            <span class="text-sm text-gray-300">Reading Time Distribution</span>
          </div>
          <div class="space-y-2">
            <div class="flex items-center justify-between">
              <span class="text-xs text-gray-400">0-30 seconds</span>
              <span class="text-xs text-gray-300"><%= Pageview.where('reading_time < ?', 30).count %></span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-xs text-gray-400">30+ seconds (Readers)</span>
              <span class="text-xs text-green-400"><%= Pageview.where('reading_time >= ?', 30).count %></span>
            </div>
          </div>
        </div>
        
        <div class="bg-gray-700/30 rounded-lg p-4">
          <div class="flex items-center justify-between mb-2">
            <span class="text-sm text-gray-300">Scroll Behavior</span>
          </div>
          <div class="space-y-2">
            <div class="flex items-center justify-between">
              <span class="text-xs text-gray-400">High engagement (80%+)</span>
              <span class="text-xs text-green-400"><%= Pageview.where('scroll_depth >= ?', 80).count %></span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-xs text-gray-400">Medium engagement (50-80%)</span>
              <span class="text-xs text-yellow-400"><%= Pageview.where('scroll_depth BETWEEN ? AND ?', 50, 80).count %></span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-xs text-gray-400">Low engagement (<50%)</span>
              <span class="text-xs text-red-400"><%= Pageview.where('scroll_depth < ?', 50).count %></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Traffic Sources & Demographics -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Top Referrers -->
    <div class="bg-gray-800/50 border border-gray-700 rounded-xl p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold text-white">Top Referrers</h3>
        <span class="text-sm text-gray-400"><%= @top_referrers&.length || 0 %> sources</span>
      </div>
      <div class="space-y-3">
        <% if @top_referrers&.any? %>
          <% @top_referrers.first(5).each_with_index do |referrer, index| %>
            <div class="flex items-center justify-between py-2 px-3 bg-gray-700/50 rounded-lg">
              <div class="flex items-center space-x-3">
                <span class="text-xs font-medium text-gray-400 bg-gray-600 px-2 py-1 rounded">#<%= index + 1 %></span>
                <span class="text-sm text-gray-200 truncate max-w-xs" title="<%= referrer[:referrer] %>">
                  <%= referrer[:referrer].length > 40 ? "#{referrer[:referrer][0..37]}..." : referrer[:referrer] %>
                </span>
              </div>
              <span class="text-sm font-semibold text-white"><%= number_with_delimiter(referrer[:count]) %></span>
            </div>
          <% end %>
        <% else %>
          <div class="text-center py-4">
            <p class="text-gray-400 text-sm">No referrer data available</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Top Countries -->
    <div class="bg-gray-800/50 border border-gray-700 rounded-xl p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold text-white">Top Countries</h3>
        <span class="text-sm text-gray-400"><%= @country_data&.length || 0 %> countries</span>
      </div>
      <div class="space-y-3">
        <% if @country_data&.any? %>
          <% @country_data.first(5).each_with_index do |country, index| %>
            <div class="flex items-center justify-between py-2 px-3 bg-gray-700/50 rounded-lg">
              <div class="flex items-center space-x-3">
                <span class="text-xs font-medium text-gray-400 bg-gray-600 px-2 py-1 rounded">#<%= index + 1 %></span>
                <span class="text-sm text-gray-200"><%= country[:name] %></span>
              </div>
              <span class="text-sm font-semibold text-white"><%= number_with_delimiter(country[:count]) %></span>
            </div>
          <% end %>
        <% else %>
          <div class="text-center py-4">
            <p class="text-gray-400 text-sm">No country data available</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Browser & Device Stats -->
    <div class="bg-gray-800/50 border border-gray-700 rounded-xl p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold text-white">Browser & Device</h3>
        <span class="text-sm text-gray-400">Technology</span>
      </div>
      <div class="space-y-4">
        <div>
          <h4 class="text-sm font-medium text-gray-300 mb-2">Browsers</h4>
          <div class="space-y-2">
            <% if @browser_stats&.any? %>
              <% @browser_stats.sort_by { |_, count| -count }.first(3).each do |browser, count| %>
                <div class="flex items-center justify-between">
                  <span class="text-xs text-gray-400"><%= browser %></span>
                  <span class="text-xs text-gray-300"><%= count %></span>
                </div>
              <% end %>
            <% else %>
              <p class="text-xs text-gray-400">No browser data</p>
            <% end %>
          </div>
        </div>
        
        <div>
          <h4 class="text-sm font-medium text-gray-300 mb-2">Devices</h4>
          <div class="space-y-2">
            <% if @device_stats&.any? %>
              <% @device_stats.sort_by { |_, count| -count }.each do |device, count| %>
                <div class="flex items-center justify-between">
                  <span class="text-xs text-gray-400"><%= device %></span>
                  <span class="text-xs text-gray-300"><%= count %></span>
                </div>
              <% end %>
            <% else %>
              <p class="text-xs text-gray-400">No device data</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Operating Systems & Performance -->
    <div class="bg-gray-800/50 border border-gray-700 rounded-xl p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold text-white">Operating Systems</h3>
        <span class="text-sm text-gray-400">Platform breakdown</span>
      </div>
      <div class="space-y-3">
        <% if @os_stats&.any? %>
          <% @os_stats.sort_by { |_, count| -count }.each_with_index do |(os, count), index| %>
            <div class="flex items-center justify-between py-2 px-3 bg-gray-700/50 rounded-lg">
              <div class="flex items-center space-x-3">
                <span class="text-xs font-medium text-gray-400 bg-gray-600 px-2 py-1 rounded">#<%= index + 1 %></span>
                <span class="text-sm text-gray-200"><%= os %></span>
              </div>
              <span class="text-sm font-semibold text-white"><%= number_with_delimiter(count) %></span>
            </div>
          <% end %>
        <% else %>
          <div class="text-center py-4">
            <p class="text-gray-400 text-sm">No OS data available</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

</div>