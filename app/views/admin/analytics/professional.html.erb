<% content_for :page_title, "Professional Analytics Dashboard" %>
<% content_for :stylesheets do %>
  <style>
    .gradient-bg {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    .glass-effect {
      background: rgba(255, 255, 255, 0.05);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.1);
    }
    .metric-card {
      background: linear-gradient(145deg, #1a1a1a, #0f0f0f);
      border: 1px solid #2a2a2a;
      transition: all 0.3s ease;
    }
    .metric-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
      border-color: #4f46e5;
    }
    .chart-container {
      background: linear-gradient(145deg, #1a1a1a, #0f0f0f);
      border: 1px solid #2a2a2a;
      border-radius: 16px;
      padding: 24px;
    }
    .insight-card {
      background: linear-gradient(135deg, rgba(99, 102, 241, 0.1), rgba(139, 92, 246, 0.1));
      border: 1px solid rgba(99, 102, 241, 0.3);
    }
    .pulse-animation {
      animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }
    @keyframes pulse {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.5; }
    }
    .floating-action {
      position: fixed;
      bottom: 24px;
      right: 24px;
      z-index: 50;
    }
  </style>
<% end %>

<div class="min-h-screen bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900"
     data-controller="professional-analytics"
     data-professional-analytics-trend-data-value="<%= raw @stats[:daily_trend].to_json %>"
     data-professional-analytics-top-pages-data-value="<%= raw @stats[:top_pages].to_json %>"
     data-professional-analytics-referrers-data-value="<%= raw @stats[:referrers].to_json %>"
     data-professional-analytics-engagement-data-value="<%= raw @engagement_data.to_json %>"
     data-professional-analytics-device-data-value="<%= raw @device_data.to_json %>"
     data-professional-analytics-country-data-value="<%= raw @country_data.to_json %>"
     data-professional-analytics-realtime-url-value="<%= admin_analytics_realtime_path %>"
     data-professional-analytics-insights-url-value="<%= admin_analytics_insights_path %>">

  <!-- Professional Header -->
  <div class="relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600 opacity-10"></div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <div class="w-12 h-12 bg-gradient-to-r from-indigo-500 to-purple-600 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
          </div>
          <div>
            <h1 class="text-3xl font-bold text-white">Analytics Intelligence</h1>
            <p class="text-gray-400 mt-1">Enterprise-grade insights powered by RailsPress</p>
          </div>
        </div>
        
        <div class="flex items-center space-x-4">
          <!-- Period Selector -->
          <%= form_with url: admin_analytics_path, method: :get, class: "flex items-center gap-2" do |f| %>
            <%= f.select :period,
                options_for_select([
                  ['Today', 'today'],
                  ['Last 7 Days', 'week'],
                  ['Last 30 Days', 'month'],
                  ['Last 90 Days', 'quarter'],
                  ['Last Year', 'year']
                ], @period),
                {},
                class: "px-4 py-2 bg-white/10 backdrop-blur-sm border border-white/20 text-white rounded-xl focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20",
                onchange: "this.form.submit()" %>
          <% end %>
          
          <!-- Export Button -->
          <%= link_to admin_analytics_export_path(period: @period), 
              class: "flex items-center gap-2 px-4 py-2 bg-white/10 backdrop-blur-sm border border-white/20 hover:border-indigo-500 text-white rounded-xl transition-all duration-200 hover:bg-white/20" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
            </svg>
            <span>Export</span>
          <% end %>
          
          <!-- Refresh Button -->
          <button onclick="location.reload()" class="p-2 bg-white/10 backdrop-blur-sm border border-white/20 hover:border-indigo-500 text-white rounded-xl transition-all duration-200 hover:bg-white/20">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Real-time Metrics Grid -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 -mt-4 mb-8">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <!-- Active Users -->
      <div class="metric-card rounded-2xl p-6">
        <div class="flex items-center justify-between">
          <div class="flex-1">
            <div class="flex items-center space-x-2 mb-2">
              <div class="w-2 h-2 bg-emerald-400 rounded-full pulse-animation"></div>
              <p class="text-sm text-gray-400 font-medium">Active Now</p>
            </div>
            <p class="text-3xl font-bold text-white mb-1" data-professional-analytics-target="activeUsers"><%= @active_now %></p>
            <p class="text-xs text-emerald-400">Live visitors</p>
          </div>
          <div class="w-12 h-12 bg-gradient-to-r from-emerald-500 to-teal-500 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
            </svg>
          </div>
        </div>
      </div>

      <!-- Pageviews -->
      <div class="metric-card rounded-2xl p-6">
        <div class="flex items-center justify-between">
          <div class="flex-1">
            <p class="text-sm text-gray-400 font-medium mb-2">Pageviews</p>
            <p class="text-3xl font-bold text-white mb-1" data-professional-analytics-target="currentPageviews"><%= format_number(@stats[:total_pageviews]) %></p>
            <p class="text-xs text-indigo-400"><%= format_number(@stats[:unique_visitors]) %> unique visitors</p>
          </div>
          <div class="w-12 h-12 bg-gradient-to-r from-indigo-500 to-blue-500 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
          </div>
        </div>
      </div>

      <!-- Engagement Rate -->
      <div class="metric-card rounded-2xl p-6">
        <div class="flex items-center justify-between">
          <div class="flex-1">
            <p class="text-sm text-gray-400 font-medium mb-2">Engagement</p>
            <p class="text-3xl font-bold text-white mb-1"><%= format_percentage(@stats[:engagement_rate] || 0) %></p>
            <p class="text-xs text-purple-400"><%= @stats[:avg_duration] || 0 %>s avg. duration</p>
          </div>
          <div class="w-12 h-12 bg-gradient-to-r from-purple-500 to-pink-500 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
            </svg>
          </div>
        </div>
      </div>

      <!-- Conversion Rate -->
      <div class="metric-card rounded-2xl p-6">
        <div class="flex items-center justify-between">
          <div class="flex-1">
            <p class="text-sm text-gray-400 font-medium mb-2">Conversion</p>
            <p class="text-3xl font-bold text-white mb-1"><%= format_percentage(@stats[:conversion_rate] || 0) %></p>
            <p class="text-xs text-yellow-400"><%= @stats[:total_conversions] || 0 %> conversions</p>
          </div>
          <div class="w-12 h-12 bg-gradient-to-r from-yellow-500 to-orange-500 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- AI Insights Panel -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mb-8">
    <div class="insight-card rounded-2xl p-6">
      <div class="flex items-center space-x-3 mb-6">
        <div class="w-10 h-10 bg-gradient-to-r from-indigo-500 to-purple-600 rounded-xl flex items-center justify-center">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
          </svg>
        </div>
        <div>
          <h2 class="text-xl font-bold text-white">AI-Powered Insights</h2>
          <p class="text-gray-400 text-sm">Automated analysis and recommendations</p>
        </div>
      </div>
      
      <div data-professional-analytics-target="insightsPanel" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% if @automated_insights.any? %>
          <% @automated_insights.each do |insight| %>
            <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl p-4">
              <div class="flex items-start space-x-3">
                <div class="w-2 h-2 bg-indigo-400 rounded-full mt-2 flex-shrink-0"></div>
                <div class="flex-1">
                  <p class="text-white text-sm font-medium mb-1"><%= insight[:message] %></p>
                  <p class="text-gray-400 text-xs"><%= insight[:action] %></p>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="col-span-full text-center py-8">
            <p class="text-gray-500">AI insights will appear here as we analyze your data</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Main Charts Grid -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mb-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Traffic Trend -->
      <div class="chart-container">
        <div class="flex items-center justify-between mb-6">
          <h3 class="text-lg font-semibold text-white">Traffic Trend</h3>
          <div class="flex items-center space-x-2">
            <div class="w-2 h-2 bg-green-400 rounded-full pulse-animation"></div>
            <span class="text-xs text-gray-400">Live data</span>
          </div>
        </div>
        <div class="h-80" data-professional-analytics-target="trendChart"></div>
      </div>

      <!-- Engagement Analysis -->
      <div class="chart-container">
        <div class="flex items-center justify-between mb-6">
          <h3 class="text-lg font-semibold text-white">Engagement Analysis</h3>
          <span class="px-2 py-1 bg-purple-500/20 text-purple-300 text-xs rounded-full">Medium-style</span>
        </div>
        <div class="h-80" data-professional-analytics-target="engagementChart"></div>
      </div>
    </div>
  </div>

  <!-- Secondary Charts Grid -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mb-8">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Device Breakdown -->
      <div class="chart-container">
        <h3 class="text-lg font-semibold text-white mb-6">Device Breakdown</h3>
        <div class="h-64" data-professional-analytics-target="deviceChart"></div>
      </div>

      <!-- Traffic Sources -->
      <div class="chart-container">
        <h3 class="text-lg font-semibold text-white mb-6">Traffic Sources</h3>
        <div class="h-64" data-professional-analytics-target="trafficSourceChart"></div>
      </div>

      <!-- Geographic Distribution -->
      <div class="chart-container">
        <h3 class="text-lg font-semibold text-white mb-6">Top Countries</h3>
        <div class="h-64" data-professional-analytics-target="countryChart"></div>
      </div>
    </div>
  </div>

  <!-- Advanced Analytics Grid -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mb-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Performance Metrics -->
      <div class="chart-container">
        <h3 class="text-lg font-semibold text-white mb-6">Performance Metrics</h3>
        <div class="h-80" data-professional-analytics-target="performanceChart"></div>
      </div>

      <!-- Conversion Funnel -->
      <div class="chart-container">
        <h3 class="text-lg font-semibold text-white mb-6">Conversion Funnel</h3>
        <div class="h-80" data-professional-analytics-target="conversionChart"></div>
      </div>
    </div>
  </div>

  <!-- Real-time Activity -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mb-8">
    <div class="chart-container">
      <div class="flex items-center justify-between mb-6">
        <h3 class="text-lg font-semibold text-white">Real-time Activity</h3>
        <div class="flex items-center space-x-2">
          <div class="w-2 h-2 bg-emerald-400 rounded-full pulse-animation"></div>
          <span class="text-xs text-gray-400">Live updates</span>
        </div>
      </div>
      <div class="h-64" data-professional-analytics-target="realtimeChart"></div>
    </div>
  </div>

  <!-- User Flow Analysis -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mb-8">
    <div class="chart-container">
      <h3 class="text-lg font-semibold text-white mb-6">User Flow Analysis</h3>
      <div class="h-64" data-professional-analytics-target="userFlowChart"></div>
    </div>
  </div>

  <!-- GDPR Compliance Dashboard -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mb-8">
    <div class="chart-container">
      <div class="flex items-center space-x-3 mb-6">
        <div class="w-10 h-10 bg-gradient-to-r from-green-500 to-emerald-500 rounded-xl flex items-center justify-center">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <div>
          <h3 class="text-lg font-semibold text-white">Privacy & GDPR Compliance</h3>
          <p class="text-gray-400 text-sm">Your data protection status</p>
        </div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl p-4">
          <div class="flex items-center justify-between mb-2">
            <span class="text-sm text-gray-400">Consent Rate</span>
            <span class="text-lg font-bold text-emerald-400"><%= format_percentage(@consent_rate) %></span>
          </div>
          <div class="w-full bg-gray-700 rounded-full h-2">
            <div class="bg-emerald-400 h-2 rounded-full" style="width: <%= @consent_rate %>%"></div>
          </div>
        </div>
        
        <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl p-4">
          <div class="flex items-center justify-between mb-2">
            <span class="text-sm text-gray-400">Data Retention</span>
            <span class="text-lg font-bold text-yellow-400"><%= analytics_data_retention_days %> days</span>
          </div>
          <div class="text-xs text-gray-500">Automated cleanup enabled</div>
        </div>
        
        <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl p-4">
          <div class="flex items-center justify-between mb-2">
            <span class="text-sm text-gray-400">IP Anonymization</span>
            <span class="text-lg font-bold text-green-400">Active</span>
          </div>
          <div class="text-xs text-gray-500">All IPs hashed</div>
        </div>
        
        <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl p-4">
          <div class="flex items-center justify-between mb-2">
            <span class="text-sm text-gray-400">GDPR Status</span>
            <span class="text-lg font-bold text-emerald-400">Compliant</span>
          </div>
          <div class="text-xs text-gray-500">Full compliance</div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Floating Action Button -->
<div class="floating-action">
  <div class="relative group">
    <button class="w-14 h-14 bg-gradient-to-r from-indigo-500 to-purple-600 rounded-full shadow-lg hover:shadow-xl transition-all duration-200 flex items-center justify-center">
      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
      </svg>
    </button>
    <div class="absolute bottom-16 right-0 opacity-0 group-hover:opacity-100 transition-opacity duration-200">
      <div class="bg-white/10 backdrop-blur-sm border border-white/20 rounded-xl p-4 min-w-48">
        <div class="space-y-2">
          <%= link_to "Export Data", admin_analytics_export_path(period: @period), 
              class: "flex items-center space-x-2 text-white hover:text-indigo-400 transition-colors" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
            </svg>
            <span class="text-sm">Export Analytics</span>
          <% end %>
          
          <button onclick="window.print()" class="flex items-center space-x-2 text-white hover:text-indigo-400 transition-colors">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"/>
            </svg>
            <span class="text-sm">Print Report</span>
          </button>
          
          <button onclick="location.reload()" class="flex items-center space-x-2 text-white hover:text-indigo-400 transition-colors">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
            </svg>
            <span class="text-sm">Refresh Data</span>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
