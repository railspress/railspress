<% content_for :title, @ai_agent.name %>
<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "admin/shared", "data-turbo-track": "reload" %>
<% end %>

<div class="max-w-7xl mx-auto" data-controller="ai-agent-chat">
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Left Column - Agent Info -->
    <div class="space-y-6">
      <!-- Header -->
      <div>
        <h1 class="text-2xl font-bold text-white mb-2"><%= @ai_agent.name %></h1>
        <p class="text-gray-400"><%= @ai_agent.description %></p>
      </div>

      <!-- Usage Statistics -->
      <div class="bg-[#1a1a1a] border border-[#2a2a2a] rounded-xl p-6">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-lg font-semibold text-white">Usage Statistics</h3>
          <%= link_to usage_admin_ai_agents_path, class: "text-indigo-400 hover:text-indigo-300 text-sm" do %>
            View Detailed Analytics â†’
          <% end %>
        </div>
        
        <div class="grid grid-cols-2 gap-4">
          <div class="flex items-center space-x-3">
            <div class="w-8 h-8 bg-blue-500/10 rounded-lg flex items-center justify-center">
              <svg class="w-4 h-4 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
              </svg>
            </div>
            <div>
              <p class="text-sm text-gray-400">Total Requests</p>
              <p class="text-lg font-semibold text-white"><%= @ai_agent.total_requests %></p>
            </div>
          </div>

          <div class="flex items-center space-x-3">
            <div class="w-8 h-8 bg-green-500/10 rounded-lg flex items-center justify-center">
              <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div>
              <p class="text-sm text-gray-400">Success Rate</p>
              <p class="text-lg font-semibold text-white"><%= @ai_agent.success_rate %>%</p>
            </div>
          </div>

          <div class="flex items-center space-x-3">
            <div class="w-8 h-8 bg-yellow-500/10 rounded-lg flex items-center justify-center">
              <svg class="w-4 h-4 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
              </svg>
            </div>
            <div>
              <p class="text-sm text-gray-400">Total Cost</p>
              <p class="text-lg font-semibold text-white">$<%= sprintf("%.4f", @ai_agent.total_cost) %></p>
            </div>
          </div>

          <div class="flex items-center space-x-3">
            <div class="w-8 h-8 bg-purple-500/10 rounded-lg flex items-center justify-center">
              <svg class="w-4 h-4 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div>
              <p class="text-sm text-gray-400">Avg Response Time</p>
              <p class="text-lg font-semibold text-white"><%= (@ai_agent.average_response_time * 1000).round(0) %>ms</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Basic Information -->
      <div class="bg-[#1a1a1a] border border-[#2a2a2a] rounded-xl p-6">
        <h3 class="text-lg font-semibold text-white mb-4">Basic Information</h3>
        <div class="space-y-3">
          <div class="flex justify-between">
            <span class="text-gray-400">Name:</span>
            <span class="text-white"><%= @ai_agent.name %></span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-400">Type:</span>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-500/10 text-blue-400">
              <%= @ai_agent.agent_type.humanize %>
            </span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-400">Status:</span>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @ai_agent.active? ? 'bg-green-500/10 text-green-400' : 'bg-gray-500/10 text-gray-400' %>">
              <%= @ai_agent.active? ? 'ACTIVE' : 'INACTIVE' %>
            </span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-400">UUID:</span>
            <span class="text-white font-mono text-sm"><%= @ai_agent.id %></span>
          </div>
        </div>
      </div>

      <!-- AI Configuration -->
      <div class="bg-[#1a1a1a] border border-[#2a2a2a] rounded-xl p-6">
        <h3 class="text-lg font-semibold text-white mb-4">AI Configuration</h3>
        <div class="space-y-3">
          <div class="flex justify-between">
            <span class="text-gray-400">AI Model:</span>
            <span class="text-white">
              <%= @ai_agent.ai_provider.model_identifier %>
              <span class="text-gray-500 text-sm">(using default from Agent Settings)</span>
            </span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-400">Temperature:</span>
            <span class="text-white"><%= @ai_agent.ai_provider.temperature %></span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-400">Max Tokens:</span>
            <span class="text-white"><%= @ai_agent.ai_provider.max_tokens %></span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-400">API Endpoint:</span>
            <span class="text-white font-mono text-sm">/api/v1/agentic-graph/<%= @ai_agent.id %></span>
          </div>
        </div>
      </div>

      <!-- Agent Deployment -->
      <div class="bg-[#1a1a1a] border border-[#2a2a2a] rounded-xl p-6">
        <h3 class="text-lg font-semibold text-white mb-4">Agent Deployment</h3>
        <div class="space-y-3">
          <div>
            <label class="text-gray-400 text-sm block mb-1">Public Test Page</label>
            <div class="flex items-center space-x-2">
              <input type="text" 
                     value="<%= request.base_url %>/agents/<%= @ai_agent.id %>/test" 
                     readonly 
                     class="flex-1 bg-gray-800 border border-gray-600 text-white rounded px-3 py-2 text-sm">
              <button data-action="click->ai-agent-chat#copyUrl" 
                      class="px-3 py-2 bg-indigo-600 hover:bg-indigo-700 text-white text-sm rounded transition">
                Copy URL
              </button>
            </div>
          </div>
          <div class="flex space-x-3">
            <button class="px-4 py-2 bg-gray-700 hover:bg-gray-600 text-white text-sm rounded transition">
              Get Deploy Code
            </button>
            <button class="px-4 py-2 bg-gray-700 hover:bg-gray-600 text-white text-sm rounded transition">
              Customize Chat Look
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Right Column - Chat Interface -->
    <div class="space-y-6">
      <!-- Edit Button -->
      <div class="flex justify-end">
        <%= link_to edit_admin_ai_agent_path(@ai_agent), class: "inline-flex items-center px-4 py-2 bg-gray-700 hover:bg-gray-600 text-white text-sm rounded-lg transition" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
          Edit Agent
        <% end %>
      </div>

      <!-- System Prompt -->
      <div class="bg-gray-800 rounded-xl p-4">
        <h3 class="text-sm font-medium text-gray-400 mb-2">System Prompt</h3>
        <div class="bg-gray-900 rounded-lg p-4">
          <p class="text-gray-300 text-sm font-mono whitespace-pre-wrap"><%= @ai_agent.prompt %></p>
        </div>
      </div>

      <!-- Chat Interface -->
      <div class="bg-[#1a1a1a] border border-[#2a2a2a] rounded-xl overflow-hidden">
        <div class="px-6 py-4 border-b border-[#2a2a2a]">
          <h3 class="text-lg font-semibold text-white">Chat with <%= @ai_agent.name %></h3>
          <div class="flex items-center mt-2">
            <span class="text-sm text-gray-400">Model: <%= @ai_agent.ai_provider.model_identifier %> (default)</span>
            <div class="w-2 h-2 bg-green-500 rounded-full ml-2"></div>
          </div>
        </div>

        <!-- Chat Messages -->
        <div class="p-6 space-y-4 min-h-[400px] max-h-[500px] overflow-y-auto" data-ai-agent-chat-target="messages">
          <!-- Agent Welcome Message -->
          <div class="flex items-start space-x-3">
            <div class="w-8 h-8 bg-purple-500 rounded-full flex items-center justify-center flex-shrink-0">
              <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
              </svg>
            </div>
            <div class="bg-gray-800 rounded-lg p-3 max-w-md">
              <p class="text-white text-sm">
                Hello! I'm <%= @ai_agent.name %>. <%= @ai_agent.description %> How can I help you today?
              </p>
            </div>
          </div>
        </div>

        <!-- Chat Input -->
        <div class="px-6 py-4 border-t border-[#2a2a2a]">
          <%= form_with url: test_admin_ai_agent_path(@ai_agent), method: :post, local: false, class: "space-y-4", data: { action: "submit->ai-agent-chat#sendMessage" } do |form| %>
            <div>
              <%= form.text_area :user_input, 
                    placeholder: "Type your message here...", 
                    rows: 3,
                    class: "w-full bg-gray-800 border border-gray-600 text-white rounded-lg px-4 py-3 resize-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent",
                    data: { ai_agent_chat_target: "input" } %>
            </div>
            
            <div class="flex items-center justify-between">
              <button type="submit" 
                      class="inline-flex items-center px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white text-sm rounded-lg transition"
                      data-ai-agent-chat-target="sendButton">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
                </svg>
                Send
              </button>
              
              <!-- Additional Context Toggle -->
              <details class="text-sm">
                <summary class="text-gray-400 hover:text-white cursor-pointer">Additional Context</summary>
                <div class="mt-2">
                  <%= form.text_area :context, 
                        placeholder: "Add any additional context...", 
                        rows: 2,
                        class: "w-full bg-gray-800 border border-gray-600 text-white rounded-lg px-3 py-2 text-sm resize-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
                </div>
              </details>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
