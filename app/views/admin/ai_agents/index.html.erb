<% content_for :title, "AI Agents" %>

<div class="max-w-7xl mx-auto" data-controller="ai-agents">
  <!-- Header -->
  <div class="flex items-center justify-between mb-8">
    <div>
      <h1 class="text-3xl font-bold text-white mb-2">AI Agents</h1>
      <p class="text-gray-400">Manage AI agents and their configurations</p>
    </div>
    <%= link_to new_admin_ai_agent_path, class: "px-6 py-3 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg font-medium transition" do %>
      <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
      </svg>
      Add Agent
    <% end %>
  </div>

  <!-- Stats Cards -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
    <div class="bg-[#1a1a1a] border border-[#2a2a2a] rounded-xl p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-400 text-sm">Total Agents</p>
          <p class="text-2xl font-bold text-white"><%= @ai_agents.count %></p>
        </div>
        <div class="w-12 h-12 bg-indigo-500/10 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-[#1a1a1a] border border-[#2a2a2a] rounded-xl p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-400 text-sm">Active Agents</p>
          <p class="text-2xl font-bold text-white"><%= @ai_agents.active.count %></p>
        </div>
        <div class="w-12 h-12 bg-green-500/10 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-[#1a1a1a] border border-[#2a2a2a] rounded-xl p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-400 text-sm">Agent Types</p>
          <p class="text-2xl font-bold text-white"><%= @ai_agents.distinct.count(:agent_type) %></p>
        </div>
        <div class="w-12 h-12 bg-blue-500/10 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-[#1a1a1a] border border-[#2a2a2a] rounded-xl p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-400 text-sm">Providers Used</p>
          <p class="text-2xl font-bold text-white"><%= @ai_agents.joins(:ai_provider).distinct.count(:ai_provider_id) %></p>
        </div>
        <div class="w-12 h-12 bg-purple-500/10 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Agents List -->
  <div class="bg-[#1a1a1a] border border-[#2a2a2a] rounded-xl overflow-hidden">
    <div class="px-6 py-4 border-b border-[#2a2a2a]">
      <h2 class="text-lg font-semibold text-white">AI Agents</h2>
    </div>

    <% if @ai_agents.any? %>
      <div class="divide-y divide-[#2a2a2a]">
        <% @ai_agents.each do |agent| %>
          <div class="p-6 hover:bg-[#111111] transition">
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-4">
                <div class="w-12 h-12 bg-indigo-500/10 rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                  </svg>
                </div>
                
                <div class="flex-1">
                  <div class="flex items-center gap-3 mb-1">
                    <h3 class="text-lg font-semibold text-white"><%= agent.name %></h3>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= agent.active? ? 'bg-green-500/10 text-green-400' : 'bg-gray-500/10 text-gray-400' %>">
                      <%= agent.active? ? 'Active' : 'Inactive' %>
                    </span>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-500/10 text-indigo-400">
                      <%= agent.agent_type.humanize %>
                    </span>
                  </div>
                  
                  <p class="text-gray-400 text-sm mb-2"><%= agent.description %></p>
                  <p class="text-gray-500 text-xs">Provider: <%= agent.ai_provider.name %> | Model: <%= agent.ai_provider.model_identifier %></p>
                </div>
              </div>

              <div class="flex items-center space-x-2">
                <button data-action="click->ai-agents#testAgent" data-agent-id="<%= agent.id %>" class="p-2 text-gray-400 hover:text-blue-400 hover:bg-[#2a2a2a] rounded-lg transition" title="Test Agent">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h1m4 0h1m-6 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </button>
                
                <%= link_to edit_admin_ai_agent_path(agent), class: "p-2 text-gray-400 hover:text-white hover:bg-[#2a2a2a] rounded-lg transition" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                  </svg>
                <% end %>

                <%= link_to admin_ai_agent_path(agent), method: :patch, params: { toggle: true }, class: "p-2 text-gray-400 hover:text-white hover:bg-[#2a2a2a] rounded-lg transition" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l4-4 4 4m0 6l-4 4-4-4"/>
                  </svg>
                <% end %>

                <%= link_to admin_ai_agent_path(agent), method: :delete, data: { confirm: "Are you sure? This action cannot be undone." }, class: "p-2 text-gray-400 hover:text-red-400 hover:bg-[#2a2a2a] rounded-lg transition" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                  </svg>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="p-12 text-center">
        <svg class="w-16 h-16 text-gray-500 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
        </svg>
        <h3 class="text-lg font-semibold text-white mb-2">No AI Agents</h3>
        <p class="text-gray-400 mb-6">Get started by adding your first AI agent</p>
        <%= link_to new_admin_ai_agent_path, class: "px-6 py-3 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg font-medium transition" do %>
          Add Agent
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<!-- Test Agent Modal -->
<div id="testAgentModal" class="fixed inset-0 z-50 hidden" data-ai-agents-target="modal">
  <div class="absolute inset-0 bg-black/50 backdrop-blur-sm" data-action="click->ai-agents#closeTestModal"></div>
  <div class="relative flex items-start justify-center min-h-screen pt-[10vh] px-4">
    <div class="w-full max-w-2xl bg-[#1a1a1a] border border-[#2a2a2a] rounded-xl shadow-2xl">
      <div class="px-6 py-4 border-b border-[#2a2a2a]">
        <div class="flex items-center justify-between">
          <h3 class="text-lg font-semibold text-white">Test AI Agent</h3>
          <button onclick="closeTestModal()" class="text-gray-400 hover:text-white transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
        </div>
      </div>
      
      <div class="p-6">
        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-300 mb-2">Test Input</label>
          <textarea id="testInput" rows="4" placeholder="Enter test input..." class="w-full px-4 py-3 bg-[#0a0a0a] border border-[#2a2a2a] text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent resize-none" data-ai-agents-target="testInput"></textarea>
        </div>
        
        <div id="testResult" class="hidden mb-4" data-ai-agents-target="testResult">
          <label class="block text-sm font-medium text-gray-300 mb-2">Result</label>
          <div class="p-4 bg-[#0a0a0a] border border-[#2a2a2a] rounded-lg text-white whitespace-pre-wrap"></div>
        </div>
        
        <div id="testError" class="hidden mb-4" data-ai-agents-target="testError">
          <label class="block text-sm font-medium text-red-400 mb-2">Error</label>
          <div class="p-4 bg-red-500/10 border border-red-500/20 rounded-lg text-red-400"></div>
        </div>
      </div>
      
      <div class="px-6 py-4 border-t border-[#2a2a2a] flex items-center justify-end gap-3">
        <button onclick="closeTestModal()" class="px-4 py-2 bg-[#0a0a0a] hover:bg-[#111111] border border-[#2a2a2a] text-gray-300 hover:text-white rounded-lg transition">
          Close
        </button>
        <button data-action="click->ai-agents#runTest" id="testButton" class="px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg transition" data-ai-agents-target="testButton">
          Test Agent
        </button>
      </div>
    </div>
  </div>
</div>

