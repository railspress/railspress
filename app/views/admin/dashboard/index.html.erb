<% content_for :page_title, "Dashboard" %>

<div class="max-w-7xl mx-auto">
  <!-- Statistics Cards -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
    <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6 hover:border-indigo-500/50 transition-all group">
      <div class="flex items-center justify-between mb-3">
        <div class="bg-indigo-500/10 p-3 rounded-lg group-hover:bg-indigo-500/20 transition-colors">
          <svg class="w-6 h-6 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
        </div>
      </div>
      <p class="text-gray-400 text-sm font-medium mb-1">Total Posts</p>
      <p class="text-3xl font-bold text-white mb-1"><%= @posts_count %></p>
      <p class="text-sm text-gray-500"><%= @published_posts_count %> published</p>
    </div>

    <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6 hover:border-emerald-500/50 transition-all group">
      <div class="flex items-center justify-between mb-3">
        <div class="bg-emerald-500/10 p-3 rounded-lg group-hover:bg-emerald-500/20 transition-colors">
          <svg class="w-6 h-6 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
          </svg>
        </div>
      </div>
      <p class="text-gray-400 text-sm font-medium mb-1">Pages</p>
      <p class="text-3xl font-bold text-white mb-1"><%= @pages_count %></p>
      <p class="text-sm text-gray-500">Static pages</p>
    </div>

    <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6 hover:border-purple-500/50 transition-all group">
      <div class="flex items-center justify-between mb-3">
        <div class="bg-purple-500/10 p-3 rounded-lg group-hover:bg-purple-500/20 transition-colors">
          <svg class="w-6 h-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
          </svg>
        </div>
      </div>
      <p class="text-gray-400 text-sm font-medium mb-1">Comments</p>
      <p class="text-3xl font-bold text-white mb-1"><%= @comments_count %></p>
      <p class="text-sm text-gray-500"><%= @pending_comments_count %> pending</p>
    </div>

    <div class="bg-gradient-to-br from-indigo-500 to-purple-600 rounded-xl p-6 relative overflow-hidden">
      <div class="absolute top-0 right-0 w-32 h-32 bg-white/10 rounded-full -mr-16 -mt-16"></div>
      <div class="relative">
        <p class="text-indigo-100 text-sm font-medium mb-1">Quick Actions</p>
        <div class="mt-4 space-y-2">
          <%= link_to write_admin_posts_path, class: "block text-white hover:text-indigo-100 text-sm font-medium" do %>
            + Write
          <% end %>
          <%= link_to new_admin_page_path, class: "block text-white hover:text-indigo-100 text-sm font-medium" do %>
            + New Page
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Recent Content -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
    <!-- Recent Posts -->
    <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl overflow-hidden">
      <div class="flex items-center justify-between p-6 border-b border-[#2a2a2a]">
        <h2 class="text-lg font-semibold text-white">Recent Posts</h2>
        <%= link_to "View All →", admin_posts_path, class: "text-indigo-400 hover:text-indigo-300 text-sm font-medium" %>
      </div>
      <div class="divide-y divide-[#2a2a2a]">
        <% @recent_posts.each do |post| %>
          <div class="p-6 hover:bg-[#1a1a1a] transition-colors">
            <%= link_to post.title, admin_post_path(post), class: "text-white hover:text-indigo-400 font-medium block mb-2" %>
            <div class="flex items-center space-x-3 text-sm text-gray-500">
              <span class="px-2 py-1 rounded-md <%= post.status == 'published' ? 'bg-emerald-500/10 text-emerald-400' : 'bg-gray-500/10 text-gray-400' %>">
                <%= post.status.titleize %>
              </span>
              <span>•</span>
              <span><%= time_ago_in_words(post.created_at) %> ago</span>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Recent Comments -->
    <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl overflow-hidden">
      <div class="flex items-center justify-between p-6 border-b border-[#2a2a2a]">
        <h2 class="text-lg font-semibold text-white">Recent Comments</h2>
        <%= link_to "View All →", admin_comments_path, class: "text-indigo-400 hover:text-indigo-300 text-sm font-medium" %>
      </div>
      <div class="divide-y divide-[#2a2a2a]">
        <% @recent_comments.each do |comment| %>
          <div class="p-6 hover:bg-[#1a1a1a] transition-colors">
            <p class="text-gray-300 mb-2"><%= truncate(comment.content, length: 100) %></p>
            <div class="flex items-center space-x-3 text-sm text-gray-500">
              <span>By <%= comment.author %></span>
              <span>•</span>
              <span><%= time_ago_in_words(comment.created_at) %> ago</span>
              <span>•</span>
              <span class="px-2 py-1 rounded-md <%= comment.approved? ? 'bg-emerald-500/10 text-emerald-400' : 'bg-yellow-500/10 text-yellow-400' %>">
                <%= comment.status.titleize %>
              </span>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Quick Links -->
  <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6">
    <h2 class="text-lg font-semibold text-white mb-6">Quick Links</h2>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      <%= link_to admin_template_customizer_path, class: "group flex flex-col items-center p-6 border border-[#2a2a2a] rounded-lg hover:border-indigo-500/50 hover:bg-[#1a1a1a] transition-all" do %>
        <div class="w-12 h-12 bg-indigo-500/10 rounded-lg flex items-center justify-center mb-3 group-hover:bg-indigo-500/20 transition-colors">
          <svg class="w-6 h-6 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"></path>
          </svg>
        </div>
        <span class="text-sm font-medium text-gray-300 group-hover:text-white text-center">Customize Templates</span>
      <% end %>

      <%= link_to admin_categories_path, class: "group flex flex-col items-center p-6 border border-[#2a2a2a] rounded-lg hover:border-emerald-500/50 hover:bg-[#1a1a1a] transition-all" do %>
        <div class="w-12 h-12 bg-emerald-500/10 rounded-lg flex items-center justify-center mb-3 group-hover:bg-emerald-500/20 transition-colors">
          <svg class="w-6 h-6 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
          </svg>
        </div>
        <span class="text-sm font-medium text-gray-300 group-hover:text-white text-center">Manage Categories</span>
      <% end %>

      <%= link_to admin_menus_path, class: "group flex flex-col items-center p-6 border border-[#2a2a2a] rounded-lg hover:border-purple-500/50 hover:bg-[#1a1a1a] transition-all" do %>
        <div class="w-12 h-12 bg-purple-500/10 rounded-lg flex items-center justify-center mb-3 group-hover:bg-purple-500/20 transition-colors">
          <svg class="w-6 h-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </div>
        <span class="text-sm font-medium text-gray-300 group-hover:text-white text-center">Edit Menus</span>
      <% end %>

      <%= link_to admin_settings_path, class: "group flex flex-col items-center p-6 border border-[#2a2a2a] rounded-lg hover:border-gray-500/50 hover:bg-[#1a1a1a] transition-all" do %>
        <div class="w-12 h-12 bg-gray-500/10 rounded-lg flex items-center justify-center mb-3 group-hover:bg-gray-500/20 transition-colors">
          <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
        </div>
        <span class="text-sm font-medium text-gray-300 group-hover:text-white text-center">Site Settings</span>
      <% end %>
      
      <%= link_to api_v1_docs_path, target: "_blank", class: "group flex flex-col items-center p-6 border border-[#2a2a2a] rounded-lg hover:border-blue-500/50 hover:bg-[#1a1a1a] transition-all" do %>
        <div class="w-12 h-12 bg-blue-500/10 rounded-lg flex items-center justify-center mb-3 group-hover:bg-blue-500/20 transition-colors">
          <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
          </svg>
        </div>
        <span class="text-sm font-medium text-gray-300 group-hover:text-white text-center">API Documentation</span>
      <% end %>
    </div>
  </div>
  
  <!-- API Quick Access -->
  <div class="mt-8 bg-gradient-to-r from-indigo-500/10 to-purple-500/10 border border-indigo-500/20 rounded-xl p-6">
    <div class="flex items-start space-x-4">
      <div class="bg-indigo-500/20 p-3 rounded-lg">
        <svg class="w-6 h-6 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
        </svg>
      </div>
      <div class="flex-1">
        <h3 class="text-white font-semibold mb-2">Developer Resources</h3>
        <p class="text-gray-400 text-sm mb-4">Access the RailsPress API for programmatic content management</p>
        <div class="flex items-center space-x-4">
          <%= link_to "API Documentation", api_v1_docs_path, target: "_blank", class: "text-indigo-400 hover:text-indigo-300 text-sm font-medium" %>
          <span class="text-gray-600">•</span>
          <% if current_user %>
            <span class="text-sm text-gray-400">Your Token: <code class="text-indigo-400"><%= current_user.api_token ? current_user.api_token[0..15] + '...' : 'Not generated' %></code></span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
