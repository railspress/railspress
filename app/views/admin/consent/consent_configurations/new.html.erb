<div class="max-w-4xl mx-auto">
  <!-- Header -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-white">New Consent Configuration</h1>
    <p class="mt-2 text-gray-400">Create a new consent banner configuration</p>
  </div>

  <!-- Form -->
  <div class="bg-gray-800 rounded-lg shadow border border-gray-700">
    <div class="px-6 py-4 border-b border-gray-700">
      <h2 class="text-lg font-medium text-white">Configuration Details</h2>
    </div>
    
    <div class="p-6">
      <%= form_with model: [:admin, :consent, @consent_configuration], local: true, class: "space-y-6" do |form| %>
        <% if @consent_configuration.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-md p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">There were <%= pluralize(@consent_configuration.errors.count, "error") %> with your submission:</h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc pl-5 space-y-1">
                    <% @consent_configuration.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= form.label :name, class: "block text-sm font-medium text-white mb-2" %>
            <%= form.text_field :name, class: "w-full px-3 py-2 border border-gray-600 rounded-md shadow-sm bg-gray-700 text-white placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
          </div>

          <div>
            <%= form.label :banner_type, class: "block text-sm font-medium text-white mb-2" %>
            <%= form.select :banner_type, 
                options_for_select([
                  ['Bottom Banner', 'bottom_banner'],
                  ['Modal', 'modal'],
                  ['Overlay', 'overlay']
                ], @consent_configuration.banner_type),
                { prompt: 'Select banner type' },
                { class: "w-full px-3 py-2 border border-gray-600 rounded-md shadow-sm bg-gray-700 text-white focus:outline-none focus:ring-blue-500 focus:border-blue-500" } %>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= form.label :consent_mode, class: "block text-sm font-medium text-white mb-2" %>
            <%= form.select :consent_mode,
                options_for_select([
                  ['Opt-in', 'opt_in'],
                  ['Opt-out', 'opt_out'],
                  ['Implied', 'implied']
                ], @consent_configuration.consent_mode),
                { prompt: 'Select consent mode' },
                { class: "w-full px-3 py-2 border border-gray-600 rounded-md shadow-sm bg-gray-700 text-white focus:outline-none focus:ring-blue-500 focus:border-blue-500" } %>
          </div>

          <div class="flex items-center">
            <%= form.check_box :active, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-600 rounded bg-gray-700" %>
            <%= form.label :active, "Active Configuration", class: "ml-2 block text-sm text-white" %>
          </div>
        </div>

        <div class="flex items-center justify-end space-x-3 pt-6 border-t border-gray-700">
          <%= link_to admin_consent_consent_configurations_path, class: "px-4 py-2 border border-gray-600 rounded-md shadow-sm text-sm font-medium text-gray-300 bg-gray-700 hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500" do %>
            Cancel
          <% end %>
          <%= form.submit "Create Configuration", class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
