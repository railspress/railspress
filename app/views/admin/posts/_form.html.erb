<%= form_with(model: [:admin, post], class: "space-y-6") do |form| %>
  <% if post.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-600 px-4 py-3 rounded-lg">
      <h3 class="font-semibold mb-2"><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h3>
      <ul class="list-disc ml-6 text-sm">
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Title -->
  <div>
    <%= form.label :title, "Title", class: "block text-sm font-medium text-gray-300 mb-2" %>
    <%= form.text_field :title, 
        placeholder: "Enter post title...",
        class: "w-full px-4 py-3 bg-[#0a0a0a] border border-[#2a2a2a] text-white text-lg rounded-lg focus:border-indigo-500 focus:outline-none",
        required: true %>
  </div>

  <!-- Slug -->
  <div>
    <%= form.label :slug, "URL Slug", class: "block text-sm font-medium text-gray-300 mb-2" %>
    <div class="flex items-center gap-2">
      <span class="text-gray-500 text-sm">/blog/</span>
      <%= form.text_field :slug, 
          placeholder: "auto-generated-from-title",
          class: "flex-1 px-4 py-2 bg-[#0a0a0a] border border-[#2a2a2a] text-white rounded-lg focus:border-indigo-500 focus:outline-none font-mono text-sm" %>
    </div>
    <p class="mt-1 text-xs text-gray-500">Leave blank to auto-generate from title</p>
  </div>

  <!-- Content Editor -->
  <div>
    <%= ai_content_editor_label(form, :content, "Content") if ai_agents_available? %>
    <%= form.label :content, "Content", class: "block text-sm font-medium text-gray-300 mb-2" unless ai_agents_available? %>
    <%= render_content_editor(form, :content) %>
  </div>

  <!-- Excerpt -->
  <div>
    <%= form.label :excerpt, "Excerpt (Optional)", class: "block text-sm font-medium text-gray-300 mb-2" %>
    <%= form.text_area :excerpt, 
        rows: 3,
        placeholder: "Brief summary of the post...",
        class: "w-full px-4 py-3 bg-[#0a0a0a] border border-[#2a2a2a] text-white rounded-lg focus:border-indigo-500 focus:outline-none" %>
    <p class="mt-1 text-xs text-gray-500">Used in post previews and meta descriptions</p>
  </div>

  <!-- Status -->
  <div>
    <%= form.label :status, "Status", class: "block text-sm font-medium text-gray-300 mb-2" %>
    <%= form.select :status,
        options_for_select([
          ['Draft', 'draft'],
          ['Published', 'published'],
          ['Scheduled', 'scheduled'],
          ['Pending Review', 'pending_review'],
          ['Private', 'private_post']
        ], post.status || 'draft'),
        {},
        class: "w-full px-4 py-3 bg-[#0a0a0a] border border-[#2a2a2a] text-white rounded-lg focus:border-indigo-500 focus:outline-none" %>
  </div>

  <!-- Published At -->
  <div>
    <%= form.label :published_at, "Publish Date & Time", class: "block text-sm font-medium text-gray-300 mb-2" %>
    <%= form.datetime_local_field :published_at,
        class: "w-full px-4 py-3 bg-[#0a0a0a] border border-[#2a2a2a] text-white rounded-lg focus:border-indigo-500 focus:outline-none" %>
    <p class="mt-1 text-xs text-gray-500">Leave blank for immediate publish</p>
  </div>
  
  <!-- Password Protection -->
  <div class="border-t border-[#2a2a2a] pt-6">
    <h3 class="text-lg font-semibold text-white mb-4 flex items-center gap-2">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
      </svg>
      Password Protection
    </h3>
    
    <div class="space-y-4">
      <div>
        <%= form.label :password, "Password (optional)", class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= form.password_field :password,
            class: "w-full px-4 py-3 bg-[#0a0a0a] border border-[#2a2a2a] text-white rounded-lg focus:border-indigo-500 focus:outline-none",
            placeholder: "Leave blank for public access",
            autocomplete: "new-password" %>
        <p class="mt-1 text-xs text-gray-500">Require a password to view this post (minimum 4 characters)</p>
      </div>
      
      <div>
        <%= form.label :password_hint, "Password Hint (optional)", class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= form.text_field :password_hint,
            class: "w-full px-4 py-3 bg-[#0a0a0a] border border-[#2a2a2a] text-white rounded-lg focus:border-indigo-500 focus:outline-none",
            placeholder: "e.g., Your birth year" %>
        <p class="mt-1 text-xs text-gray-500">Shown to users when they enter the password</p>
      </div>
    </div>
  </div>

  <!-- Form Actions -->
  <div class="flex items-center justify-end gap-3 pt-6 border-t border-[#2a2a2a]">
    <%= link_to "Cancel", admin_posts_path, class: "px-6 py-2 border border-[#2a2a2a] hover:border-indigo-500 text-gray-300 hover:text-white rounded-lg transition" %>
    <%= form.submit post.new_record? ? "Create Post" : "Update Post", 
        class: "px-6 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg transition font-medium cursor-pointer" %>
  </div>
<% end %>

<!-- AI Popup Modal -->
<%= ai_popup_modal if ai_agents_available? %>
