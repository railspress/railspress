<% content_for :title, "Versions - #{@post.title}" %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Post Versions</h1>
      <p class="text-gray-600 dark:text-gray-400">View and restore previous versions of "<%= @post.title %>"</p>
    </div>
    <div class="flex items-center space-x-3">
      <%= link_to edit_admin_post_path(@post), class: "inline-flex items-center px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium rounded-lg transition-colors" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
        Edit Post
      <% end %>
      <%= link_to admin_posts_path, class: "inline-flex items-center px-4 py-2 bg-gray-600 hover:bg-gray-700 text-white text-sm font-medium rounded-lg transition-colors" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Back to Posts
      <% end %>
    </div>
  </div>

  <!-- Current Version Info -->
  <div class="bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-4">
    <div class="flex items-center gap-3">
      <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
        <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>
      <div>
        <h3 class="text-sm font-medium text-blue-900 dark:text-blue-100">Current Version</h3>
        <p class="text-sm text-blue-700 dark:text-blue-300">
          Last updated <%= time_ago_in_words(@post.updated_at) %> ago
          <% if @post.versions_count > 0 %>
            • <%= pluralize(@post.versions_count, 'version') %> available
          <% end %>
        </p>
      </div>
    </div>
  </div>

  <!-- Versions List -->
  <% if @versions.any? %>
    <div class="bg-white dark:bg-gray-800 shadow-sm rounded-lg border border-gray-200 dark:border-gray-700">
      <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
        <h2 class="text-lg font-medium text-gray-900 dark:text-white">Version History</h2>
      </div>
      
      <div class="divide-y divide-gray-200 dark:divide-gray-700">
        <% @versions.each_with_index do |version, index| %>
          <div class="px-6 py-4 hover:bg-gray-50 dark:hover:bg-gray-700/50 transition-colors">
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <div class="flex items-center gap-3 mb-2">
                  <div class="flex items-center gap-2">
                    <% if index == 0 %>
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200">
                        Current
                      </span>
                    <% else %>
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-200">
                        Version <%= @versions.count - index %>
                      </span>
                    <% end %>
                    
                    <% if version.event == 'create' %>
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200">
                        Created
                      </span>
                    <% elsif version.event == 'update' %>
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200">
                        Updated
                      </span>
                    <% end %>
                  </div>
                </div>
                
                <div class="text-sm text-gray-600 dark:text-gray-400 mb-2">
                  <div class="flex items-center gap-4">
                    <span>
                      <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                      </svg>
                      <%= version.created_at.strftime('%B %d, %Y at %I:%M %p') %>
                    </span>
                    <span>
                      <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                      </svg>
                      <%= version.whodunnit ? User.find_by(id: version.whodunnit)&.name : 'System' %>
                    </span>
                  </div>
                </div>
                
                <div class="text-sm text-gray-700 dark:text-gray-300">
                  <strong>Changes:</strong> <%= @post.version_summary(version) %>
                </div>
                
                <% if version.changeset.any? %>
                  <div class="mt-2 text-xs text-gray-500 dark:text-gray-400">
                    <details class="cursor-pointer">
                      <summary class="hover:text-gray-700 dark:hover:text-gray-300">View detailed changes</summary>
                      <div class="mt-2 space-y-1">
                        <% version.changeset.each do |field, change| %>
                          <div class="flex items-center gap-2">
                            <span class="font-medium"><%= field.humanize %>:</span>
                            <span class="text-red-600 dark:text-red-400 line-through"><%= truncate(change[0] || 'empty', length: 50) %></span>
                            <span class="text-gray-400">→</span>
                            <span class="text-green-600 dark:text-green-400"><%= truncate(change[1] || 'empty', length: 50) %></span>
                          </div>
                        <% end %>
                      </div>
                    </details>
                  </div>
                <% end %>
              </div>
              
              <div class="flex items-center gap-2 ml-4">
                <% if index > 0 %>
                  <%= button_to restore_version_admin_post_path(@post, version_id: version.id), 
                      method: :post,
                      data: { 
                        confirm: 'Are you sure you want to restore this version? The current version will be backed up.',
                        turbo_confirm: 'Are you sure you want to restore this version? The current version will be backed up.'
                      },
                      class: "px-3 py-1.5 text-sm bg-indigo-600 hover:bg-indigo-700 text-white rounded-md transition-colors" do %>
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                    </svg>
                    Restore
                  <% end %>
                <% else %>
                  <span class="px-3 py-1.5 text-sm bg-gray-100 dark:bg-gray-700 text-gray-500 dark:text-gray-400 rounded-md">
                    Current
                  </span>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="bg-white dark:bg-gray-800 shadow-sm rounded-lg border border-gray-200 dark:border-gray-700 p-8 text-center">
      <svg class="w-12 h-12 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
      </svg>
      <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">No Versions Available</h3>
      <p class="text-gray-600 dark:text-gray-400">
        This post doesn't have any previous versions yet. Versions will be created automatically when you make changes.
      </p>
    </div>
  <% end %>
</div>
