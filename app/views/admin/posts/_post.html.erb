<div id="<%= dom_id post %>" class="flex items-center justify-between py-4 border-b border-gray-200 last:border-b-0">
  <div class="flex-1">
    <div class="flex items-center gap-4">
      <!-- Status Badge -->
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= status_badge_class(post.status) %>">
        <%= post.status.humanize %>
      </span>
      
      <!-- Title -->
      <h3 class="text-lg font-medium text-gray-900 hover:text-indigo-600">
        <%= link_to post.title, [:admin, post], class: "hover:underline" %>
      </h3>
    </div>
    
    <!-- Meta Info -->
    <div class="mt-2 flex items-center gap-4 text-sm text-gray-500">
      <span>By <%= post.author_name %></span>
      <span>•</span>
      <span><%= post.created_at.strftime("%B %d, %Y") %></span>
      <% if post.published_at.present? %>
        <span>•</span>
        <span>Published <%= post.published_at.strftime("%B %d, %Y") %></span>
      <% end %>
      <% if post.categories.any? %>
        <span>•</span>
        <span class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
          </svg>
          <%= post.categories.map(&:name).join(", ") %>
        </span>
      <% end %>
    </div>
  </div>
  
  <!-- Actions -->
  <div class="flex items-center gap-2">
    <%= link_to [:admin, post], class: "text-gray-600 hover:text-gray-900 p-2 rounded-lg hover:bg-gray-100" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
      </svg>
    <% end %>
    <%= link_to edit_admin_post_path(post), class: "text-gray-600 hover:text-gray-900 p-2 rounded-lg hover:bg-gray-100" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
      </svg>
    <% end %>
    <% if post.discarded? %>
      <%= link_to restore_admin_post_path(post), method: :patch, 
          class: "text-green-600 hover:text-green-900 p-2 rounded-lg hover:bg-green-50", 
          data: { turbo_confirm: "Restore this post from trash?" } do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
        </svg>
      <% end %>
      <%= button_to [:admin, post], method: :delete, 
          class: "text-red-600 hover:text-red-900 p-2 rounded-lg hover:bg-red-50", 
          data: { turbo_confirm: "Permanently delete this post? This cannot be undone." } do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
        </svg>
      <% end %>
    <% else %>
      <%= button_to [:admin, post], method: :delete, 
          class: "text-red-600 hover:text-red-900 p-2 rounded-lg hover:bg-red-50", 
          data: { turbo_confirm: "Move this post to trash?" } do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
        </svg>
      <% end %>
    <% end %>
  </div>
</div>
