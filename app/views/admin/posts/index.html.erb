<% content_for :title, "Posts" %>
<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "admin/shared", "data-turbo-track": "reload" %>
  <%= stylesheet_link_tag "tabulator_custom", "data-turbo-track": "reload" %>
<% end %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold text-white">Posts</h1>
      <p class="text-gray-400">Manage your blog posts and articles</p>
    </div>
    <div class="flex items-center space-x-3">
      <%= link_to new_admin_post_path, class: "inline-flex items-center px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium rounded-lg transition-colors" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        New Post
      <% end %>
    </div>
  </div>

  <!-- Stats Cards -->
  <%= render 'admin/shared/stats_cards', stats: @stats %>

  <!-- Navigation Tabs -->
  <div class="border-b border-gray-700">
    <nav class="-mb-px flex space-x-8">
      <%= link_to admin_posts_path, 
          class: "py-2 px-1 border-b-2 font-medium text-sm #{'border-indigo-500 text-indigo-400' if params[:show_trash] != 'true'}" do %>
        All Posts
      <% end %>
      <%= link_to admin_posts_path(show_trash: 'true'), 
          class: "py-2 px-1 border-b-2 font-medium text-sm #{'border-indigo-500 text-indigo-400' if params[:show_trash] == 'true'}" do %>
        Trash
      <% end %>
    </nav>
  </div>

  <!-- Admin Table -->
  <%= render 'admin/shared/admin_table', 
      table_type: 'posts', 
      data: @posts_data, 
      columns: @columns,
      bulk_actions: @bulk_actions,
      status_options: @status_options,
      search_placeholder: "Search posts..." %>
</div>