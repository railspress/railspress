<% content_for :page_title, "Image Optimization Analytics" %>

<div class="max-w-7xl mx-auto">
  <!-- Header -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-white mb-2">ðŸ“Š Image Optimization Analytics</h1>
    <p class="text-gray-400">Comprehensive insights into your image optimization performance</p>
  </div>

  <!-- Overview Stats Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <!-- Total Optimizations -->
    <div class="bg-gradient-to-br from-blue-600 to-blue-700 rounded-xl p-6 text-white">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-blue-100 text-sm font-medium">Total Optimizations</p>
          <p class="text-3xl font-bold mt-1"><%= @stats[:total_optimizations] %></p>
        </div>
        <div class="w-12 h-12 bg-blue-500 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
            <path d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z"/>
          </svg>
        </div>
      </div>
      <div class="mt-4 flex items-center text-blue-100 text-sm">
        <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
        </svg>
        <%= @stats[:successful_optimizations] %> successful
      </div>
    </div>

    <!-- Space Saved -->
    <div class="bg-gradient-to-br from-green-600 to-green-700 rounded-xl p-6 text-white">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-green-100 text-sm font-medium">Space Saved</p>
          <p class="text-3xl font-bold mt-1"><%= @stats[:total_size_saved_mb] %> MB</p>
        </div>
        <div class="w-12 h-12 bg-green-500 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"/>
          </svg>
        </div>
      </div>
      <div class="mt-4 flex items-center text-green-100 text-sm">
        <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"/>
        </svg>
        <%= @stats[:average_size_reduction] %>% average reduction
      </div>
    </div>

    <!-- Processing Time -->
    <div class="bg-gradient-to-br from-purple-600 to-purple-700 rounded-xl p-6 text-white">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-purple-100 text-sm font-medium">Avg Processing Time</p>
          <p class="text-3xl font-bold mt-1"><%= @stats[:average_processing_time] %>s</p>
        </div>
        <div class="w-12 h-12 bg-purple-500 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
          </svg>
        </div>
      </div>
      <div class="mt-4 flex items-center text-purple-100 text-sm">
        <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"/>
        </svg>
        Lightning fast processing
      </div>
    </div>

    <!-- Success Rate -->
    <div class="bg-gradient-to-br from-orange-600 to-orange-700 rounded-xl p-6 text-white">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-orange-100 text-sm font-medium">Success Rate</p>
          <p class="text-3xl font-bold mt-1">
            <%= (@stats[:total_optimizations] > 0 ? (@stats[:successful_optimizations].to_f / @stats[:total_optimizations] * 100).round(1) : 0) %>%
          </p>
        </div>
        <div class="w-12 h-12 bg-orange-500 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
        </div>
      </div>
      <div class="mt-4 flex items-center text-orange-100 text-sm">
        <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"/>
        </svg>
        <%= @stats[:failed_optimizations] %> failed
      </div>
    </div>
  </div>

  <!-- Charts and Analytics -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
    <!-- Compression Level Distribution -->
    <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6">
      <h3 class="text-xl font-semibold text-white mb-4">ðŸŽ¯ Compression Level Distribution</h3>
      <div class="space-y-4">
        <% @compression_level_stats.each do |level, count| %>
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <div class="w-3 h-3 rounded-full mr-3 <%= case level
                when 'lossless' then 'bg-blue-500'
                when 'lossy' then 'bg-green-500'
                when 'ultra' then 'bg-purple-500'
                when 'custom' then 'bg-orange-500'
                else 'bg-gray-500'
              end %>"></div>
              <span class="text-gray-300 capitalize"><%= level %></span>
            </div>
            <div class="flex items-center">
              <span class="text-white font-medium mr-2"><%= count %></span>
              <div class="w-20 bg-gray-700 rounded-full h-2">
                <div class="h-2 rounded-full <%= case level
                  when 'lossless' then 'bg-blue-500'
                  when 'lossy' then 'bg-green-500'
                  when 'ultra' then 'bg-purple-500'
                  when 'custom' then 'bg-orange-500'
                  else 'bg-gray-500'
                end %>" style="width: <%= (@compression_level_stats.values.sum > 0 ? (count.to_f / @compression_level_stats.values.sum * 100) : 0).round(1) %>%"></div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Optimization Types -->
    <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6">
      <h3 class="text-xl font-semibold text-white mb-4">âš¡ Optimization Types</h3>
      <div class="space-y-4">
        <% @optimization_type_stats.each do |type, count| %>
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <div class="w-3 h-3 rounded-full mr-3 <%= case type
                when 'upload' then 'bg-blue-500'
                when 'bulk' then 'bg-green-500'
                when 'manual' then 'bg-purple-500'
                when 'regenerate' then 'bg-orange-500'
                else 'bg-gray-500'
              end %>"></div>
              <span class="text-gray-300 capitalize"><%= type %></span>
            </div>
            <div class="flex items-center">
              <span class="text-white font-medium mr-2"><%= count %></span>
              <div class="w-20 bg-gray-700 rounded-full h-2">
                <div class="h-2 rounded-full <%= case type
                  when 'upload' then 'bg-blue-500'
                  when 'bulk' then 'bg-green-500'
                  when 'manual' then 'bg-purple-500'
                  when 'regenerate' then 'bg-orange-500'
                  else 'bg-gray-500'
                end %>" style="width: <%= (@optimization_type_stats.values.sum > 0 ? (count.to_f / @optimization_type_stats.values.sum * 100) : 0).round(1) %>%"></div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Recent Optimizations -->
  <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6 mb-8">
    <div class="flex items-center justify-between mb-6">
      <h3 class="text-xl font-semibold text-white">ðŸ•’ Recent Optimizations</h3>
      <div class="flex space-x-2">
        <%= link_to "View All", admin_image_optimization_analytics_report_path, 
            class: "px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg transition font-medium" %>
        <%= link_to "Export CSV", admin_image_optimization_analytics_export_path, 
            class: "px-4 py-2 bg-green-600 hover:bg-green-700 text-white rounded-lg transition font-medium" %>
      </div>
    </div>
    
    <div class="overflow-x-auto">
      <table class="w-full text-sm">
        <thead>
          <tr class="border-b border-[#2a2a2a]">
            <th class="text-left text-gray-400 py-3">File</th>
            <th class="text-left text-gray-400 py-3">User</th>
            <th class="text-left text-gray-400 py-3">Compression</th>
            <th class="text-left text-gray-400 py-3">Size Reduction</th>
            <th class="text-left text-gray-400 py-3">Status</th>
            <th class="text-left text-gray-400 py-3">Time</th>
          </tr>
        </thead>
        <tbody>
          <% @recent_optimizations.each do |log| %>
            <tr class="border-b border-[#2a2a2a] hover:bg-[#0a0a0a] transition">
              <td class="py-3">
                <div class="flex items-center">
                  <div class="w-8 h-8 bg-gray-700 rounded mr-3 flex items-center justify-center">
                    <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z"/>
                    </svg>
                  </div>
                  <div>
                    <p class="text-white font-medium"><%= log.filename %></p>
                    <p class="text-gray-400 text-xs"><%= log.content_type %></p>
                  </div>
                </div>
              </td>
              <td class="py-3 text-gray-300"><%= log.user&.email || 'Unknown' %></td>
              <td class="py-3">
                <span class="px-2 py-1 rounded text-xs font-medium <%= case log.compression_level
                  when 'lossless' then 'bg-blue-100 text-blue-800'
                  when 'lossy' then 'bg-green-100 text-green-800'
                  when 'ultra' then 'bg-purple-100 text-purple-800'
                  when 'custom' then 'bg-orange-100 text-orange-800'
                  else 'bg-gray-100 text-gray-800'
                end %>">
                  <%= log.compression_level.capitalize %>
                </span>
              </td>
              <td class="py-3 text-gray-300">
                <div class="flex items-center">
                  <span class="text-green-400 font-medium"><%= log.size_reduction_percentage %>%</span>
                  <span class="text-gray-400 ml-1">(<%= log.size_reduction_mb %> MB)</span>
                </div>
              </td>
              <td class="py-3">
                <span class="px-2 py-1 rounded text-xs font-medium <%= case log.status
                  when 'success' then 'bg-green-100 text-green-800'
                  when 'failed' then 'bg-red-100 text-red-800'
                  when 'skipped' then 'bg-yellow-100 text-yellow-800'
                  else 'bg-gray-100 text-gray-800'
                end %>">
                  <%= log.status.capitalize %>
                </span>
              </td>
              <td class="py-3 text-gray-300"><%= log.processing_time_formatted %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <%= link_to admin_image_optimization_analytics_failed_path, 
        class: "bg-red-600 hover:bg-red-700 rounded-xl p-6 text-white transition group" do %>
      <div class="flex items-center">
        <div class="w-12 h-12 bg-red-500 rounded-lg flex items-center justify-center mr-4">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div>
          <h4 class="font-semibold">Failed Optimizations</h4>
          <p class="text-red-100 text-sm">View and debug failed optimizations</p>
        </div>
      </div>
    <% end %>

    <%= link_to admin_image_optimization_analytics_top_savings_path, 
        class: "bg-green-600 hover:bg-green-700 rounded-xl p-6 text-white transition group" do %>
      <div class="flex items-center">
        <div class="w-12 h-12 bg-green-500 rounded-lg flex items-center justify-center mr-4">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M3 3a1 1 0 000 2v8a2 2 0 002 2h2.586l-1.293 1.293a1 1 0 101.414 1.414L10 15.414l2.293 2.293a1 1 0 001.414-1.414L12.414 15H15a2 2 0 002-2V5a1 1 0 100-2H3zm11.707 4.707a1 1 0 00-1.414-1.414L10 9.586 8.707 8.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div>
          <h4 class="font-semibold">Top Savings</h4>
          <p class="text-green-100 text-sm">See your best optimizations</p>
        </div>
      </div>
    <% end %>

    <%= link_to admin_image_optimization_analytics_performance_path, 
        class: "bg-purple-600 hover:bg-purple-700 rounded-xl p-6 text-white transition group" do %>
      <div class="flex items-center">
        <div class="w-12 h-12 bg-purple-500 rounded-lg flex items-center justify-center mr-4">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div>
          <h4 class="font-semibold">Performance</h4>
          <p class="text-purple-100 text-sm">Detailed performance metrics</p>
        </div>
      </div>
    <% end %>
  </div>
</div>
