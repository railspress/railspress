<% content_for :title, "AI Providers" %>

<div class="max-w-7xl mx-auto">
  <!-- Header -->
  <div class="flex items-center justify-between mb-8">
    <div>
      <h1 class="text-3xl font-bold text-white mb-2">AI Providers</h1>
      <p class="text-gray-400">Manage AI service providers and their configurations</p>
    </div>
    <%= link_to new_admin_ai_provider_path, class: "px-6 py-3 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg font-medium transition" do %>
      <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
      </svg>
      Add Provider
    <% end %>
  </div>

  <!-- Stats Cards -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
    <div class="bg-[#1a1a1a] border border-[#2a2a2a] rounded-xl p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-400 text-sm">Total Providers</p>
          <p class="text-2xl font-bold text-white"><%= @ai_providers.count %></p>
        </div>
        <div class="w-12 h-12 bg-indigo-500/10 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-[#1a1a1a] border border-[#2a2a2a] rounded-xl p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-400 text-sm">Active Providers</p>
          <p class="text-2xl font-bold text-white"><%= @ai_providers.active.count %></p>
        </div>
        <div class="w-12 h-12 bg-green-500/10 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-[#1a1a1a] border border-[#2a2a2a] rounded-xl p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-400 text-sm">Total Agents</p>
          <p class="text-2xl font-bold text-white"><%= @ai_providers.joins(:ai_agents).count %></p>
        </div>
        <div class="w-12 h-12 bg-blue-500/10 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-[#1a1a1a] border border-[#2a2a2a] rounded-xl p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-400 text-sm">Provider Types</p>
          <p class="text-2xl font-bold text-white"><%= @ai_providers.distinct.count(:provider_type) %></p>
        </div>
        <div class="w-12 h-12 bg-purple-500/10 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Providers List -->
  <div class="bg-[#1a1a1a] border border-[#2a2a2a] rounded-xl overflow-hidden">
    <div class="px-6 py-4 border-b border-[#2a2a2a]">
      <h2 class="text-lg font-semibold text-white">AI Providers</h2>
    </div>

    <% if @ai_providers.any? %>
      <div class="divide-y divide-[#2a2a2a]">
        <% @ai_providers.each do |provider| %>
          <div class="p-6 hover:bg-[#111111] transition">
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-4">
                <div class="w-12 h-12 bg-indigo-500/10 rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                </div>
                
                <div>
                  <div class="flex items-center gap-3 mb-1">
                    <h3 class="text-lg font-semibold text-white"><%= provider.name %></h3>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= provider.active? ? 'bg-green-500/10 text-green-400' : 'bg-gray-500/10 text-gray-400' %>">
                      <%= provider.active? ? 'Active' : 'Inactive' %>
                    </span>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-500/10 text-indigo-400">
                      <%= provider.provider_type.titleize %>
                    </span>
                  </div>
                  
                  <p class="text-gray-400 text-sm mb-2">Model: <%= provider.model_identifier %></p>
                  <p class="text-gray-500 text-xs">Max Tokens: <%= provider.max_tokens %> | Temperature: <%= provider.temperature %></p>
                </div>
              </div>

              <div class="flex items-center space-x-2">
                <span class="text-sm text-gray-400">
                  <%= pluralize(provider.ai_agents.count, 'agent') %>
                </span>
                
                <%= link_to edit_admin_ai_provider_path(provider), class: "p-2 text-gray-400 hover:text-white hover:bg-[#2a2a2a] rounded-lg transition" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                  </svg>
                <% end %>

                <%= link_to admin_ai_provider_path(provider), method: :patch, params: { toggle: true }, class: "p-2 text-gray-400 hover:text-white hover:bg-[#2a2a2a] rounded-lg transition" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l4-4 4 4m0 6l-4 4-4-4"/>
                  </svg>
                <% end %>

                <%= link_to admin_ai_provider_path(provider), method: :delete, data: { confirm: "Are you sure? This will also delete all associated agents." }, class: "p-2 text-gray-400 hover:text-red-400 hover:bg-[#2a2a2a] rounded-lg transition" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                  </svg>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="p-12 text-center">
        <svg class="w-16 h-16 text-gray-500 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
        </svg>
        <h3 class="text-lg font-semibold text-white mb-2">No AI Providers</h3>
        <p class="text-gray-400 mb-6">Get started by adding your first AI provider</p>
        <%= link_to new_admin_ai_provider_path, class: "px-6 py-3 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg font-medium transition" do %>
          Add Provider
        <% end %>
      </div>
    <% end %>
  </div>
</div>