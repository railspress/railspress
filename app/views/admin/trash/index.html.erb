<div class="admin-container">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-white">Trash</h1>
        <p class="text-gray-400 mt-2">Manage deleted content and restore items</p>
      </div>
      <div class="flex space-x-3">
        <%= link_to admin_trash_settings_path, class: "inline-flex items-center px-4 py-2 bg-gray-700 hover:bg-gray-600 text-white rounded-lg transition" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          Settings
        <% end %>
        <%= link_to empty_trash_admin_trash_index_path, method: :delete, 
            class: "inline-flex items-center px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg transition",
            data: { confirm: "Are you sure? This will permanently delete all items in trash." } do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
          </svg>
          Empty Trash
        <% end %>
      </div>
    </div>
  </div>

  <!-- Stats Cards -->
  <div class="grid grid-cols-1 md:grid-cols-5 gap-6 mb-8">
    <div class="bg-gray-800 rounded-lg p-6">
      <div class="flex items-center">
        <div class="p-2 bg-blue-500 rounded-lg">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-400">Posts</p>
          <p class="text-2xl font-bold text-white"><%= @stats[:posts] %></p>
        </div>
      </div>
    </div>
    
    <div class="bg-gray-800 rounded-lg p-6">
      <div class="flex items-center">
        <div class="p-2 bg-green-500 rounded-lg">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-400">Pages</p>
          <p class="text-2xl font-bold text-white"><%= @stats[:pages] %></p>
        </div>
      </div>
    </div>
    
    <div class="bg-gray-800 rounded-lg p-6">
      <div class="flex items-center">
        <div class="p-2 bg-purple-500 rounded-lg">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-400">Media</p>
          <p class="text-2xl font-bold text-white"><%= @stats[:media] %></p>
        </div>
      </div>
    </div>
    
    <div class="bg-gray-800 rounded-lg p-6">
      <div class="flex items-center">
        <div class="p-2 bg-yellow-500 rounded-lg">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-400">Comments</p>
          <p class="text-2xl font-bold text-white"><%= @stats[:comments] %></p>
        </div>
      </div>
    </div>
    
    <div class="bg-gray-800 rounded-lg p-6">
      <div class="flex items-center">
        <div class="p-2 bg-red-500 rounded-lg">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-400">Total</p>
          <p class="text-2xl font-bold text-white"><%= @stats[:total] %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Tabs -->
  <div class="mb-6">
    <nav class="flex space-x-8" aria-label="Tabs">
      <button onclick="showTab('posts')" id="posts-tab" class="tab-button active">
        Posts (<%= @stats[:posts] %>)
      </button>
      <button onclick="showTab('pages')" id="pages-tab" class="tab-button">
        Pages (<%= @stats[:pages] %>)
      </button>
      <button onclick="showTab('media')" id="media-tab" class="tab-button">
        Media (<%= @stats[:media] %>)
      </button>
      <button onclick="showTab('comments')" id="comments-tab" class="tab-button">
        Comments (<%= @stats[:comments] %>)
      </button>
    </nav>
  </div>

  <!-- Tab Content -->
  <div id="posts-content" class="tab-content">
    <%= render 'trash_table', items: @posts, type: 'Post', columns: [
      { title: 'Title', field: 'title' },
      { title: 'Author', field: 'author_name' },
      { title: 'Type', field: 'post_type' },
      { title: 'Status', field: 'status' },
      { title: 'Deleted At', field: 'deleted_at' },
      { title: 'Actions', field: 'actions' }
    ] %>
  </div>

  <div id="pages-content" class="tab-content hidden">
    <%= render 'trash_table', items: @pages, type: 'Page', columns: [
      { title: 'Title', field: 'title' },
      { title: 'Author', field: 'author_name' },
      { title: 'Status', field: 'status' },
      { title: 'Deleted At', field: 'deleted_at' },
      { title: 'Actions', field: 'actions' }
    ] %>
  </div>

  <div id="media-content" class="tab-content hidden">
    <%= render 'trash_table', items: @media, type: 'Medium', columns: [
      { title: 'Title', field: 'title' },
      { title: 'Filename', field: 'filename' },
      { title: 'Type', field: 'file_type' },
      { title: 'Size', field: 'file_size' },
      { title: 'Deleted At', field: 'deleted_at' },
      { title: 'Actions', field: 'actions' }
    ] %>
  </div>

  <div id="comments-content" class="tab-content hidden">
    <%= render 'trash_table', items: @comments, type: 'Comment', columns: [
      { title: 'Author', field: 'author_name' },
      { title: 'Comment', field: 'content' },
      { title: 'On', field: 'commentable_title' },
      { title: 'Deleted At', field: 'deleted_at' },
      { title: 'Actions', field: 'actions' }
    ] %>
  </div>
</div>

<style>
.tab-button {
  @apply px-1 py-4 text-sm font-medium border-b-2 border-transparent text-gray-400 hover:text-gray-300 hover:border-gray-300 transition;
}

.tab-button.active {
  @apply text-white border-indigo-500;
}

.tab-content {
  @apply bg-gray-800 rounded-lg shadow;
}
</style>

<script>
function showTab(tabName) {
  // Hide all tab contents
  document.querySelectorAll('.tab-content').forEach(content => {
    content.classList.add('hidden');
  });
  
  // Remove active class from all tabs
  document.querySelectorAll('.tab-button').forEach(tab => {
    tab.classList.remove('active');
  });
  
  // Show selected tab content
  document.getElementById(tabName + '-content').classList.remove('hidden');
  
  // Add active class to selected tab
  document.getElementById(tabName + '-tab').classList.add('active');
}
</script>

