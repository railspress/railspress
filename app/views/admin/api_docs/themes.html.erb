<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-8">
    <%= link_to admin_api_docs_path, class: "inline-flex items-center text-sm text-gray-400 hover:text-white mb-4" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Back to API Docs
    <% end %>
    <h1 class="text-3xl font-bold text-white mb-2">Theme Development Documentation</h1>
    <p class="text-gray-400">Learn how to build beautiful Liquid-based themes for RailsPress</p>
  </div>

  <!-- Theme System Overview -->
  <div class="bg-[#1a1a1a] border border-[#2a2a2a] rounded-xl p-6 mb-6">
    <div class="flex items-center mb-4">
      <svg class="w-6 h-6 text-pink-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"/>
      </svg>
      <h2 class="text-2xl font-bold text-white">Theme System</h2>
    </div>
    <p class="text-gray-300 mb-4">RailsPress uses Liquid templating engine for flexible and powerful theme development.</p>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="bg-[#0d0d0d] rounded-lg p-4 border border-[#2a2a2a]">
        <h3 class="text-lg font-semibold text-white mb-3">Core Features</h3>
        <div class="space-y-2 text-sm text-gray-300">
          <div class="flex items-center">
            <span class="w-2 h-2 bg-pink-500 rounded-full mr-3"></span>
            Liquid templating engine
          </div>
          <div class="flex items-center">
            <span class="w-2 h-2 bg-pink-500 rounded-full mr-3"></span>
            Component-based architecture
          </div>
          <div class="flex items-center">
            <span class="w-2 h-2 bg-pink-500 rounded-full mr-3"></span>
            Asset management system
          </div>
          <div class="flex items-center">
            <span class="w-2 h-2 bg-pink-500 rounded-full mr-3"></span>
            Custom post types support
          </div>
        </div>
      </div>
      
      <div class="bg-[#0d0d0d] rounded-lg p-4 border border-[#2a2a2a]">
        <h3 class="text-lg font-semibold text-white mb-3">Development</h3>
        <div class="space-y-2 text-sm text-gray-300">
          <div class="flex items-center">
            <span class="w-2 h-2 bg-green-500 rounded-full mr-3"></span>
            Hot reloading in development
          </div>
          <div class="flex items-center">
            <span class="w-2 h-2 bg-green-500 rounded-full mr-3"></span>
            Built-in debugging tools
          </div>
          <div class="flex items-center">
            <span class="w-2 h-2 bg-green-500 rounded-full mr-3"></span>
            Theme validation system
          </div>
          <div class="flex items-center">
            <span class="w-2 h-2 bg-green-500 rounded-full mr-3"></span>
            Documentation generator
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Documentation Files -->
  <div class="bg-[#1a1a1a] border border-[#2a2a2a] rounded-xl p-6 mb-6">
    <div class="flex items-center mb-6">
      <svg class="w-6 h-6 text-purple-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
      </svg>
      <h2 class="text-2xl font-bold text-white">Documentation Files</h2>
    </div>

    <div class="space-y-4">
      <% @theme_docs.each do |doc| %>
        <div class="bg-[#0d0d0d] rounded-lg p-4 border border-[#2a2a2a] hover:border-pink-500 transition-colors">
          <div class="flex items-start justify-between mb-3">
            <div class="flex-1">
              <h3 class="text-lg font-semibold text-white mb-1"><%= doc[:title] %></h3>
              <div class="flex items-center space-x-2">
                <code class="text-xs bg-[#1a1a1a] text-pink-400 px-2 py-1 rounded border border-[#2a2a2a]"><%= doc[:filename] %>.md</code>
                <span class="text-xs text-gray-500"><%= doc[:content].length %> characters</span>
              </div>
            </div>
            <a href="<%= doc[:url] %>" target="_blank" class="ml-4 inline-flex items-center px-3 py-2 bg-pink-600 hover:bg-pink-700 text-white rounded-lg text-sm font-medium transition-colors">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
              </svg>
              View
            </a>
          </div>
          
          <!-- Content Preview -->
          <div class="text-gray-300 text-sm mb-3 line-clamp-2">
            <%= doc[:content].gsub(/^#.*$/, '').strip[0..200] %>...
          </div>
          
          <!-- Expandable full content -->
          <details class="mt-3">
            <summary class="cursor-pointer text-sm text-pink-400 hover:text-pink-300 font-medium">
              Show Full Content
            </summary>
            <div class="mt-3 p-4 bg-[#1a1a1a] rounded-lg border border-[#2a2a2a]">
              <div class="prose prose-invert prose-sm max-w-none">
                <pre class="text-gray-300 text-sm whitespace-pre-wrap font-mono"><%= doc[:content] %></pre>
              </div>
            </div>
          </details>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Featured Themes -->
  <div class="bg-[#1a1a1a] border border-[#2a2a2a] rounded-xl p-6">
    <div class="flex items-center mb-6">
      <svg class="w-6 h-6 text-blue-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
      </svg>
      <h2 class="text-2xl font-bold text-white">Featured Themes</h2>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="bg-[#0d0d0d] rounded-lg p-6 border border-[#2a2a2a] hover:border-blue-500 transition-colors">
        <div class="flex items-start mb-4">
          <div class="w-12 h-12 bg-blue-500/20 rounded-lg flex items-center justify-center mr-4">
            <svg class="w-6 h-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"/>
            </svg>
          </div>
          <div class="flex-1">
            <h3 class="text-lg font-semibold text-white mb-1">Nordic Theme</h3>
            <p class="text-gray-400 text-sm mb-3">Modern minimalist design with Liquid templates and clean typography</p>
            <div class="flex items-center space-x-2">
              <span class="text-xs text-green-400 bg-green-400/10 px-2 py-1 rounded">Default</span>
              <span class="text-xs text-blue-400 bg-blue-400/10 px-2 py-1 rounded">Responsive</span>
            </div>
          </div>
        </div>
        <a href="/docs/themes/nordic.md" target="_blank" class="inline-flex items-center text-blue-400 hover:text-blue-300 text-sm font-medium">
          View Documentation
          <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
          </svg>
        </a>
      </div>
      
      <div class="bg-[#0d0d0d] rounded-lg p-6 border border-[#2a2a2a] hover:border-purple-500 transition-colors">
        <div class="flex items-start mb-4">
          <div class="w-12 h-12 bg-purple-500/20 rounded-lg flex items-center justify-center mr-4">
            <svg class="w-6 h-6 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"/>
            </svg>
          </div>
          <div class="flex-1">
            <h3 class="text-lg font-semibold text-white mb-1">Twenty Twenty-Five</h3>
            <p class="text-gray-400 text-sm mb-3">WordPress-inspired professional theme with block editor support</p>
            <div class="flex items-center space-x-2">
              <span class="text-xs text-purple-400 bg-purple-400/10 px-2 py-1 rounded">Professional</span>
              <span class="text-xs text-yellow-400 bg-yellow-400/10 px-2 py-1 rounded">Block Editor</span>
            </div>
          </div>
        </div>
        <a href="/docs/themes/twenty_twenty_five.md" target="_blank" class="inline-flex items-center text-purple-400 hover:text-purple-300 text-sm font-medium">
          View Documentation
          <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</div>


