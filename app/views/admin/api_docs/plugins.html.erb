<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "admin/api_docs", "data-turbo-track": "reload" %>
<% end %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 api-docs-smooth-scroll">
  <!-- Header -->
  <div class="mb-8">
    <%= link_to admin_api_docs_path, class: "inline-flex items-center text-sm text-gray-400 hover:text-white mb-4" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Back to API Docs
    <% end %>
    <h1 class="text-3xl font-bold text-white mb-2">Plugin Development Documentation</h1>
    <p class="text-gray-400">Complete guide to building powerful plugins that extend RailsPress functionality</p>
  </div>

  <!-- Documentation Content -->
  <div class="bg-[#1a1a1a] border border-[#2a2a2a] rounded-xl p-6">
    <% if @plugin_docs_content.present? %>
      <div class="markdown-content">
        <%= raw @plugin_docs_content %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-white">Documentation not found</h3>
        <p class="mt-1 text-sm text-gray-400">
          Plugin development documentation is not available at the moment.
        </p>
        <div class="mt-6">
          <%= link_to admin_api_docs_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
            Back to API Docs
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>