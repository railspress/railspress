<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center mb-4">
      <%= link_to admin_api_docs_path, class: "text-gray-400 hover:text-white mr-4" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
      <% end %>
      <h1 class="text-3xl font-bold text-white">Plugin Development Documentation</h1>
    </div>
    <p class="text-gray-400">Complete guide to building RailsPress plugins with MVC architecture</p>
  </div>

  <!-- Documentation List -->
  <div class="grid grid-cols-1 gap-6">
    <% @plugin_docs.each do |doc| %>
      <div class="bg-[#1a1a1a] border border-[#2a2a2a] rounded-xl overflow-hidden hover:border-yellow-500 transition-colors">
        <div class="p-6">
          <div class="flex items-start justify-between mb-4">
            <div class="flex-1">
              <h2 class="text-2xl font-bold text-white mb-2"><%= doc[:title] %></h2>
              <p class="text-sm text-gray-400">
                <code class="text-xs bg-[#0d0d0d] px-2 py-1 rounded"><%= doc[:filename] %>.md</code>
              </p>
            </div>
            <a href="<%= doc[:url] %>" target="_blank" class="ml-4 px-4 py-2 bg-yellow-600 hover:bg-yellow-700 text-white rounded-lg text-sm font-medium transition">
              View File
            </a>
          </div>
          
          <!-- Preview of content (first 500 chars) -->
          <div class="prose prose-invert max-w-none">
            <div class="text-gray-300 text-sm line-clamp-3">
              <%= doc[:content].gsub(/^#.*$/, '').strip[0..500] %>...
            </div>
          </div>
        </div>
        
        <!-- Expandable content -->
        <details class="border-t border-[#2a2a2a]">
          <summary class="px-6 py-3 cursor-pointer hover:bg-[#111111] text-gray-400 font-medium text-sm">
            Show Full Content
          </summary>
          <div class="p-6 bg-[#0d0d0d] prose prose-invert max-w-none">
            <%= simple_format(doc[:content]) %>
          </div>
        </details>
      </div>
    <% end %>
  </div>

  <!-- Quick Links -->
  <div class="mt-8 bg-[#1a1a1a] border border-[#2a2a2a] rounded-xl p-6">
    <h3 class="text-xl font-bold text-white mb-4">Quick Links</h3>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <a href="/docs/PLUGIN_QUICK_START.md" target="_blank" class="flex items-center p-4 bg-[#0d0d0d] rounded-lg hover:bg-[#111111] transition">
        <svg class="w-6 h-6 text-yellow-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
        </svg>
        <div>
          <div class="text-white font-medium">Quick Start</div>
          <div class="text-gray-400 text-xs">Get started in 5 minutes</div>
        </div>
      </a>
      
      <a href="/docs/PLUGIN_MVC_ARCHITECTURE.md" target="_blank" class="flex items-center p-4 bg-[#0d0d0d] rounded-lg hover:bg-[#111111] transition">
        <svg class="w-6 h-6 text-blue-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
        </svg>
        <div>
          <div class="text-white font-medium">MVC Architecture</div>
          <div class="text-gray-400 text-xs">Complete guide</div>
        </div>
      </a>
      
      <a href="/docs/PLUGIN_DEVELOPER_GUIDE.md" target="_blank" class="flex items-center p-4 bg-[#0d0d0d] rounded-lg hover:bg-[#111111] transition">
        <svg class="w-6 h-6 text-green-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        <div>
          <div class="text-white font-medium">Developer Guide</div>
          <div class="text-gray-400 text-xs">Advanced features</div>
        </div>
      </a>
    </div>
  </div>
</div>

