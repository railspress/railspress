<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-8">
    <%= link_to admin_api_docs_path, class: "inline-flex items-center text-sm text-gray-400 hover:text-white mb-4" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Back to API Docs
    <% end %>
    <h1 class="text-3xl font-bold text-white mb-2">Plugin Development Documentation</h1>
    <p class="text-gray-400">Complete guide to building RailsPress plugins with MVC architecture</p>
  </div>

  <!-- Quick Start Section -->
  <div class="bg-[#1a1a1a] border border-[#2a2a2a] rounded-xl p-6 mb-6">
    <div class="flex items-center mb-4">
      <svg class="w-6 h-6 text-yellow-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
      </svg>
      <h2 class="text-2xl font-bold text-white">Quick Start</h2>
    </div>
    <p class="text-gray-300 mb-4">Get started building plugins in minutes with our comprehensive guides and examples.</p>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <a href="/docs/PLUGIN_QUICK_START.md" target="_blank" class="flex items-center p-4 bg-[#0d0d0d] rounded-lg hover:bg-[#111111] transition-colors border border-[#2a2a2a]">
        <svg class="w-8 h-8 text-yellow-500 mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
        </svg>
        <div>
          <div class="text-white font-semibold">Quick Start Guide</div>
          <div class="text-gray-400 text-sm">Get started in 5 minutes</div>
        </div>
      </a>
      
      <a href="/docs/PLUGIN_MVC_ARCHITECTURE.md" target="_blank" class="flex items-center p-4 bg-[#0d0d0d] rounded-lg hover:bg-[#111111] transition-colors border border-[#2a2a2a]">
        <svg class="w-8 h-8 text-blue-500 mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
        </svg>
        <div>
          <div class="text-white font-semibold">MVC Architecture</div>
          <div class="text-gray-400 text-sm">Complete architectural guide</div>
        </div>
      </a>
      
      <a href="/docs/PLUGIN_DEVELOPER_GUIDE.md" target="_blank" class="flex items-center p-4 bg-[#0d0d0d] rounded-lg hover:bg-[#111111] transition-colors border border-[#2a2a2a]">
        <svg class="w-8 h-8 text-green-500 mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        <div>
          <div class="text-white font-semibold">Developer Guide</div>
          <div class="text-gray-400 text-sm">Advanced features & APIs</div>
        </div>
      </a>
    </div>
  </div>

  <!-- Documentation Files -->
  <div class="bg-[#1a1a1a] border border-[#2a2a2a] rounded-xl p-6 mb-6">
    <div class="flex items-center mb-6">
      <svg class="w-6 h-6 text-purple-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
      </svg>
      <h2 class="text-2xl font-bold text-white">Documentation Files</h2>
    </div>

    <div class="space-y-4">
      <% @plugin_docs.each do |doc| %>
        <div class="bg-[#0d0d0d] rounded-lg p-4 border border-[#2a2a2a] hover:border-purple-500 transition-colors">
          <div class="flex items-start justify-between mb-3">
            <div class="flex-1">
              <h3 class="text-lg font-semibold text-white mb-1"><%= doc[:title] %></h3>
              <div class="flex items-center space-x-2">
                <code class="text-xs bg-[#1a1a1a] text-purple-400 px-2 py-1 rounded border border-[#2a2a2a]"><%= doc[:filename] %>.md</code>
                <span class="text-xs text-gray-500"><%= doc[:content].length %> characters</span>
              </div>
            </div>
            <a href="<%= doc[:url] %>" target="_blank" class="ml-4 inline-flex items-center px-3 py-2 bg-purple-600 hover:bg-purple-700 text-white rounded-lg text-sm font-medium transition-colors">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
              </svg>
              View
            </a>
          </div>
          
          <!-- Content Preview -->
          <div class="text-gray-300 text-sm mb-3 line-clamp-2">
            <%= doc[:content].gsub(/^#.*$/, '').strip[0..200] %>...
          </div>
          
          <!-- Expandable full content -->
          <details class="mt-3">
            <summary class="cursor-pointer text-sm text-purple-400 hover:text-purple-300 font-medium">
              Show Full Content
            </summary>
            <div class="mt-3 p-4 bg-[#1a1a1a] rounded-lg border border-[#2a2a2a]">
              <div class="prose prose-invert prose-sm max-w-none">
                <pre class="text-gray-300 text-sm whitespace-pre-wrap font-mono"><%= doc[:content] %></pre>
              </div>
            </div>
          </details>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Plugin Examples -->
  <div class="bg-[#1a1a1a] border border-[#2a2a2a] rounded-xl p-6">
    <div class="flex items-center mb-6">
      <svg class="w-6 h-6 text-green-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
      </svg>
      <h2 class="text-2xl font-bold text-white">Plugin Examples</h2>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="bg-[#0d0d0d] rounded-lg p-4 border border-[#2a2a2a]">
        <h3 class="text-lg font-semibold text-white mb-3">Core Plugins</h3>
        <div class="space-y-2">
          <div class="flex items-center justify-between p-2 bg-[#1a1a1a] rounded">
            <span class="text-gray-300 text-sm">Sitemap Generator</span>
            <span class="text-xs text-green-400 bg-green-400/10 px-2 py-1 rounded">Active</span>
          </div>
          <div class="flex items-center justify-between p-2 bg-[#1a1a1a] rounded">
            <span class="text-gray-300 text-sm">SEO Optimizer</span>
            <span class="text-xs text-yellow-400 bg-yellow-400/10 px-2 py-1 rounded">Beta</span>
          </div>
        </div>
      </div>
      
      <div class="bg-[#0d0d0d] rounded-lg p-4 border border-[#2a2a2a]">
        <h3 class="text-lg font-semibold text-white mb-3">Getting Started</h3>
        <div class="space-y-2 text-sm text-gray-300">
          <div class="flex items-center">
            <span class="w-2 h-2 bg-green-500 rounded-full mr-3"></span>
            Create your plugin directory
          </div>
          <div class="flex items-center">
            <span class="w-2 h-2 bg-green-500 rounded-full mr-3"></span>
            Define your plugin class
          </div>
          <div class="flex items-center">
            <span class="w-2 h-2 bg-green-500 rounded-full mr-3"></span>
            Add controllers and views
          </div>
          <div class="flex items-center">
            <span class="w-2 h-2 bg-gray-500 rounded-full mr-3"></span>
            Test your plugin
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


