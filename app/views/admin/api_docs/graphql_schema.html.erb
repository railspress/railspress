<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-8">
    <%= link_to admin_api_docs_path, class: "inline-flex items-center text-sm text-gray-400 hover:text-white mb-4" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Back to API Docs
    <% end %>
    <h1 class="text-3xl font-bold text-white mb-2">GraphQL Schema</h1>
    <p class="text-gray-400">Complete GraphQL type system, queries, and mutations</p>
  </div>

  <!-- Endpoint Info -->
  <div class="bg-[#1a1a1a] border border-[#2a2a2a] rounded-xl p-6 mb-8">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <p class="text-sm text-gray-400 mb-2">GraphQL Endpoint</p>
        <div class="bg-[#0d0d0d] rounded-lg p-3 font-mono text-sm">
          <code class="text-purple-400"><%= request.protocol %><%= request.host_with_port %>/graphql</code>
        </div>
      </div>
      <div>
        <p class="text-sm text-gray-400 mb-2">Interactive Playground</p>
        <%= link_to graphql_admin_api_docs_path, class: "inline-flex items-center px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white rounded-lg text-sm font-medium transition-colors" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          Launch Playground
        <% end %>
      </div>
    </div>
  </div>

  <!-- Queries -->
  <div class="bg-[#1a1a1a] border border-[#2a2a2a] rounded-xl p-6 mb-6">
    <div class="flex items-center mb-6">
      <svg class="w-6 h-6 text-green-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
      </svg>
      <h2 class="text-2xl font-bold text-white">Root Queries</h2>
    </div>

    <div class="space-y-4">
      <% @queries.each do |query| %>
        <div class="bg-[#0d0d0d] rounded-lg p-4 border border-[#2a2a2a]">
          <div class="flex items-start justify-between mb-2">
            <h3 class="text-lg font-semibold text-white font-mono"><%= query.name %></h3>
            <span class="text-sm text-gray-400"><%= query.type.to_type_signature %></span>
          </div>
          <% if query.description.present? %>
            <p class="text-gray-300 text-sm mb-3"><%= query.description %></p>
          <% end %>
          
          <% if query.arguments.any? %>
            <details class="mt-3">
              <summary class="cursor-pointer text-sm text-blue-400 hover:text-blue-300 mb-2">
                Arguments (<%= query.arguments.size %>)
              </summary>
              <div class="mt-2 pl-4 space-y-2">
                <% query.arguments.each do |arg_name, arg| %>
                  <div class="bg-[#1a1a1a] rounded p-2">
                    <div class="flex items-center space-x-2">
                      <code class="text-yellow-400 text-sm"><%= arg_name %></code>
                      <span class="text-xs text-gray-500">:</span>
                      <code class="text-sm text-gray-300"><%= arg.type.to_type_signature %></code>
                    </div>
                    <% if arg.description.present? %>
                      <p class="text-xs text-gray-400 mt-1"><%= arg.description %></p>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </details>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Mutations -->
  <% if @mutations.any? %>
    <div class="bg-[#1a1a1a] border border-[#2a2a2a] rounded-xl p-6 mb-6">
      <div class="flex items-center mb-6">
        <svg class="w-6 h-6 text-orange-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
        <h2 class="text-2xl font-bold text-white">Mutations</h2>
      </div>

      <div class="space-y-4">
        <% @mutations.each do |mutation| %>
          <div class="bg-[#0d0d0d] rounded-lg p-4 border border-[#2a2a2a]">
            <div class="flex items-start justify-between mb-2">
              <h3 class="text-lg font-semibold text-white font-mono"><%= mutation.name %></h3>
              <span class="text-sm text-gray-400"><%= mutation.type.to_type_signature %></span>
            </div>
            <% if mutation.description.present? %>
              <p class="text-gray-300 text-sm mb-3"><%= mutation.description %></p>
            <% end %>
            
            <% if mutation.arguments.any? %>
              <details class="mt-3">
                <summary class="cursor-pointer text-sm text-blue-400 hover:text-blue-300 mb-2">
                  Arguments (<%= mutation.arguments.size %>)
                </summary>
                <div class="mt-2 pl-4 space-y-2">
                  <% mutation.arguments.each do |arg_name, arg| %>
                    <div class="bg-[#1a1a1a] rounded p-2">
                      <div class="flex items-center space-x-2">
                        <code class="text-yellow-400 text-sm"><%= arg_name %></code>
                        <span class="text-xs text-gray-500">:</span>
                        <code class="text-sm text-gray-300"><%= arg.type.to_type_signature %></code>
                      </div>
                      <% if arg.description.present? %>
                        <p class="text-xs text-gray-400 mt-1"><%= arg.description %></p>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              </details>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Types -->
  <div class="bg-[#1a1a1a] border border-[#2a2a2a] rounded-xl p-6">
    <div class="flex items-center mb-6">
      <svg class="w-6 h-6 text-blue-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"/>
      </svg>
      <h2 class="text-2xl font-bold text-white">Schema Types</h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <% @types.sort_by(&:graphql_name).each do |type| %>
        <div class="bg-[#0d0d0d] rounded-lg p-4 border border-[#2a2a2a] hover:border-blue-500 transition-colors">
          <h3 class="text-base font-semibold text-white font-mono mb-2"><%= type.graphql_name %></h3>
          <% if type.description.present? %>
            <p class="text-xs text-gray-400 mb-2"><%= type.description.truncate(100) %></p>
          <% end %>
          <% if type.respond_to?(:fields) && type.fields.any? %>
            <p class="text-xs text-gray-500"><%= type.fields.size %> fields</p>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
  details summary {
    list-style: none;
  }
  
  details summary::-webkit-details-marker {
    display: none;
  }
</style>



