<div class="h-full flex">
  <!-- Monaco Editor -->
  <div id="monaco-container" class="flex-1"></div>
  
  <!-- Versions Sidebar (Hidden by default) -->
  <div id="versions-panel" class="hidden w-80 bg-gray-50 dark:bg-gray-900 border-l border-gray-200 dark:border-gray-700 overflow-y-auto">
    <div class="p-4 border-b border-gray-200 dark:border-gray-700">
      <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
        Version History
      </h3>
      <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">
        <%= versions.count %> versions saved
      </p>
    </div>
    
    <div id="file-versions" class="p-4">
      <%= render 'versions', versions: versions, file_path: file_path %>
    </div>
  </div>
</div>

