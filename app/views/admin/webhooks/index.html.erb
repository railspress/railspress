<% content_for :title, "Webhooks" %>
<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "tabulator_custom", "data-turbo-track": "reload" %>
<% end %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold text-white">Webhooks</h1>
      <p class="text-gray-400">Manage webhook subscriptions for real-time integrations</p>
    </div>
    <div class="flex items-center space-x-3">
      <%= link_to new_admin_webhook_path, class: "inline-flex items-center px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium rounded-lg transition-colors" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Add Webhook
      <% end %>
    </div>
  </div>

  <!-- Stats Cards -->
  <%= render 'admin/shared/stats_cards', stats: @stats %>

  <!-- Navigation Tabs -->
  <div class="border-b border-gray-700">
    <nav class="-mb-px flex space-x-8">
      <%= link_to admin_webhooks_path, 
          class: "py-2 px-1 border-b-2 font-medium text-sm #{'border-indigo-500 text-indigo-400' if params[:show_inactive] != 'true'}" do %>
        Active Webhooks
      <% end %>
      <%= link_to admin_webhooks_path(show_inactive: 'true'), 
          class: "py-2 px-1 border-b-2 font-medium text-sm #{'border-indigo-500 text-indigo-400' if params[:show_inactive] == 'true'}" do %>
        All Webhooks
      <% end %>
    </nav>
  </div>

  <!-- Admin Table -->
  <%= render 'admin/shared/admin_table', 
      table_type: 'webhooks', 
      data: @webhooks_data, 
      columns: @columns,
      bulk_actions: @bulk_actions,
      search_placeholder: "Search webhooks..." %>

  <!-- Recent Deliveries Section -->
  <div class="bg-gray-800 rounded-lg shadow p-6">
    <h2 class="text-lg font-semibold text-white mb-4">
      Recent Deliveries
    </h2>
    
    <div class="space-y-3">
      <% if @recent_deliveries.any? %>
        <% @recent_deliveries.each do |delivery| %>
          <div class="flex items-center justify-between p-3 rounded-lg <%= delivery.success_status? ? 'bg-green-50 dark:bg-green-900/20' : 'bg-red-50 dark:bg-red-900/20' %>">
            <div class="flex items-center space-x-3">
              <% if delivery.success_status? %>
                <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
              <% else %>
                <svg class="w-5 h-5 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                </svg>
              <% end %>
              
              <div>
                <div class="text-sm font-medium text-gray-900 dark:text-white">
                  <%= delivery.webhook.name %> - <%= delivery.event_type %>
                </div>
                <div class="text-xs text-gray-500 dark:text-gray-400">
                  <%= time_ago_in_words(delivery.created_at) %> ago
                  <% if delivery.response_code %>
                    · HTTP <%= delivery.response_code %>
                  <% end %>
                  <% if delivery.retry_count > 0 %>
                    · Retry #<%= delivery.retry_count %>
                  <% end %>
                </div>
              </div>
            </div>
            
            <%= link_to admin_webhook_path(delivery.webhook), class: "text-indigo-600 dark:text-indigo-400 hover:text-indigo-700 text-sm font-medium" do %>
              View Details →
            <% end %>
          </div>
        <% end %>
      <% else %>
        <p class="text-center text-gray-500 dark:text-gray-400 py-8">
          No deliveries yet. Webhooks will appear here when events are triggered.
        </p>
      <% end %>
    </div>
  </div>
</div>