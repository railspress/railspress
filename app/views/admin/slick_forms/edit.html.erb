<% content_for :page_title, "Edit Form: #{@form[:title]}" %>

<div class="fluent-forms-builder">
  <div class="builder-header">
    <div class="header-left">
      <%= link_to admin_fluent_forms_path, class: 'back-link' do %>
        <i class="fas fa-arrow-left"></i> Back to Forms
      <% end %>
      <h1 contenteditable="true" id="form-title" data-form-id="<%= @form[:id] %>"><%= @form[:title] %></h1>
    </div>
    <div class="header-actions">
      <%= link_to "/fluent-forms/#{@form[:id]}", class: 'btn btn-secondary', target: '_blank' do %>
        <i class="fas fa-eye"></i> Preview
      <% end %>
      <button class="btn btn-primary" id="save-form">
        <i class="fas fa-save"></i> Save Form
      </button>
    </div>
  </div>

  <div class="builder-tabs">
    <button class="tab-btn active" data-tab="builder">
      <i class="fas fa-hammer"></i> Builder
    </button>
    <button class="tab-btn" data-tab="settings">
      <i class="fas fa-cog"></i> Settings
    </button>
    <button class="tab-btn" data-tab="integrations">
      <i class="fas fa-plug"></i> Integrations
    </button>
    <button class="tab-btn" data-tab="notifications">
      <i class="fas fa-envelope"></i> Notifications
    </button>
    <button class="tab-btn" data-tab="appearance">
      <i class="fas fa-paint-brush"></i> Appearance
    </button>
  </div>

  <!-- Builder Tab -->
  <div class="tab-content active" id="builder-tab">
    <div class="builder-layout">
      <!-- Field Palette -->
      <div class="field-palette">
        <h3>Form Fields</h3>
        <div class="field-categories">
          <div class="field-category">
            <h4>Basic Fields</h4>
            <div class="field-list">
              <% @field_types.select { |f| ['input_text', 'input_email', 'textarea', 'select', 'input_radio', 'input_checkbox'].include?(f[:type]) }.each do |field_type| %>
                <div class="field-item" draggable="true" data-field-type="<%= field_type[:type] %>">
                  <i class="fas fa-<%= field_type[:icon] %>"></i>
                  <span><%= field_type[:label] %></span>
                </div>
              <% end %>
            </div>
          </div>

          <div class="field-category">
            <h4>Advanced Fields</h4>
            <div class="field-list">
              <% @field_types.select { |f| ['input_number', 'input_phone', 'input_date', 'input_file', 'rating', 'slider'].include?(f[:type]) }.each do |field_type| %>
                <div class="field-item" draggable="true" data-field-type="<%= field_type[:type] %>">
                  <i class="fas fa-<%= field_type[:icon] %>"></i>
                  <span><%= field_type[:label] %></span>
                </div>
              <% end %>
            </div>
          </div>

          <div class="field-category">
            <h4>Special Fields</h4>
            <div class="field-list">
              <% @field_types.select { |f| ['html', 'section_break', 'payment', 'step'].include?(f[:type]) }.each do |field_type| %>
                <div class="field-item" draggable="true" data-field-type="<%= field_type[:type] %>">
                  <i class="fas fa-<%= field_type[:icon] %>"></i>
                  <span><%= field_type[:label] %></span>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- Form Canvas -->
      <div class="form-canvas">
        <div class="canvas-inner">
          <div id="form-fields-container" class="fields-container">
            <!-- Fields will be rendered here dynamically -->
            <div class="empty-canvas" style="<%= 'display: none;' if @form[:form_fields][:fields]&.any? %>">
              <i class="fas fa-mouse-pointer fa-3x"></i>
              <p>Drag and drop fields from the left to start building your form</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Field Settings Panel -->
      <div class="field-settings-panel" id="field-settings" style="display: none;">
        <div class="panel-header">
          <h3>Field Settings</h3>
          <button class="close-panel">&times;</button>
        </div>
        <div class="panel-body" id="field-settings-body">
          <!-- Field settings will be loaded here -->
        </div>
      </div>
    </div>
  </div>

  <!-- Settings Tab -->
  <div class="tab-content" id="settings-tab">
    <div class="settings-panel">
      <h3>Form Settings</h3>
      
      <div class="setting-group">
        <h4>Confirmation</h4>
        <label>
          <input type="radio" name="confirmation_type" value="message" checked> Show Message
        </label>
        <label>
          <input type="radio" name="confirmation_type" value="redirect"> Redirect to URL
        </label>
        <label>
          <input type="radio" name="confirmation_type" value="page"> Redirect to Page
        </label>
        
        <div class="confirmation-message">
          <label>Success Message</label>
          <textarea name="confirmation_message" rows="3"><%= @form[:settings].dig(:confirmation, :messageToShow) || 'Thank you for your submission!' %></textarea>
        </div>
      </div>

      <div class="setting-group">
        <h4>Restrictions</h4>
        <label>
          <input type="checkbox" name="require_login">
          Require users to be logged in
        </label>
        <label>
          <input type="checkbox" name="limit_entries">
          Limit number of entries
        </label>
        <label>
          <input type="checkbox" name="schedule_form">
          Schedule form availability
        </label>
      </div>

      <div class="setting-group">
        <h4>Spam Protection</h4>
        <label>
          <input type="checkbox" name="enable_recaptcha">
          Enable Google reCAPTCHA
        </label>
        <label>
          <input type="checkbox" name="enable_honeypot" checked>
          Enable Honeypot
        </label>
      </div>
    </div>
  </div>

  <!-- Other tabs would follow similar pattern -->
  <div class="tab-content" id="integrations-tab">
    <div class="integrations-panel">
      <h3>Integrations</h3>
      <p>Configure third-party integrations for this form</p>
      
      <div class="integration-list">
        <% @integrations.each do |integration| %>
          <div class="integration-card">
            <div class="integration-icon">
              <i class="fab fa-<%= integration[:icon] %>"></i>
            </div>
            <div class="integration-info">
              <h4><%= integration[:name] %></h4>
              <p><%= integration[:description] %></p>
            </div>
            <div class="integration-action">
              <button class="btn btn-sm btn-secondary">Configure</button>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="tab-content" id="notifications-tab">
    <div class="notifications-panel">
      <h3>Email Notifications</h3>
      
      <div class="notification-section">
        <h4>Admin Notification</h4>
        <label>
          <input type="checkbox" name="admin_notification_enabled">
          Send notification to admin
        </label>
        <input type="email" name="admin_email" placeholder="admin@example.com">
        <input type="text" name="admin_subject" placeholder="Email subject">
      </div>

      <div class="notification-section">
        <h4>User Confirmation (Autoresponder)</h4>
        <label>
          <input type="checkbox" name="user_notification_enabled">
          Send confirmation to user
        </label>
        <input type="text" name="user_subject" placeholder="Email subject">
        <textarea name="user_message" rows="4" placeholder="Email message"></textarea>
      </div>
    </div>
  </div>

  <div class="tab-content" id="appearance-tab">
    <div class="appearance-panel">
      <h3>Form Appearance</h3>
      
      <div class="appearance-option">
        <label>Label Placement</label>
        <select name="label_placement">
          <option value="top">Top</option>
          <option value="left">Left</option>
          <option value="right">Right</option>
          <option value="hidden">Hidden</option>
        </select>
      </div>

      <div class="appearance-option">
        <label>Submit Button Text</label>
        <input type="text" name="submit_button_text" value="Submit">
      </div>

      <div class="appearance-option">
        <label>Submit Button Position</label>
        <select name="submit_button_position">
          <option value="left">Left</option>
          <option value="center">Center</option>
          <option value="right">Right</option>
        </select>
      </div>

      <div class="appearance-option">
        <label>Custom CSS</label>
        <textarea name="custom_css" rows="6" placeholder=".fluent-form { /* your styles */ }"></textarea>
      </div>
    </div>
  </div>
</div>

