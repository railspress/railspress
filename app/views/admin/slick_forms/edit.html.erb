<script>
// Initialize form data
const formData = <%= raw @form.to_json %>;

// Tab switching
document.querySelectorAll('.tab-btn').forEach(btn => {
  btn.addEventListener('click', function() {
    const tabName = this.dataset.tab;
    
    // Remove active class from all tabs and contents
    document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
    document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
    
    // Add active class to clicked tab and corresponding content
    this.classList.add('active');
    document.getElementById(`${tabName}-tab`).classList.add('active');
  });
});

// Save form
document.getElementById('save-form')?.addEventListener('click', async function() {
  const btn = this;
  btn.disabled = true;
  btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Saving...';
  
  try {
    const response = await fetch(`/admin/fluent-forms/<%= @form[:id] %>`, {
      method: 'PATCH',
      headers: {
        'Content-Type': 'application/json',
        'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content
      },
      body: JSON.stringify({
        title: document.getElementById('form-title').textContent,
        form_fields: formData.form_fields,
        settings: formData.settings
      })
    });
    
    const result = await response.json();
    if (result.success) {
      btn.innerHTML = '<i class="fas fa-check"></i> Saved!';
      setTimeout(() => {
        btn.innerHTML = '<i class="fas fa-save"></i> Save Form';
        btn.disabled = false;
      }, 2000);
    }
  } catch (error) {
    console.error('Save error:', error);
    btn.innerHTML = '<i class="fas fa-save"></i> Save Form';
    btn.disabled = false;
    alert('Failed to save form');
  }
});

// Render existing fields
function renderFields() {
  const container = document.getElementById('form-fields-container');
  const fields = formData.form_fields.fields || [];
  
  if (fields.length === 0) return;
  
  container.querySelector('.empty-canvas')?.remove();
  
  fields.forEach(field => {
    const fieldEl = createFieldElement(field);
    container.appendChild(fieldEl);
  });
}

function createFieldElement(field) {
  const div = document.createElement('div');
  div.className = 'form-field-preview';
  div.innerHTML = `
    <div class="field-preview-header">
      <span class="field-type-label">${field.element}</span>
      <div class="field-actions">
        <button class="field-edit-btn"><i class="fas fa-edit"></i></button>
        <button class="field-delete-btn"><i class="fas fa-trash"></i></button>
      </div>
    </div>
    <label>${field.settings?.label || 'Untitled Field'}</label>
    <input type="text" class="preview-input" disabled placeholder="${field.settings?.placeholder || ''}">
  `;
  return div;
}

// Initialize on page load
renderFields();
</script>

