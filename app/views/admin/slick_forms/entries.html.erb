</style>

<script>
// Select all checkboxes
document.getElementById('select-all')?.addEventListener('change', function() {
  document.querySelectorAll('.entry-checkbox').forEach(cb => {
    cb.checked = this.checked;
  });
});

// Toggle favorite
document.querySelectorAll('.favorite-btn').forEach(btn => {
  btn.addEventListener('click', async function() {
    const entryId = this.dataset.entryId;
    const icon = this.querySelector('i');
    
    try {
      const response = await fetch(`/admin/fluent-forms/entries/${entryId}/favorite`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content
        }
      });
      
      const result = await response.json();
      if (result.success) {
        this.classList.toggle('active');
        icon.className = result.is_favorite ? 'fas fa-star' : 'far fa-star';
      }
    } catch (error) {
      console.error('Error toggling favorite:', error);
    }
  });
});

// Bulk actions
document.getElementById('apply-bulk-action')?.addEventListener('click', function() {
  const action = document.getElementById('bulk-action').value;
  const selected = Array.from(document.querySelectorAll('.entry-checkbox:checked')).map(cb => cb.value);
  
  if (!action) {
    alert('Please select an action');
    return;
  }
  
  if (selected.length === 0) {
    alert('Please select at least one entry');
    return;
  }
  
  if (confirm(`Apply "${action}" to ${selected.length} entries?`)) {
    // Handle bulk action
    console.log('Bulk action:', action, 'on entries:', selected);
  }
});

// Search entries
let searchTimeout;
document.getElementById('search-entries')?.addEventListener('input', function(e) {
  clearTimeout(searchTimeout);
  const search = e.target.value;
  
  searchTimeout = setTimeout(() => {
    window.location.href = `?form_id=<%= @form_id %>&search=${encodeURIComponent(search)}`;
  }, 500);
});
</script>

