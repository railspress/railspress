<% content_for :page_title, 'Form Entries' %>

<div class="fluent-forms-entries">
  <div class="page-header">
    <div class="header-content">
      <h1><i class="fas fa-inbox"></i> Form Entries</h1>
      <p class="subtitle">View and manage form submissions</p>
    </div>
    <div class="header-actions">
      <%= link_to export_admin_fluent_forms_entries_path(form_id: @form_id, format: 'csv'), class: 'btn btn-secondary' do %>
        <i class="fas fa-download"></i> Export CSV
      <% end %>
      <%= link_to admin_fluent_forms_path, class: 'btn btn-primary' do %>
        <i class="fas fa-arrow-left"></i> Back to Forms
      <% end %>
    </div>
  </div>

  <div class="filters-bar">
    <div class="filter-group">
      <label>Form:</label>
      <select id="form-filter" onchange="window.location.href='?form_id='+this.value">
        <option value="">All Forms</option>
        <% @forms.each do |form| %>
          <option value="<%= form[:id] %>" <%= 'selected' if @form_id.to_s == form[:id].to_s %>>
            <%= form[:title] %> (<%= form[:submission_count] %>)
          </option>
        <% end %>
      </select>
    </div>

    <div class="filter-group">
      <label>Status:</label>
      <select id="status-filter" onchange="window.location.href='?form_id=<%= @form_id %>&status='+this.value">
        <option value="">All</option>
        <option value="unread" <%= 'selected' if @filters[:status] == 'unread' %>>Unread</option>
        <option value="read" <%= 'selected' if @filters[:status] == 'read' %>>Read</option>
      </select>
    </div>

    <div class="filter-group">
      <input type="text" 
             id="search-entries" 
             placeholder="Search entries..." 
             value="<%= @filters[:search] %>"
             class="search-input">
    </div>
  </div>

  <div class="card">
    <% if @entries.any? %>
      <table class="entries-table">
        <thead>
          <tr>
            <th width="30">
              <input type="checkbox" id="select-all">
            </th>
            <th width="30"></th>
            <th>ID</th>
            <th>Form</th>
            <th>Summary</th>
            <th>Status</th>
            <th>Date</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @entries.each do |entry| %>
            <tr class="entry-row <%= 'unread' if entry[:status] == 'unread' %>">
              <td>
                <input type="checkbox" class="entry-checkbox" value="<%= entry[:id] %>">
              </td>
              <td>
                <button class="favorite-btn <%= 'active' if entry[:is_favorite] %>" 
                        data-entry-id="<%= entry[:id] %>">
                  <i class="<%= entry[:is_favorite] ? 'fas' : 'far' %> fa-star"></i>
                </button>
              </td>
              <td>
                <code>#<%= entry[:serial_number] %></code>
              </td>
              <td>
                <% form = @forms.find { |f| f[:id] == entry[:form_id] } %>
                <%= form[:title] if form %>
              </td>
              <td>
                <div class="entry-summary">
                  <% entry[:response_data].first(3).each do |key, value| %>
                    <div class="summary-item">
                      <strong><%= key.titleize %>:</strong> 
                      <%= truncate(value.to_s, length: 50) %>
                    </div>
                  <% end %>
                  <% if entry[:response_data].size > 3 %>
                    <div class="summary-more">
                      +<%= entry[:response_data].size - 3 %> more fields
                    </div>
                  <% end %>
                </div>
              </td>
              <td>
                <span class="status-badge status-<%= entry[:status] %>">
                  <%= entry[:status].titleize %>
                </span>
              </td>
              <td>
                <span class="entry-date" title="<%= entry[:created_at] %>">
                  <%= time_ago_in_words(entry[:created_at]) %> ago
                </span>
              </td>
              <td>
                <div class="action-buttons">
                  <%= link_to admin_fluent_forms_entry_path(entry[:id]), class: 'btn btn-sm btn-secondary', title: 'View' do %>
                    <i class="fas fa-eye"></i>
                  <% end %>
                  <%= link_to admin_fluent_forms_entry_path(entry[:id]), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger', title: 'Delete' do %>
                    <i class="fas fa-trash"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <div class="table-footer">
        <div class="bulk-actions">
          <select id="bulk-action">
            <option value="">Bulk Actions</option>
            <option value="mark_read">Mark as Read</option>
            <option value="delete">Delete</option>
            <option value="export">Export Selected</option>
          </select>
          <button class="btn btn-sm btn-secondary" id="apply-bulk-action">Apply</button>
        </div>

        <div class="pagination">
          <span>Showing <%= @entries.count %> entries</span>
          <!-- Pagination links would go here -->
        </div>
      </div>
    <% else %>
      <div class="empty-state">
        <i class="fas fa-inbox fa-4x"></i>
        <h3>No entries yet</h3>
        <p>Form submissions will appear here once users submit the form</p>
      </div>
    <% end %>
  </div>
</div>

