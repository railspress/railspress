<%= form_with(model: [:admin, content_type], local: true, class: "space-y-6") do |form| %>
  <% if content_type.errors.any? %>
    <div class="bg-red-500/10 border border-red-500/20 rounded-xl p-4">
      <h2 class="text-red-400 font-medium mb-2"><%= pluralize(content_type.errors.count, "error") %> prohibited this content type from being saved:</h2>
      <ul class="list-disc list-inside text-red-400 text-sm">
        <% content_type.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="bg-[#1a1a1a] border border-[#2a2a2a] rounded-xl p-6 space-y-6">
    <!-- Basic Information -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= form.label :ident, "Identifier", class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= form.text_field :ident, class: "w-full px-4 py-2 bg-[#0a0a0a] border border-[#2a2a2a] text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500", placeholder: "newsletter" %>
        <p class="text-xs text-gray-500 mt-1">Lowercase letters, numbers, hyphens, and underscores only</p>
      </div>

      <div>
        <%= form.label :label, "Label", class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= form.text_field :label, class: "w-full px-4 py-2 bg-[#0a0a0a] border border-[#2a2a2a] text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500", placeholder: "Newsletter" %>
        <p class="text-xs text-gray-500 mt-1">Display name for the content type</p>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= form.label :singular, "Singular Name", class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= form.text_field :singular, class: "w-full px-4 py-2 bg-[#0a0a0a] border border-[#2a2a2a] text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500", placeholder: "Newsletter" %>
      </div>

      <div>
        <%= form.label :plural, "Plural Name", class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= form.text_field :plural, class: "w-full px-4 py-2 bg-[#0a0a0a] border border-[#2a2a2a] text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500", placeholder: "Newsletters" %>
      </div>
    </div>

    <div>
      <%= form.label :description, class: "block text-sm font-medium text-gray-300 mb-2" %>
      <%= form.text_area :description, rows: 3, class: "w-full px-4 py-2 bg-[#0a0a0a] border border-[#2a2a2a] text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500", placeholder: "Description of this content type" %>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= form.label :icon, class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= form.text_field :icon, class: "w-full px-4 py-2 bg-[#0a0a0a] border border-[#2a2a2a] text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500", placeholder: "document-text" %>
        <p class="text-xs text-gray-500 mt-1">Icon name (Heroicons)</p>
      </div>

      <div>
        <%= form.label :rest_base, "REST Base", class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= form.text_field :rest_base, class: "w-full px-4 py-2 bg-[#0a0a0a] border border-[#2a2a2a] text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500", placeholder: "newsletters" %>
        <p class="text-xs text-gray-500 mt-1">REST API endpoint base (defaults to plural ident)</p>
      </div>
    </div>

    <div>
      <%= form.label :menu_position, class: "block text-sm font-medium text-gray-300 mb-2" %>
      <%= form.number_field :menu_position, class: "w-full px-4 py-2 bg-[#0a0a0a] border border-[#2a2a2a] text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500", placeholder: "5" %>
      <p class="text-xs text-gray-500 mt-1">Position in admin menu (lower numbers appear first)</p>
    </div>
  </div>

  <!-- Options -->
  <div class="bg-[#1a1a1a] border border-[#2a2a2a] rounded-xl p-6 space-y-4">
    <h3 class="text-lg font-medium text-white mb-4">Options</h3>
    
    <div class="flex items-center space-x-3">
      <%= form.check_box :public, class: "w-4 h-4 text-indigo-600 bg-[#0a0a0a] border-[#2a2a2a] rounded focus:ring-indigo-500" %>
      <%= form.label :public, "Public", class: "text-sm text-gray-300" %>
      <span class="text-xs text-gray-500">— Visible on the frontend</span>
    </div>

    <div class="flex items-center space-x-3">
      <%= form.check_box :hierarchical, class: "w-4 h-4 text-indigo-600 bg-[#0a0a0a] border-[#2a2a2a] rounded focus:ring-indigo-500" %>
      <%= form.label :hierarchical, "Hierarchical", class: "text-sm text-gray-300" %>
      <span class="text-xs text-gray-500">— Can have parent/child relationships (like pages)</span>
    </div>

    <div class="flex items-center space-x-3">
      <%= form.check_box :has_archive, class: "w-4 h-4 text-indigo-600 bg-[#0a0a0a] border-[#2a2a2a] rounded focus:ring-indigo-500" %>
      <%= form.label :has_archive, "Has Archive", class: "text-sm text-gray-300" %>
      <span class="text-xs text-gray-500">— Enable archive page for this type</span>
    </div>

    <div class="flex items-center space-x-3">
      <%= form.check_box :active, class: "w-4 h-4 text-indigo-600 bg-[#0a0a0a] border-[#2a2a2a] rounded focus:ring-indigo-500" %>
      <%= form.label :active, "Active", class: "text-sm text-gray-300" %>
      <span class="text-xs text-gray-500">— Enable this content type</span>
    </div>
  </div>

  <!-- Supports -->
  <div class="bg-[#1a1a1a] border border-[#2a2a2a] rounded-xl p-6">
    <h3 class="text-lg font-medium text-white mb-4">Supports</h3>
    <p class="text-sm text-gray-400 mb-4">Select which features this content type supports:</p>
    
    <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
      <% %w[title editor excerpt thumbnail author comments trackbacks revisions page-attributes post-formats custom-fields].each do |feature| %>
        <div class="flex items-center space-x-2">
          <%= check_box_tag "content_type[supports][]", feature, content_type.supports?(feature), class: "w-4 h-4 text-indigo-600 bg-[#0a0a0a] border-[#2a2a2a] rounded focus:ring-indigo-500", id: "content_type_supports_#{feature.parameterize}" %>
          <%= label_tag "content_type_supports_#{feature.parameterize}", feature.titleize, class: "text-sm text-gray-300" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Actions -->
  <div class="flex items-center justify-between">
    <%= link_to "Cancel", admin_content_types_path, class: "px-4 py-2 text-gray-400 hover:text-white transition" %>
    <%= form.submit class: "px-6 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg font-medium transition cursor-pointer" %>
  </div>
<% end %>

