<% content_for :page_title, "Access Levels" %>

<div class="max-w-7xl mx-auto">
  <!-- Header -->
  <div class="mb-6">
    <div class="flex items-center gap-3 mb-4">
      <%= link_to admin_users_path, class: "text-gray-400 hover:text-white transition" do %>
        ‚Üê Back to Users
      <% end %>
    </div>
    <h1 class="text-3xl font-bold text-white mb-2">Access Levels & Permissions</h1>
    <p class="text-gray-400">Overview of user roles and their capabilities</p>
  </div>

  <!-- Info Box -->
  <div class="mb-6 bg-blue-900/20 border-l-4 border-blue-500 rounded-lg p-6">
    <div class="flex items-start gap-3">
      <svg class="w-6 h-6 text-blue-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      <div>
        <h3 class="text-sm font-semibold text-blue-400 mb-2">About Access Levels</h3>
        <p class="text-sm text-blue-300">
          Access levels determine what users can do in your site. Choose the appropriate role when creating or editing users.
          Permissions are pre-defined based on WordPress-style roles and cannot be customized individually in this version.
        </p>
      </div>
    </div>
  </div>

  <!-- Roles Overview -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
    <% @roles.each do |role| %>
      <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl overflow-hidden">
        <!-- Role Header -->
        <div class="p-6 border-b border-[#2a2a2a]">
          <div class="flex items-center justify-between mb-3">
            <h3 class="text-lg font-bold text-white"><%= role[:name] %></h3>
            <span class="px-3 py-1 bg-<%= role[:color] %>-500/20 text-<%= role[:color] %>-400 text-xs font-medium rounded-full border border-<%= role[:color] %>-500/30">
              <%= role[:user_count] %> user<%= role[:user_count] == 1 ? '' : 's' %>
            </span>
          </div>
          <p class="text-sm text-gray-400"><%= role[:description] %></p>
        </div>

        <!-- Permissions List -->
        <div class="p-6">
          <h4 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-3">Permissions</h4>
          <div class="space-y-2">
            <% role[:permissions].take(5).each do |permission| %>
              <div class="flex items-start gap-2 text-sm">
                <% if permission[:granted] %>
                  <svg class="w-4 h-4 text-green-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  <span class="text-gray-300"><%= permission[:name] %></span>
                <% else %>
                  <svg class="w-4 h-4 text-gray-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
                  </svg>
                  <span class="text-gray-600"><%= permission[:name] %></span>
                <% end %>
              </div>
            <% end %>
            
            <% if role[:permissions].count > 5 %>
              <button onclick="togglePermissions('<%= role[:key] %>')" class="text-indigo-400 hover:text-indigo-300 text-xs mt-2">
                Show all <%= role[:permissions].count %> permissions
              </button>
            <% end %>
          </div>
        </div>

        <!-- View Users with Role -->
        <div class="px-6 pb-6">
          <%= link_to "View #{role[:name]} Users", admin_users_path(role: role[:key]), 
              class: "block w-full px-4 py-2 bg-[#0a0a0a] hover:bg-[#1a1a1a] border border-[#2a2a2a] text-gray-300 hover:text-white rounded-lg transition text-center text-sm font-medium" %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Detailed Permissions Matrix -->
  <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6">
    <h2 class="text-xl font-semibold text-white mb-2">Permissions Matrix</h2>
    <p class="text-sm text-gray-400 mb-6">Comprehensive overview of what each role can do</p>

    <div class="overflow-x-auto">
      <table class="w-full text-sm">
        <thead>
          <tr class="border-b border-[#2a2a2a]">
            <th class="text-left py-3 px-4 text-gray-400 font-semibold">Permission</th>
            <% @roles.each do |role| %>
              <th class="text-center py-3 px-4 text-gray-400 font-semibold">
                <div><%= role[:name] %></div>
                <div class="text-xs text-gray-600 font-normal">(<%= role[:user_count] %>)</div>
              </th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% permission_names = @roles.first[:permissions].map { |p| p[:name] }.uniq %>
          <% permission_names.each do |permission_name| %>
            <tr class="border-b border-[#2a2a2a] hover:bg-[#1a1a1a]">
              <td class="py-3 px-4 text-gray-300"><%= permission_name %></td>
              <% @roles.each do |role| %>
                <% permission = role[:permissions].find { |p| p[:name] == permission_name } %>
                <td class="py-3 px-4 text-center">
                  <% if permission && permission[:granted] %>
                    <svg class="w-5 h-5 text-green-500 mx-auto" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                    </svg>
                  <% else %>
                    <svg class="w-5 h-5 text-gray-700 mx-auto" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
                    </svg>
                  <% end %>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Role Comparison -->
  <div class="mt-6 bg-gradient-to-r from-purple-900/20 to-blue-900/20 border border-purple-500/30 rounded-xl p-6">
    <h3 class="text-lg font-semibold text-white mb-4">Role Selection Guide</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 text-sm">
      <div>
        <h4 class="font-semibold text-red-400 mb-2">üëë Administrator</h4>
        <p class="text-gray-400">For: Site owners, developers</p>
        <p class="text-gray-500 text-xs mt-1">Full control, all features</p>
      </div>
      <div>
        <h4 class="font-semibold text-blue-400 mb-2">‚úèÔ∏è Editor</h4>
        <p class="text-gray-400">For: Content managers, senior writers</p>
        <p class="text-gray-500 text-xs mt-1">Can publish and edit all content</p>
      </div>
      <div>
        <h4 class="font-semibold text-green-400 mb-2">üìù Author</h4>
        <p class="text-gray-400">For: Regular writers, bloggers</p>
        <p class="text-gray-500 text-xs mt-1">Can publish their own content</p>
      </div>
      <div>
        <h4 class="font-semibold text-yellow-400 mb-2">‚úçÔ∏è Contributor</h4>
        <p class="text-gray-400">For: Guest writers, reviewers</p>
        <p class="text-gray-500 text-xs mt-1">Can write but not publish</p>
      </div>
      <div>
        <h4 class="font-semibold text-gray-400 mb-2">üë§ Subscriber</h4>
        <p class="text-gray-400">For: Registered users, members</p>
        <p class="text-gray-500 text-xs mt-1">Profile access only</p>
      </div>
    </div>
  </div>
</div>





