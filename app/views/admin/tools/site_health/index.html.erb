<% content_for :title, "Site Health" %>

<div class="max-w-5xl mx-auto">
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl font-bold text-white mb-2">Site Health</h1>
      <p class="text-gray-400">Check your site's configuration and performance</p>
    </div>
    
    <button onclick="runHealthChecks()" class="flex items-center gap-2 px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg transition">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
      </svg>
      Re-run Tests
    </button>
  </div>

  <!-- Overall Status -->
  <% 
    overall = @health_checks.any? { |c| c[:category] == 'critical' && c[:status] == 'fail' } ? 'fail' :
              @health_checks.any? { |c| c[:status] == 'warning' } ? 'warning' : 'pass'
    
    status_config = case overall
    when 'pass'
      { bg: 'bg-green-500/10', border: 'border-green-500/20', text: 'text-green-400', icon_color: 'text-green-500', title: 'Site Health: Good' }
    when 'warning'
      { bg: 'bg-yellow-500/10', border: 'border-yellow-500/20', text: 'text-yellow-400', icon_color: 'text-yellow-500', title: 'Site Health: Needs Attention' }
    else
      { bg: 'bg-red-500/10', border: 'border-red-500/20', text: 'text-red-400', icon_color: 'text-red-500', title: 'Site Health: Critical Issues' }
    end
  %>
  
  <div class="<%= status_config[:bg] %> border <%= status_config[:border] %> rounded-xl p-6 mb-8">
    <div class="flex items-center gap-3">
      <svg class="w-8 h-8 <%= status_config[:icon_color] %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
      </svg>
      <div>
        <h2 class="text-xl font-bold <%= status_config[:text] %>"><%= status_config[:title] %></h2>
        <p class="text-sm text-gray-400 mt-1">
          <%= @health_checks.count { |c| c[:status] == 'pass' } %> passed, 
          <%= @health_checks.count { |c| c[:status] == 'warning' } %> warnings, 
          <%= @health_checks.count { |c| c[:status] == 'fail' } %> failed
        </p>
      </div>
    </div>
  </div>

  <!-- Health Checks by Category -->
  <% ['critical', 'recommended', 'performance', 'info'].each do |category| %>
    <% category_checks = @health_checks.select { |c| c[:category] == category } %>
    <% next if category_checks.empty? %>
    
    <div class="mb-8">
      <h3 class="text-lg font-semibold text-white mb-4 flex items-center gap-2">
        <% if category == 'critical' %>
          <svg class="w-5 h-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
          </svg>
        <% elsif category == 'recommended' %>
          <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        <% elsif category == 'performance' %>
          <svg class="w-5 h-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
          </svg>
        <% else %>
          <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
        <% end %>
        <%= category.titleize %> Checks
      </h3>
      
      <div class="space-y-3">
        <% category_checks.each do |check| %>
          <div class="bg-[#1a1a1a] border border-[#2a2a2a] rounded-xl p-6 hover:border-[#3a3a3a] transition">
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <div class="flex items-center gap-3 mb-2">
                  <h4 class="text-white font-medium"><%= check[:name] %></h4>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= 
                    case check[:status]
                    when 'pass' then 'bg-green-500/10 text-green-400'
                    when 'warning' then 'bg-yellow-500/10 text-yellow-400'
                    when 'fail' then 'bg-red-500/10 text-red-400'
                    else 'bg-blue-500/10 text-blue-400'
                    end %>">
                    <%= check[:status].upcase %>
                  </span>
                </div>
                
                <p class="text-sm text-gray-400"><%= check[:message] %></p>
                
                <% if check[:details].present? %>
                  <details class="mt-3">
                    <summary class="text-xs text-gray-500 cursor-pointer hover:text-gray-400">Show details</summary>
                    <pre class="mt-2 text-xs text-gray-600 bg-[#0a0a0a] p-3 rounded border border-[#2a2a2a] overflow-auto"><%= JSON.pretty_generate(check[:details]) %></pre>
                  </details>
                <% end %>
              </div>
              
              <div class="ml-4">
                <% if check[:status] == 'pass' %>
                  <svg class="w-6 h-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                <% elsif check[:status] == 'warning' %>
                  <svg class="w-6 h-6 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                  </svg>
                <% elsif check[:status] == 'fail' %>
                  <svg class="w-6 h-6 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                <% else %>
                  <svg class="w-6 h-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
  
  <!-- System Information -->
  <div class="mt-8 bg-[#1a1a1a] border border-[#2a2a2a] rounded-xl p-6">
    <h3 class="text-white font-semibold mb-4">System Information</h3>
    <div class="grid grid-cols-2 gap-4 text-sm">
      <div>
        <p class="text-gray-500">Ruby Version</p>
        <p class="text-white font-mono"><%= RUBY_VERSION %></p>
      </div>
      <div>
        <p class="text-gray-500">Rails Version</p>
        <p class="text-white font-mono"><%= Rails.version %></p>
      </div>
      <div>
        <p class="text-gray-500">Environment</p>
        <p class="text-white font-mono"><%= Rails.env %></p>
      </div>
      <div>
        <p class="text-gray-500">Database</p>
        <p class="text-white font-mono"><%= ActiveRecord::Base.connection.adapter_name %></p>
      </div>
      <div>
        <p class="text-gray-500">Platform</p>
        <p class="text-white font-mono"><%= RbConfig::CONFIG['host_os'] %></p>
      </div>
      <div>
        <p class="text-gray-500">RailsPress Version</p>
        <p class="text-white font-mono">1.0.0</p>
      </div>
    </div>
  </div>
</div>

<script>
  function runHealthChecks() {
    showLoading('Running health checks...');
    
    fetch('<%= admin_tools_site_health_run_tests_path %>', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content
      }
    })
    .then(response => response.json())
    .then(data => {
      closeLoading();
      showSuccessToast('Health checks completed');
      setTimeout(() => location.reload(), 500);
    })
    .catch(error => {
      closeLoading();
      showErrorToast('Failed to run health checks');
      console.error('Error:', error);
    });
  }
</script>





