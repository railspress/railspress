<% content_for :title, "Keyboard Shortcuts" %>

<div class="max-w-5xl mx-auto">
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl font-bold text-white mb-2">Keyboard Shortcuts</h1>
      <p class="text-gray-400">Manage command palette shortcuts (⌘I)</p>
    </div>
    <button onclick="openShortcutModal()" class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-lg flex items-center gap-2 font-medium">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      New Shortcut
    </button>
  </div>

  <!-- Stats Cards -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
    <div class="bg-[#1a1a1a] border border-[#2a2a2a] rounded-xl p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="w-8 h-8 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-400">Total Shortcuts</p>
          <p class="text-2xl font-bold text-white"><%= Shortcut.count %></p>
        </div>
      </div>
    </div>
    
    <div class="bg-[#1a1a1a] border border-[#2a2a2a] rounded-xl p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="w-8 h-8 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-400">Active</p>
          <p class="text-2xl font-bold text-white"><%= Shortcut.active.count %></p>
        </div>
      </div>
    </div>
    
    <div class="bg-[#1a1a1a] border border-[#2a2a2a] rounded-xl p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="w-8 h-8 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-400">Navigation</p>
          <p class="text-2xl font-bold text-white"><%= Shortcut.by_category('navigation').count %></p>
        </div>
      </div>
    </div>
    
    <div class="bg-[#1a1a1a] border border-[#2a2a2a] rounded-xl p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="w-8 h-8 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-400">Content</p>
          <p class="text-2xl font-bold text-white"><%= Shortcut.by_category('content').count %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Shortcuts by Category -->
  <% Shortcut::CATEGORIES.each do |category| %>
    <% category_shortcuts = @shortcuts.select { |s| s.category == category } %>
    <% next if category_shortcuts.empty? %>
    
    <div class="mb-8">
      <h2 class="text-xl font-semibold text-white mb-4 capitalize"><%= category %> Shortcuts</h2>
      
      <div class="space-y-3">
        <% category_shortcuts.each do |shortcut| %>
          <div class="bg-[#1a1a1a] border border-[#2a2a2a] rounded-xl p-6 hover:border-[#3a3a3a] transition">
            <div class="flex items-start justify-between">
              <div class="flex items-start gap-4 flex-1">
                <!-- Icon -->
                <div class="flex-shrink-0">
                  <% if shortcut.icon.present? %>
                    <%= shortcut.icon.html_safe %>
                  <% else %>
                    <svg class="w-8 h-8 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                  <% end %>
                </div>
                
                <!-- Info -->
                <div class="flex-1">
                  <div class="flex items-center gap-3 mb-2">
                    <h3 class="text-lg font-semibold text-white"><%= shortcut.name %></h3>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= shortcut.active? ? 'bg-green-500/10 text-green-400' : 'bg-gray-500/10 text-gray-400' %>">
                      <%= shortcut.active? ? 'Active' : 'Inactive' %>
                    </span>
                  </div>
                  
                  <% if shortcut.description.present? %>
                    <p class="text-gray-400 text-sm mb-2"><%= shortcut.description %></p>
                  <% end %>
                  
                  <div class="flex items-center gap-4 text-xs text-gray-500">
                    <span class="inline-flex items-center gap-1">
                      <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
                      </svg>
                      <%= shortcut.action_type %>
                    </span>
                    <span>→</span>
                    <span class="font-mono"><%= shortcut.action_value&.truncate(50) %></span>
                  </div>
                </div>
              </div>
              
              <!-- Actions -->
              <div class="flex items-center gap-2 ml-4">
                <button onclick="editShortcut(<%= shortcut.id %>)" class="text-gray-400 hover:text-indigo-400 p-2 rounded-lg hover:bg-indigo-500/10 transition" title="Edit">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                  </svg>
                </button>
                
                <%= link_to toggle_admin_tools_shortcut_path(shortcut), method: :patch, class: "text-gray-400 hover:text-#{shortcut.active? ? 'orange' : 'green'}-400 p-2 rounded-lg hover:bg-#{shortcut.active? ? 'orange' : 'green'}-500/10 transition", title: shortcut.active? ? 'Disable' : 'Enable' do %>
                  <% if shortcut.active? %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728L5.636 5.636"/>
                    </svg>
                  <% else %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                  <% end %>
                <% end %>
                
                <%= button_to admin_tools_shortcut_path(shortcut), method: :delete, 
                    class: "text-gray-400 hover:text-red-400 p-2 rounded-lg hover:bg-red-500/10 transition", 
                    title: "Delete",
                    data: { turbo_confirm: "Delete this shortcut?" } do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                  </svg>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
  
  <% if @shortcuts.empty? %>
    <div class="bg-[#1a1a1a] border border-[#2a2a2a] rounded-xl p-12 text-center">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-300">No shortcuts yet</h3>
      <p class="mt-1 text-sm text-gray-500">Create your first keyboard shortcut</p>
      <div class="mt-6">
        <button onclick="openShortcutModal()" class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-lg font-medium">
          Create Shortcut
        </button>
      </div>
    </div>
  <% end %>
  
  <!-- Info Box -->
  <div class="mt-8 bg-blue-500/5 border border-blue-500/20 rounded-xl p-6">
    <h3 class="text-white font-semibold mb-3 flex items-center gap-2">
      <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      About Keyboard Shortcuts
    </h3>
    <div class="text-sm text-gray-300 space-y-2">
      <p><strong class="text-white">Command Palette:</strong> Press <kbd class="px-2 py-1 bg-[#1a1a1a] rounded text-xs">⌘I</kbd> to open the command palette.</p>
      <p><strong class="text-white">Action Types:</strong></p>
      <ul class="list-disc list-inside ml-4 space-y-1 text-gray-400">
        <li><strong>Navigate:</strong> Jump to any admin page (e.g., <code>/admin/posts</code>)</li>
        <li><strong>Execute:</strong> Run JavaScript code</li>
        <li><strong>Modal:</strong> Open a specific modal or dialog</li>
      </ul>
      <p class="mt-4 text-yellow-400">
        💡 Shortcuts are available to all admin users and appear in the command palette
      </p>
    </div>
  </div>
</div>

<!-- Shortcut Modal -->
<div id="shortcut-modal" class="hidden fixed inset-0 bg-black/50 flex items-center justify-center z-50 p-4">
  <div class="bg-[#1a1a1a] border border-[#2a2a2a] rounded-xl max-w-2xl w-full max-h-[90vh] overflow-y-auto" onclick="event.stopPropagation()">
    <div class="sticky top-0 bg-[#1a1a1a] border-b border-[#2a2a2a] px-6 py-4 flex items-center justify-between">
      <h2 class="text-xl font-semibold text-white" id="modal-title">New Shortcut</h2>
      <button onclick="closeShortcutModal()" class="text-gray-400 hover:text-white transition">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>
    
    <div class="p-6">
      <%= form_with model: [:admin, :tools, Shortcut.new], id: "shortcut-form", class: "space-y-4" do |f| %>
        <div>
          <label class="block text-sm font-medium text-gray-400 mb-2">Name *</label>
          <%= f.text_field :name, placeholder: "e.g., New Post", class: "w-full px-4 py-3 bg-[#0a0a0a] border border-[#2a2a2a] text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
        </div>
        
        <div>
          <label class="block text-sm font-medium text-gray-400 mb-2">Description</label>
          <%= f.text_area :description, rows: 2, placeholder: "What does this shortcut do?", class: "w-full px-4 py-3 bg-[#0a0a0a] border border-[#2a2a2a] text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 resize-none" %>
        </div>
        
        
        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-400 mb-2">Action Type *</label>
            <%= f.select :action_type, 
                options_for_select(Shortcut::ACTION_TYPES.map { |t| [t.titleize, t] }),
                {},
                class: "w-full px-4 py-3 bg-[#0a0a0a] border border-[#2a2a2a] text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-400 mb-2">Category</label>
            <%= f.select :category, 
                options_for_select(Shortcut::CATEGORIES.map { |c| [c.titleize, c] }),
                {},
                class: "w-full px-4 py-3 bg-[#0a0a0a] border border-[#2a2a2a] text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
          </div>
        </div>
        
        <div>
          <label class="block text-sm font-medium text-gray-400 mb-2">Action Value *</label>
          <%= f.text_field :action_value, placeholder: "/admin/posts/new", class: "w-full px-4 py-3 bg-[#0a0a0a] border border-[#2a2a2a] text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 font-mono" %>
          <p class="text-xs text-gray-500 mt-1">URL path for navigation, or JavaScript code for execute</p>
        </div>
        
        <div class="flex items-center gap-2">
          <%= f.check_box :active, class: "w-4 h-4 bg-[#0a0a0a] border border-[#2a2a2a] rounded text-indigo-600 focus:ring-indigo-500" %>
          <label class="text-sm text-gray-300">Active</label>
        </div>
        
        <div class="flex items-center gap-3 pt-4 border-t border-[#2a2a2a]">
          <%= f.submit "Save Shortcut", class: "flex-1 px-6 py-3 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg font-medium transition" %>
          <button type="button" onclick="closeShortcutModal()" class="px-6 py-3 bg-[#0a0a0a] hover:bg-[#111111] border border-[#2a2a2a] text-gray-300 hover:text-white rounded-lg transition">
            Cancel
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  function openShortcutModal(shortcutId = null) {
    const modal = document.getElementById('shortcut-modal');
    modal.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
    
    if (shortcutId) {
      document.getElementById('modal-title').textContent = 'Edit Shortcut';
      // Load shortcut data via AJAX if needed
    } else {
      document.getElementById('modal-title').textContent = 'New Shortcut';
      document.getElementById('shortcut-form').reset();
    }
  }
  
  function closeShortcutModal() {
    const modal = document.getElementById('shortcut-modal');
    modal.classList.add('hidden');
    document.body.style.overflow = '';
  }
  
  function editShortcut(id) {
    window.location.href = `/admin/tools/shortcuts/${id}/edit`;
  }
  
  // Close on escape
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      closeShortcutModal();
    }
  });
  
  // Close on click outside
  document.getElementById('shortcut-modal')?.addEventListener('click', function(e) {
    if (e.target === this) {
      closeShortcutModal();
    }
  });
</script>


