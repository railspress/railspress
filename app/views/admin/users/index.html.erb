<% content_for :title, "Users" %>
<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "tabulator_custom", "data-turbo-track": "reload" %>
<% end %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold text-white">Users</h1>
      <p class="text-gray-400">Manage user accounts and permissions</p>
    </div>
    <div class="flex items-center space-x-3">
      <%= link_to admin_access_levels_path, class: "inline-flex items-center px-4 py-2 border border-gray-600 hover:border-indigo-500 text-gray-300 hover:text-white text-sm font-medium rounded-lg transition-colors" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
        </svg>
        Access Levels
      <% end %>
      <%= link_to new_admin_user_path, class: "inline-flex items-center px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium rounded-lg transition-colors" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Add New User
      <% end %>
    </div>
  </div>

  <!-- Stats Cards -->
  <%= render 'admin/shared/stats_cards', stats: @stats %>

  <!-- Admin Table -->
  <%= render 'admin/shared/admin_table', 
      table_type: 'users', 
      data: @users_data, 
      columns: @columns,
      bulk_actions: @bulk_actions,
      status_options: @role_options,
      search_placeholder: "Search users..." %>
</div>

