<% content_for :page_title, "User Details" %>

<div class="max-w-4xl mx-auto">
  <div class="mb-6">
    <div class="flex items-center justify-between mb-4">
      <div class="flex items-center gap-3">
        <%= link_to admin_users_path, class: "text-gray-400 hover:text-white transition" do %>
          ← Back to Users
        <% end %>
      </div>
      <div class="flex items-center gap-2">
        <%= link_to edit_admin_user_path(@user), class: "px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg transition" do %>
          <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
          Edit User
        <% end %>
        <% unless @user.id == current_user.id %>
          <%= button_to admin_user_path(@user), method: :delete, 
              data: { turbo_confirm: "Are you sure you want to delete this user?" },
              class: "px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg transition" do %>
            Delete
          <% end %>
        <% end %>
      </div>
    </div>
    <h1 class="text-3xl font-bold text-white mb-2"><%= @user.name || @user.email %></h1>
    <p class="text-gray-400"><%= @user.email %></p>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Info -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Account Details -->
      <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6">
        <h2 class="text-lg font-semibold text-white mb-4">Account Details</h2>
        <dl class="space-y-4">
          <div class="flex justify-between items-center pb-3 border-b border-[#2a2a2a]">
            <dt class="text-sm text-gray-400">Email:</dt>
            <dd class="text-sm font-medium text-white"><%= @user.email %></dd>
          </div>
          <div class="flex justify-between items-center pb-3 border-b border-[#2a2a2a]">
            <dt class="text-sm text-gray-400">Name:</dt>
            <dd class="text-sm font-medium text-white"><%= @user.name || 'Not set' %></dd>
          </div>
          <div class="flex justify-between items-center pb-3 border-b border-[#2a2a2a]">
            <dt class="text-sm text-gray-400">Role:</dt>
            <dd>
              <span class="px-3 py-1 bg-indigo-500/20 text-indigo-400 text-xs font-medium rounded-full">
                <%= @user.role.titleize %>
              </span>
            </dd>
          </div>
          <div class="flex justify-between items-center pb-3 border-b border-[#2a2a2a]">
            <dt class="text-sm text-gray-400">Joined:</dt>
            <dd class="text-sm font-medium text-white"><%= @user.created_at.strftime('%B %d, %Y') %></dd>
          </div>
          <div class="flex justify-between items-center">
            <dt class="text-sm text-gray-400">Last Sign In:</dt>
            <dd class="text-sm font-medium text-white"><%= @user.last_sign_in_at&.strftime('%B %d, %Y at %H:%M') || 'Never' %></dd>
          </div>
        </dl>
      </div>

      <!-- Content Stats -->
      <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6">
        <h2 class="text-lg font-semibold text-white mb-4">Content Statistics</h2>
        <div class="grid grid-cols-2 gap-4">
          <div class="bg-[#0a0a0a] rounded-lg p-4">
            <p class="text-gray-400 text-sm mb-1">Posts</p>
            <p class="text-3xl font-bold text-white"><%= @user.posts.count %></p>
            <%= link_to "View Posts", admin_posts_path(author: @user.id), class: "text-indigo-400 hover:text-indigo-300 text-xs mt-2 inline-block" %>
          </div>
          <div class="bg-[#0a0a0a] rounded-lg p-4">
            <p class="text-gray-400 text-sm mb-1">Pages</p>
            <p class="text-3xl font-bold text-white"><%= @user.pages.count %></p>
            <%= link_to "View Pages", admin_pages_path(author: @user.id), class: "text-indigo-400 hover:text-indigo-300 text-xs mt-2 inline-block" %>
          </div>
          <div class="bg-[#0a0a0a] rounded-lg p-4">
            <p class="text-gray-400 text-sm mb-1">Comments</p>
            <p class="text-3xl font-bold text-white"><%= @user.comments.count %></p>
          </div>
          <div class="bg-[#0a0a0a] rounded-lg p-4">
            <p class="text-gray-400 text-sm mb-1">Media</p>
            <p class="text-3xl font-bold text-white"><%= @user.media.count %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Role Permissions -->
      <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6">
        <h3 class="text-sm font-semibold text-white mb-4">Role Permissions</h3>
        <div class="space-y-3 text-sm">
          <div class="flex items-start gap-2">
            <%= @user.admin? ? '✅' : '❌' %>
            <span class="text-gray-400">Full admin access</span>
          </div>
          <div class="flex items-start gap-2">
            <%= @user.can_publish? ? '✅' : '❌' %>
            <span class="text-gray-400">Can publish posts</span>
          </div>
          <div class="flex items-start gap-2">
            <%= @user.can_edit_others_posts? ? '✅' : '❌' %>
            <span class="text-gray-400">Can edit others' posts</span>
          </div>
          <div class="flex items-start gap-2">
            <%= @user.can_delete_posts? ? '✅' : '❌' %>
            <span class="text-gray-400">Can delete posts</span>
          </div>
        </div>
        <%= link_to "View All Permissions", admin_access_levels_path, class: "text-indigo-400 hover:text-indigo-300 text-xs mt-4 inline-block" %>
      </div>

      <!-- API Access -->
      <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6">
        <h3 class="text-sm font-semibold text-white mb-4">API Access</h3>
        <div class="bg-[#0a0a0a] rounded p-3 mb-3">
          <p class="text-xs text-gray-500 mb-1">API Token:</p>
          <p class="text-xs font-mono text-gray-300 break-all"><%= @user.api_token || 'Not generated' %></p>
        </div>
        <% if @user.api_token %>
          <%= button_to "Regenerate Token", regenerate_token_admin_user_path(@user), 
              method: :post,
              data: { turbo_confirm: "This will invalidate the current token. Continue?" },
              class: "w-full px-3 py-2 bg-[#0a0a0a] hover:bg-[#1a1a1a] border border-[#2a2a2a] text-gray-300 hover:text-white rounded-lg transition text-sm" %>
        <% end %>
      </div>

      <!-- Recent Activity -->
      <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6">
        <h3 class="text-sm font-semibold text-white mb-4">Recent Activity</h3>
        <% recent_posts = @user.posts.order(created_at: :desc).limit(3) %>
        <% if recent_posts.any? %>
          <div class="space-y-2">
            <% recent_posts.each do |post| %>
              <div class="text-sm">
                <%= link_to post.title, admin_post_path(post), class: "text-indigo-400 hover:text-indigo-300 line-clamp-1" %>
                <p class="text-xs text-gray-500"><%= post.created_at.strftime('%b %d') %></p>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-sm text-gray-500">No recent posts</p>
        <% end %>
      </div>
    </div>
  </div>
</div>




