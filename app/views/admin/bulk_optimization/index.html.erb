<% content_for :page_title, "Bulk Image Optimization" %>

<div class="max-w-6xl mx-auto">
  <div class="mb-6">
    <h1 class="text-2xl font-bold text-white mb-2">Bulk Image Optimization</h1>
    <p class="text-gray-400">Optimize all images in your media library for better performance</p>
  </div>

  <!-- Optimization Statistics -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-400 text-sm">Total Images</p>
          <p class="text-2xl font-bold text-white"><%= @stats[:total_images] %></p>
        </div>
        <div class="w-12 h-12 bg-blue-500 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-400 text-sm">Optimized</p>
          <p class="text-2xl font-bold text-green-400"><%= @stats[:optimized_images] %></p>
        </div>
        <div class="w-12 h-12 bg-green-500 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-400 text-sm">Unoptimized</p>
          <p class="text-2xl font-bold text-orange-400"><%= @stats[:unoptimized_images] %></p>
        </div>
        <div class="w-12 h-12 bg-orange-500 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-400 text-sm">Optimization Rate</p>
          <p class="text-2xl font-bold text-blue-400"><%= @stats[:optimization_percentage] %>%</p>
        </div>
        <div class="w-12 h-12 bg-blue-500 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Current Compression Level -->
  <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6 mb-6">
    <h2 class="text-xl font-semibold text-white mb-4">Current System Settings</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="bg-[#0a0a0a] p-4 rounded-lg">
        <h3 class="text-lg font-medium text-white mb-2">Compression Level</h3>
        <p class="text-2xl font-bold text-blue-400"><%= @compression_level_name&.capitalize || 'Lossy' %></p>
        <p class="text-sm text-gray-400"><%= @compression_description || 'Balanced quality and compression' %></p>
      </div>

      <div class="bg-[#0a0a0a] p-4 rounded-lg">
        <h3 class="text-lg font-medium text-white mb-2">Expected Savings</h3>
        <p class="text-2xl font-bold text-green-400"><%= @expected_savings || '25-40%' %></p>
        <p class="text-sm text-gray-400">Average file size reduction</p>
      </div>

      <div class="bg-[#0a0a0a] p-4 rounded-lg">
        <h3 class="text-lg font-medium text-white mb-2">Recommended For</h3>
        <p class="text-sm text-gray-300"><%= @recommended_for || 'General web images, blog posts' %></p>
      </div>
    </div>
  </div>

  <!-- Bulk Optimization Actions -->
  <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6 mb-8">
    <h2 class="text-xl font-semibold text-white mb-4">Bulk Optimization Actions</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Start Bulk Optimization -->
      <div class="bg-[#0a0a0a] p-6 rounded-lg">
        <h3 class="text-lg font-medium text-white mb-2">Optimize All Images</h3>
        <p class="text-gray-400 text-sm mb-4">Optimize all unoptimized images in your media library. This will generate WebP and AVIF variants.</p>
        
        <% if @stats[:unoptimized_images] > 0 %>
          <button onclick="startBulkOptimization()" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-3 px-4 rounded-lg transition">
            Optimize <%= @stats[:unoptimized_images] %> Images
          </button>
        <% else %>
          <button disabled class="w-full bg-gray-600 text-gray-400 font-medium py-3 px-4 rounded-lg cursor-not-allowed">
            All Images Optimized
          </button>
        <% end %>
      </div>

      <!-- Regenerate Variants -->
      <div class="bg-[#0a0a0a] p-6 rounded-lg">
        <h3 class="text-lg font-medium text-white mb-2">Regenerate Variants</h3>
        <p class="text-gray-400 text-sm mb-4">Regenerate WebP and AVIF variants for all optimized images.</p>
        
        <button onclick="regenerateVariants()" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-4 rounded-lg transition">
          Regenerate All Variants
        </button>
      </div>
    </div>

    <!-- Progress Bar -->
    <div id="optimization-progress" class="mt-6" style="display: none;">
      <div class="bg-[#0a0a0a] p-4 rounded-lg">
        <div class="flex items-center justify-between mb-2">
          <span class="text-sm font-medium text-white">Optimization Progress</span>
          <span id="progress-percentage" class="text-sm font-medium text-blue-400">0%</span>
        </div>
        <div class="w-full bg-gray-700 rounded-full h-2">
          <div id="progress-bar" class="bg-blue-600 h-2 rounded-full transition-all duration-300" style="width: 0%"></div>
        </div>
        <p id="optimization-status" class="text-sm text-gray-400 mt-2">Preparing optimization...</p>
      </div>
    </div>
  </div>

  <!-- Format Statistics -->
  <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6">
    <h2 class="text-xl font-semibold text-white mb-4">Format Statistics</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="text-center">
        <div class="w-16 h-16 bg-green-500 rounded-full flex items-center justify-center mx-auto mb-3">
          <span class="text-white font-bold text-lg">W</span>
        </div>
        <p class="text-2xl font-bold text-white"><%= @stats[:webp_variants] %></p>
        <p class="text-gray-400 text-sm">WebP Variants</p>
      </div>

      <div class="text-center">
        <div class="w-16 h-16 bg-purple-500 rounded-full flex items-center justify-center mx-auto mb-3">
          <span class="text-white font-bold text-lg">A</span>
        </div>
        <p class="text-2xl font-bold text-white"><%= @stats[:avif_variants] %></p>
        <p class="text-gray-400 text-sm">AVIF Variants</p>
      </div>

      <div class="text-center">
        <div class="w-16 h-16 bg-blue-500 rounded-full flex items-center justify-center mx-auto mb-3">
          <span class="text-white font-bold text-lg">R</span>
        </div>
        <p class="text-2xl font-bold text-white">0</p>
        <p class="text-gray-400 text-sm">Responsive Variants</p>
      </div>
    </div>
  </div>
</div>

<script>
function startBulkOptimization() {
  document.getElementById('optimization-progress').style.display = 'block';
  
  fetch('/admin/media/bulk_optimize', {
    method: 'POST',
    headers: {
      'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content,
      'Content-Type': 'application/json'
    }
  })
  .then(response => response.json())
  .then(data => {
    if (data.success) {
      updateProgress({ percentage: 0, message: data.message });
      checkProgress();
    } else {
      alert('Error: ' + data.message);
      document.getElementById('optimization-progress').style.display = 'none';
    }
  })
  .catch(error => {
    console.error('Optimization failed:', error);
    alert('Optimization failed. Please try again.');
    document.getElementById('optimization-progress').style.display = 'none';
  });
}

function regenerateVariants() {
  if (confirm('This will regenerate variants for all optimized images. Continue?')) {
    fetch('/admin/media/regenerate_variants', {
      method: 'POST',
      headers: {
        'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content,
        'Content-Type': 'application/json'
      }
    })
    .then(response => response.json())
    .then(data => {
      if (data.success) {
        alert(data.message);
      } else {
        alert('Error: ' + data.message);
      }
    })
    .catch(error => {
      console.error('Regeneration failed:', error);
      alert('Regeneration failed. Please try again.');
    });
  }
}

function checkProgress() {
  fetch('/admin/media/bulk_optimize_status')
    .then(response => response.json())
    .then(data => {
      updateProgress(data);
      
      if (!data.completed) {
        setTimeout(checkProgress, 2000);
      } else {
        // Reload page after completion
        setTimeout(() => {
          window.location.reload();
        }, 2000);
      }
    })
    .catch(error => {
      console.error('Status check failed:', error);
    });
}

function updateProgress(data) {
  const progressBar = document.getElementById('progress-bar');
  const progressPercentage = document.getElementById('progress-percentage');
  const status = document.getElementById('optimization-status');
  
  progressBar.style.width = data.percentage + '%';
  progressPercentage.textContent = data.percentage + '%';
  status.textContent = data.message;
}
</script>
