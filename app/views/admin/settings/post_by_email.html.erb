<% content_for :page_title, "Post by Email" %>
<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "admin/shared", "data-turbo-track": "reload" %>
<% end %>

<div class="admin-container" 
     data-controller="post-by-email"
     data-post-by-email-test-url-value="<%= admin_test_post_by_email_path %>"
     data-post-by-email-settings-url-value="<%= admin_post_by_email_settings_path %>">
  <div class="flex items-center justify-between mb-8">
    <div>
      <h1 class="text-3xl font-bold text-white mb-2">Post by Email</h1>
      <p class="text-gray-400">Configure IMAP settings to automatically import emails as draft posts</p>
    </div>
  </div>

  <div class="max-w-4xl mx-auto space-y-6">
      
      <!-- Status Card -->
      <div class="admin-card">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-3">
            <% if SiteSetting.get('post_by_email_enabled', false) %>
              <div class="w-3 h-3 bg-green-500 rounded-full animate-pulse"></div>
              <div>
                <h3 class="text-lg font-semibold text-white">Post by Email is Active</h3>
                <p class="text-sm text-gray-400 mt-1">Checking for new emails every 5 minutes</p>
              </div>
            <% else %>
              <div class="w-3 h-3 bg-gray-500 rounded-full"></div>
              <div>
                <h3 class="text-lg font-semibold text-white">Post by Email is Disabled</h3>
                <p class="text-sm text-gray-400 mt-1">Configure settings below to enable</p>
              </div>
            <% end %>
          </div>
          
          <% if SiteSetting.get('post_by_email_enabled', false) %>
            <%= form_with url: admin_test_post_by_email_path, method: :post, local: false, class: "inline", data: { action: "submit->post-by-email#testConnection" } do %>
              <button type="submit" class="admin-btn-secondary">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                </svg>
                Check Now
              </button>
            <% end %>
          <% end %>
          
          <!-- Test Result -->
          <div data-post-by-email-target="testResult" class="hidden mt-3"></div>
        </div>
      </div>

      <!-- IMAP Settings Form -->
      <%= form_with url: admin_post_by_email_settings_path, method: :patch, class: "space-y-6", data: { action: "submit->post-by-email#saveSettings" } do |f| %>
        
        <!-- Enable/Disable -->
        <div class="admin-card">
          <div class="flex items-center justify-between">
            <div>
              <h3 class="text-lg font-semibold text-white mb-1">Enable Post by Email</h3>
              <p class="text-sm text-gray-400">Automatically import emails as draft posts</p>
            </div>
            <label class="relative inline-flex items-center cursor-pointer">
              <input type="checkbox" name="post_by_email_enabled" value="true" class="sr-only peer" <%= 'checked' if SiteSetting.get('post_by_email_enabled', false) %>>
              <div class="w-11 h-6 bg-gray-700 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-indigo-800 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-indigo-600"></div>
            </label>
          </div>
        </div>

        <!-- IMAP Server Settings -->
        <div class="admin-card">
          <h3 class="text-lg font-semibold text-white mb-6 flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"/>
            </svg>
            IMAP Server
          </h3>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2">
                IMAP Server
              </label>
              <input type="text" name="imap_server" value="<%= SiteSetting.get('imap_server', '') %>" 
                     placeholder="imap.gmail.com" class="admin-input">
              <p class="mt-1 text-xs text-gray-500">e.g., imap.gmail.com, outlook.office365.com</p>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2">
                IMAP Port
              </label>
              <input type="number" name="imap_port" value="<%= SiteSetting.get('imap_port', '993') %>" 
                     placeholder="993" class="admin-input">
              <p class="mt-1 text-xs text-gray-500">Usually 993 for SSL or 143 for TLS</p>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2">
                Email Address
              </label>
              <input type="email" name="imap_email" value="<%= SiteSetting.get('imap_email', '') %>" 
                     placeholder="posts@yourdomain.com" class="admin-input">
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2">
                Password
              </label>
              <input type="password" name="imap_password" value="<%= SiteSetting.get('imap_password', '') %>" 
                     placeholder="••••••••" class="admin-input">
              <p class="mt-1 text-xs text-gray-500">Use an app-specific password for Gmail</p>
            </div>

            <div class="md:col-span-2">
              <label class="block text-sm font-medium text-gray-300 mb-2">
                Security
              </label>
              <select name="imap_ssl" class="admin-select">
                <option value="true" <%= 'selected' if SiteSetting.get('imap_ssl', 'true') == 'true' %>>SSL/TLS</option>
                <option value="false" <%= 'selected' if SiteSetting.get('imap_ssl', 'true') == 'false' %>>None</option>
              </select>
            </div>

            <div class="md:col-span-2">
              <label class="block text-sm font-medium text-gray-300 mb-2">
                Mailbox Folder
              </label>
              <input type="text" name="imap_folder" value="<%= SiteSetting.get('imap_folder', 'INBOX') %>" 
                     placeholder="INBOX" class="admin-input">
              <p class="mt-1 text-xs text-gray-500">Which folder to check for new messages (default: INBOX)</p>
            </div>
          </div>
        </div>

        <!-- Post Settings -->
        <div class="admin-card">
          <h3 class="text-lg font-semibold text-white mb-6 flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
            Post Settings
          </h3>

          <div class="space-y-6">
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2">
                Default Category
              </label>
              <select name="post_by_email_default_category" class="admin-select">
                <option value="">Uncategorized</option>
                <% Term.for_taxonomy('category').each do |term| %>
                  <option value="<%= term.id %>" <%= 'selected' if SiteSetting.get('post_by_email_default_category', '').to_s == term.id.to_s %>>
                    <%= term.name %>
                  </option>
                <% end %>
              </select>
              <p class="mt-1 text-xs text-gray-500">Category to assign to imported posts</p>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2">
                Default Author
              </label>
              <select name="post_by_email_default_author" class="admin-select">
                <% User.all.each do |user| %>
                  <option value="<%= user.id %>" <%= 'selected' if SiteSetting.get('post_by_email_default_author', current_user.id.to_s).to_s == user.id.to_s %>>
                    <%= user.email %>
                  </option>
                <% end %>
              </select>
              <p class="mt-1 text-xs text-gray-500">User to assign as post author</p>
            </div>

            <div class="flex items-center justify-between p-4 bg-[#0a0a0a] rounded-lg border border-[#2a2a2a]">
              <div>
                <h4 class="text-sm font-medium text-white">Mark emails as read after import</h4>
                <p class="text-xs text-gray-500 mt-1">Prevent re-importing the same email</p>
              </div>
              <label class="relative inline-flex items-center cursor-pointer">
                <input type="checkbox" name="post_by_email_mark_as_read" value="true" class="sr-only peer" <%= 'checked' if SiteSetting.get('post_by_email_mark_as_read', true) %>>
                <div class="w-11 h-6 bg-gray-700 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-indigo-800 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-indigo-600"></div>
              </label>
            </div>

            <div class="flex items-center justify-between p-4 bg-[#0a0a0a] rounded-lg border border-[#2a2a2a]">
              <div>
                <h4 class="text-sm font-medium text-white">Delete emails after import</h4>
                <p class="text-xs text-gray-500 mt-1">Automatically delete emails after creating posts</p>
              </div>
              <label class="relative inline-flex items-center cursor-pointer">
                <input type="checkbox" name="post_by_email_delete_after_import" value="true" class="sr-only peer" <%= 'checked' if SiteSetting.get('post_by_email_delete_after_import', false) %>>
                <div class="w-11 h-6 bg-gray-700 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-indigo-800 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-indigo-600"></div>
              </label>
            </div>
          </div>
        </div>

        <!-- How It Works -->
        <div class="admin-card bg-indigo-950/30 border-indigo-900/50">
          <h3 class="text-lg font-semibold text-indigo-300 mb-4 flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            How It Works
          </h3>
          <div class="space-y-3 text-sm text-indigo-200">
            <div class="flex items-start gap-3">
              <div class="flex-shrink-0 w-6 h-6 rounded-full bg-indigo-600 flex items-center justify-center text-white text-xs font-bold">1</div>
              <p>RailsPress checks your mailbox every 5 minutes for new messages</p>
            </div>
            <div class="flex items-start gap-3">
              <div class="flex-shrink-0 w-6 h-6 rounded-full bg-indigo-600 flex items-center justify-center text-white text-xs font-bold">2</div>
              <p>Email subject becomes the post title, body becomes the post content</p>
            </div>
            <div class="flex items-start gap-3">
              <div class="flex-shrink-0 w-6 h-6 rounded-full bg-indigo-600 flex items-center justify-center text-white text-xs font-bold">3</div>
              <p>Posts are created as <strong>drafts</strong> for you to review before publishing</p>
            </div>
            <div class="flex items-start gap-3">
              <div class="flex-shrink-0 w-6 h-6 rounded-full bg-indigo-600 flex items-center justify-center text-white text-xs font-bold">4</div>
              <p>Email attachments are imported to your media library</p>
            </div>
          </div>
        </div>

        <!-- Save Button -->
        <div class="flex justify-end gap-3">
          <%= button_tag type: 'submit', class: "admin-btn-primary" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            Save Settings
          <% end %>
        </div>
      <% end %>

  </div>
</div>

<!-- Post by email functionality is now handled by the Stimulus controller -->




