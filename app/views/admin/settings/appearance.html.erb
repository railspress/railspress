<div class="max-w-4xl mx-auto" data-controller="appearance-preview">
    <div class="mb-6">
      <h1 class="text-3xl font-bold text-white mb-2">Appearance Settings</h1>
      <p class="text-gray-400">Customize the visual style of your admin panel</p>
    </div>

    <%= form_with url: admin_settings_appearance_path, method: :patch, class: 'space-y-6' do |f| %>
      <!-- Color Scheme -->
      <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6">
        <h2 class="text-xl font-semibold text-white mb-2">Color Scheme</h2>
        <p class="text-sm text-gray-400 mb-6">Choose a base color scheme for your admin panel</p>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <!-- Onyx (Default) -->
          <label class="relative cursor-pointer block color-scheme-option">
            <input type="radio" name="settings[color_scheme]" value="onyx" 
                   <%= 'checked' if @settings[:color_scheme] == 'onyx' %>
                   style="position: absolute; opacity: 0; width: 1px; height: 1px;">
            <div class="border-2 border-[#2a2a2a] rounded-lg overflow-hidden transition">
              <div class="p-4 bg-[#0a0a0a]">
                <div class="flex items-center justify-between mb-3">
                  <h3 class="font-semibold text-white">Onyx</h3>
                  <div class="w-5 h-5 rounded-full border-2 border-white color-scheme-indicator"></div>
                </div>
                <div class="space-y-2">
                  <div class="h-8 bg-[#111111] rounded"></div>
                  <div class="h-6 bg-[#1a1a1a] rounded"></div>
                  <div class="h-6 bg-[#2a2a2a] rounded"></div>
                </div>
                <p class="text-xs text-gray-500 mt-3">Deep black, professional</p>
              </div>
            </div>
          </label>

          <!-- Vallarta (Dark Blue) -->
          <label class="relative cursor-pointer block color-scheme-option">
            <input type="radio" name="settings[color_scheme]" value="vallarta"
                   <%= 'checked' if @settings[:color_scheme] == 'vallarta' %>
                   style="position: absolute; opacity: 0; width: 1px; height: 1px;">
            <div class="border-2 border-[#2a2a2a] rounded-lg overflow-hidden transition">
              <div class="p-4 bg-[#0a1628]">
                <div class="flex items-center justify-between mb-3">
                  <h3 class="font-semibold text-white">Vallarta</h3>
                  <div class="w-5 h-5 rounded-full border-2 border-white color-scheme-indicator"></div>
                </div>
                <div class="space-y-2">
                  <div class="h-8 bg-[#0f1e3a] rounded"></div>
                  <div class="h-6 bg-[#1a2947] rounded"></div>
                  <div class="h-6 bg-[#2a3f5f] rounded"></div>
                </div>
                <p class="text-xs text-gray-400 mt-3">Dark blue, elegant</p>
              </div>
            </div>
          </label>

          <!-- Amanecer (Light) -->
          <label class="relative cursor-pointer block color-scheme-option">
            <input type="radio" name="settings[color_scheme]" value="amanecer"
                   <%= 'checked' if @settings[:color_scheme] == 'amanecer' %>
                   style="position: absolute; opacity: 0; width: 1px; height: 1px;">
            <div class="border-2 border-[#2a2a2a] rounded-lg overflow-hidden transition">
              <div class="p-4 bg-white">
                <div class="flex items-center justify-between mb-3">
                  <h3 class="font-semibold text-gray-900">Amanecer</h3>
                  <div class="w-5 h-5 rounded-full border-2 border-gray-900 color-scheme-indicator"></div>
                </div>
                <div class="space-y-2">
                  <div class="h-8 bg-gray-100 rounded border border-gray-200"></div>
                  <div class="h-6 bg-gray-50 rounded border border-gray-200"></div>
                  <div class="h-6 bg-white rounded border border-gray-200"></div>
                </div>
                <p class="text-xs text-gray-500 mt-3">Clean light theme</p>
              </div>
            </div>
          </label>
        </div>
      </div>

      <!-- Color Accents -->
      <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6">
        <h2 class="text-xl font-semibold text-white mb-2">Color Accents</h2>
        <p class="text-sm text-gray-400 mb-6">Customize colors for buttons, links, and UI elements</p>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Primary Color -->
          <div>
            <label class="block text-sm font-medium text-gray-300 mb-3">
              Primary Color (Buttons)
            </label>
            <p class="text-xs text-gray-500 mb-3">Used for button backgrounds, badges, active states</p>
            <div class="flex items-center gap-3">
              <%= color_field_tag 'settings[primary_color]', @settings[:primary_color], 
                  class: 'h-12 w-20 rounded-lg border-2 border-[#2a2a2a] cursor-pointer',
                  data: { appearance_preview_target: "primaryColorInput" } %>
              <%= text_field_tag 'settings[primary_color_text]', @settings[:primary_color], 
                  class: 'flex-1 px-4 py-2 bg-[#0a0a0a] border border-[#2a2a2a] rounded-lg text-white font-mono text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500',
                  data: { appearance_preview_target: "primaryColorInput" } %>
            </div>
            
            <!-- Quick Presets -->
            <div class="mt-3 flex gap-2">
              <button type="button" data-action="click->appearance-preview#setPrimaryColor" data-color="#6366F1" class="w-8 h-8 rounded-full bg-indigo-600 border-2 border-[#2a2a2a] hover:border-indigo-400" title="Indigo"></button>
              <button type="button" data-action="click->appearance-preview#setPrimaryColor" data-color="#3B82F6" class="w-8 h-8 rounded-full bg-blue-600 border-2 border-[#2a2a2a] hover:border-blue-400" title="Blue"></button>
              <button type="button" data-action="click->appearance-preview#setPrimaryColor" data-color="#8B5CF6" class="w-8 h-8 rounded-full bg-purple-600 border-2 border-[#2a2a2a] hover:border-purple-400" title="Purple"></button>
              <button type="button" data-action="click->appearance-preview#setPrimaryColor" data-color="#EC4899" class="w-8 h-8 rounded-full bg-pink-600 border-2 border-[#2a2a2a] hover:border-pink-400" title="Pink"></button>
              <button type="button" data-action="click->appearance-preview#setPrimaryColor" data-color="#10B981" class="w-8 h-8 rounded-full bg-green-600 border-2 border-[#2a2a2a] hover:border-green-400" title="Green"></button>
            </div>
          </div>

          <!-- Secondary Color -->
          <div>
            <label class="block text-sm font-medium text-gray-300 mb-3">
              Secondary Color
            </label>
            <p class="text-xs text-gray-500 mb-3">Used for accents, highlights, hover states</p>
            <div class="flex items-center gap-3">
              <%= color_field_tag 'settings[secondary_color]', @settings[:secondary_color], 
                  class: 'h-12 w-20 rounded-lg border-2 border-[#2a2a2a] cursor-pointer' %>
              <%= text_field_tag 'settings[secondary_color_text]', @settings[:secondary_color], 
                  class: 'flex-1 px-4 py-2 bg-[#0a0a0a] border border-[#2a2a2a] rounded-lg text-white font-mono text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500',
                  onchange: "document.querySelector('input[name=\"settings[secondary_color]\"]').value = this.value" %>
            </div>
            
            <!-- Quick Presets -->
            <div class="mt-3 flex gap-2">
              <button type="button" onclick="setSecondaryColor('#8B5CF6')" class="w-8 h-8 rounded-full bg-purple-600 border-2 border-[#2a2a2a] hover:border-purple-400" title="Purple"></button>
              <button type="button" onclick="setSecondaryColor('#06B6D4')" class="w-8 h-8 rounded-full bg-cyan-600 border-2 border-[#2a2a2a] hover:border-cyan-400" title="Cyan"></button>
              <button type="button" onclick="setSecondaryColor('#F59E0B')" class="w-8 h-8 rounded-full bg-amber-600 border-2 border-[#2a2a2a] hover:border-amber-400" title="Amber"></button>
              <button type="button" onclick="setSecondaryColor('#EF4444')" class="w-8 h-8 rounded-full bg-red-600 border-2 border-[#2a2a2a] hover:border-red-400" title="Red"></button>
              <button type="button" onclick="setSecondaryColor('#14B8A6')" class="w-8 h-8 rounded-full bg-teal-600 border-2 border-[#2a2a2a] hover:border-teal-400" title="Teal"></button>
            </div>
          </div>
        </div>
        
        <!-- Link Color -->
        <div class="mt-6 pt-6 border-t border-[#2a2a2a]">
          <label class="block text-sm font-medium text-gray-300 mb-3">
            Link Color
          </label>
          <p class="text-xs text-gray-500 mb-3">Color for text links (post titles, clickable items)</p>
          <div class="flex items-center gap-3">
            <%= color_field_tag 'settings[link_color]', @settings[:link_color] || '#60a5fa', 
                class: 'h-12 w-20 rounded-lg border-2 border-[#2a2a2a] cursor-pointer' %>
            <%= text_field_tag 'settings[link_color_text]', @settings[:link_color] || '#60a5fa', 
                class: 'flex-1 px-4 py-2 bg-[#0a0a0a] border border-[#2a2a2a] rounded-lg text-white font-mono text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500',
                onchange: "document.querySelector('input[name=\"settings[link_color]\"]').value = this.value" %>
          </div>
          
          <!-- Link Color Presets -->
          <div class="mt-3 flex gap-2">
            <button type="button" onclick="setLinkColor('#60a5fa')" class="w-8 h-8 rounded-full bg-blue-400 border-2 border-[#2a2a2a] hover:border-blue-300" title="Blue-400 (Dark themes)"></button>
            <button type="button" onclick="setLinkColor('#2563eb')" class="w-8 h-8 rounded-full bg-blue-600 border-2 border-[#2a2a2a] hover:border-blue-500" title="Blue-600 (Light themes)"></button>
            <button type="button" onclick="setLinkColor('#3B82F6')" class="w-8 h-8 rounded-full bg-blue-500 border-2 border-[#2a2a2a] hover:border-blue-400" title="Blue-500"></button>
            <button type="button" onclick="setLinkColor('#8B5CF6')" class="w-8 h-8 rounded-full bg-purple-500 border-2 border-[#2a2a2a] hover:border-purple-400" title="Purple"></button>
            <button type="button" onclick="setLinkColor('#EC4899')" class="w-8 h-8 rounded-full bg-pink-500 border-2 border-[#2a2a2a] hover:border-pink-400" title="Pink"></button>
          </div>
        </div>
        
        <!-- Heading Color -->
        <div class="mt-6 pt-6 border-t border-[#2a2a2a]">
          <label class="block text-sm font-medium text-gray-300 mb-3">
            Heading Color
          </label>
          <p class="text-xs text-gray-500 mb-3">Color for headings (H1, H2, H3, etc.)</p>
          <div class="flex items-center gap-3">
            <%= color_field_tag 'settings[heading_color]', @settings[:heading_color] || '#ffffff', 
                class: 'h-12 w-20 rounded-lg border-2 border-[#2a2a2a] cursor-pointer' %>
            <%= text_field_tag 'settings[heading_color_text]', @settings[:heading_color] || '#ffffff', 
                class: 'flex-1 px-4 py-2 bg-[#0a0a0a] border border-[#2a2a2a] rounded-lg text-white font-mono text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500',
                onchange: "document.querySelector('input[name=\"settings[heading_color]\"]').value = this.value" %>
          </div>
        </div>
        
        <!-- Body Text Color -->
        <div class="mt-6 pt-6 border-t border-[#2a2a2a]">
          <label class="block text-sm font-medium text-gray-300 mb-3">
            Body Text Color
          </label>
          <p class="text-xs text-gray-500 mb-3">Color for paragraphs and general text</p>
          <div class="flex items-center gap-3">
            <%= color_field_tag 'settings[body_color]', @settings[:body_color] || '#e8e8e8', 
                class: 'h-12 w-20 rounded-lg border-2 border-[#2a2a2a] cursor-pointer' %>
            <%= text_field_tag 'settings[body_color_text]', @settings[:body_color] || '#e8e8e8', 
                class: 'flex-1 px-4 py-2 bg-[#0a0a0a] border border-[#2a2a2a] rounded-lg text-white font-mono text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500',
                onchange: "document.querySelector('input[name=\"settings[body_color]\"]').value = this.value" %>
          </div>
        </div>
        
        <!-- Primary Button Controls -->
        <div class="mt-6 pt-6 border-t border-[#2a2a2a]">
          <h3 class="text-lg font-semibold text-white mb-4">Primary Button</h3>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Primary Button Background -->
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-3">
                Primary Button Background
              </label>
              <p class="text-xs text-gray-500 mb-3">Background color for primary buttons</p>
              <div class="flex items-center gap-3">
                <%= color_field_tag 'settings[primary_button_bg]', @settings[:primary_button_bg] || @settings[:primary_color] || '#6366F1', 
                    class: 'h-12 w-20 rounded-lg border-2 border-[#2a2a2a] cursor-pointer' %>
                <%= text_field_tag 'settings[primary_button_bg_text]', @settings[:primary_button_bg] || @settings[:primary_color] || '#6366F1', 
                    class: 'flex-1 px-4 py-2 bg-[#0a0a0a] border border-[#2a2a2a] rounded-lg text-white font-mono text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500',
                    onchange: "document.querySelector('input[name=\"settings[primary_button_bg]\"]').value = this.value" %>
              </div>
            </div>
            
            <!-- Primary Button Text -->
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-3">
                Primary Button Text
              </label>
              <p class="text-xs text-gray-500 mb-3">Text color inside primary buttons</p>
              <div class="flex items-center gap-3">
                <%= color_field_tag 'settings[primary_button_text]', @settings[:primary_button_text] || '#ffffff', 
                    class: 'h-12 w-20 rounded-lg border-2 border-[#2a2a2a] cursor-pointer' %>
                <%= text_field_tag 'settings[primary_button_text_input]', @settings[:primary_button_text] || '#ffffff', 
                    class: 'flex-1 px-4 py-2 bg-[#0a0a0a] border border-[#2a2a2a] rounded-lg text-white font-mono text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500',
                    onchange: "document.querySelector('input[name=\"settings[primary_button_text]\"]').value = this.value" %>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Secondary Button Controls -->
        <div class="mt-6 pt-6 border-t border-[#2a2a2a]">
          <h3 class="text-lg font-semibold text-white mb-4">Secondary Button</h3>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Secondary Button Background -->
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-3">
                Secondary Button Background
              </label>
              <p class="text-xs text-gray-500 mb-3">Background color for secondary buttons</p>
              <div class="flex items-center gap-3">
                <%= color_field_tag 'settings[secondary_button_bg]', @settings[:secondary_button_bg] || @settings[:secondary_color] || '#8B5CF6', 
                    class: 'h-12 w-20 rounded-lg border-2 border-[#2a2a2a] cursor-pointer' %>
                <%= text_field_tag 'settings[secondary_button_bg_text]', @settings[:secondary_button_bg] || @settings[:secondary_color] || '#8B5CF6', 
                    class: 'flex-1 px-4 py-2 bg-[#0a0a0a] border border-[#2a2a2a] rounded-lg text-white font-mono text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500',
                    onchange: "document.querySelector('input[name=\"settings[secondary_button_bg]\"]').value = this.value" %>
              </div>
            </div>
            
            <!-- Secondary Button Text -->
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-3">
                Secondary Button Text
              </label>
              <p class="text-xs text-gray-500 mb-3">Text color inside secondary buttons</p>
              <div class="flex items-center gap-3">
                <%= color_field_tag 'settings[secondary_button_text]', @settings[:secondary_button_text] || '#ffffff', 
                    class: 'h-12 w-20 rounded-lg border-2 border-[#2a2a2a] cursor-pointer' %>
                <%= text_field_tag 'settings[secondary_button_text_input]', @settings[:secondary_button_text] || '#ffffff', 
                    class: 'flex-1 px-4 py-2 bg-[#0a0a0a] border border-[#2a2a2a] rounded-lg text-white font-mono text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500',
                    onchange: "document.querySelector('input[name=\"settings[secondary_button_text]\"]').value = this.value" %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Typography -->
      <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6">
        <h2 class="text-xl font-semibold text-white mb-2">Typography</h2>
        <p class="text-sm text-gray-400 mb-6">Customize fonts for headings, body text, and paragraphs</p>
        
        <div class="space-y-6">
          <!-- Heading Font -->
          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">
              Heading Font Family
            </label>
            <%= select_tag 'settings[heading_font]', options_for_select([
                  ['Inter (Default)', 'Inter'],
                  ['System Font', '-apple-system, BlinkMacSystemFont, "Segoe UI", Roboto'],
                  ['Helvetica', 'Helvetica, Arial, sans-serif'],
                  ['Georgia', 'Georgia, serif'],
                  ['Times New Roman', '"Times New Roman", Times, serif'],
                  ['Courier', 'Courier, monospace'],
                  ['Poppins', 'Poppins, sans-serif'],
                  ['Roboto', 'Roboto, sans-serif'],
                  ['Montserrat', 'Montserrat, sans-serif'],
                  ['Open Sans', '"Open Sans", sans-serif']
                ], @settings[:heading_font]),
                class: 'w-full px-4 py-2 bg-[#0a0a0a] border border-[#2a2a2a] rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-indigo-500' %>
            <p class="mt-1 text-sm text-gray-500">Used for headings (H1, H2, H3, etc.)</p>
          </div>

          <!-- Body Font -->
          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">
              Body Font Family
            </label>
            <%= select_tag 'settings[body_font]', options_for_select([
                  ['Inter (Default)', 'Inter'],
                  ['System Font', '-apple-system, BlinkMacSystemFont, "Segoe UI", Roboto'],
                  ['Helvetica', 'Helvetica, Arial, sans-serif'],
                  ['Georgia', 'Georgia, serif'],
                  ['Times New Roman', '"Times New Roman", Times, serif'],
                  ['Courier', 'Courier, monospace'],
                  ['Poppins', 'Poppins, sans-serif'],
                  ['Roboto', 'Roboto, sans-serif'],
                  ['Montserrat', 'Montserrat, sans-serif'],
                  ['Open Sans', '"Open Sans", sans-serif']
                ], @settings[:body_font]),
                class: 'w-full px-4 py-2 bg-[#0a0a0a] border border-[#2a2a2a] rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-indigo-500' %>
            <p class="mt-1 text-sm text-gray-500">Used for UI elements, buttons, labels</p>
          </div>

          <!-- Paragraph Font -->
          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">
              Paragraph Font Family
            </label>
            <%= select_tag 'settings[paragraph_font]', options_for_select([
                  ['Inter (Default)', 'Inter'],
                  ['System Font', '-apple-system, BlinkMacSystemFont, "Segoe UI", Roboto'],
                  ['Helvetica', 'Helvetica, Arial, sans-serif'],
                  ['Georgia', 'Georgia, serif'],
                  ['Times New Roman', '"Times New Roman", Times, serif'],
                  ['Courier', 'Courier, monospace'],
                  ['Poppins', 'Poppins, sans-serif'],
                  ['Roboto', 'Roboto, sans-serif'],
                  ['Montserrat', 'Montserrat, sans-serif'],
                  ['Open Sans', '"Open Sans", sans-serif']
                ], @settings[:paragraph_font]),
                class: 'w-full px-4 py-2 bg-[#0a0a0a] border border-[#2a2a2a] rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-indigo-500' %>
            <p class="mt-1 text-sm text-gray-500">Used for body text, paragraphs, descriptions</p>
          </div>
        </div>
      </div>

      <!-- Preview -->
      <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-6">
        <h2 class="text-xl font-semibold text-white mb-4">Preview</h2>
        <div id="preview-box" class="p-6 bg-[#0a0a0a] rounded-lg border border-[#2a2a2a]" data-appearance-preview-target="previewBox">
          <h1 class="text-3xl font-bold mb-2" style="font-family: <%= @settings[:heading_font] %>; color: <%= @settings[:primary_color] %>;">
            Heading Example
          </h1>
          <p class="text-base mb-4" style="font-family: <%= @settings[:paragraph_font] %>; color: #d1d5db;">
            This is how paragraph text will look with your selected fonts. Lorem ipsum dolor sit amet, consectetur adipiscing elit.
          </p>
          <a href="#" class="text-base font-medium mb-4 block" style="color: <%= @settings[:link_color] || '#60a5fa' %>; font-family: <%= @settings[:body_font] %>;">
            Link Example (Post Title)
          </a>
          <button type="button" class="px-4 py-2 rounded-lg text-white font-medium" style="background-color: <%= @settings[:primary_color] %>; font-family: <%= @settings[:body_font] %>;">
            Primary Button
          </button>
          <button type="button" class="ml-2 px-4 py-2 rounded-lg text-white font-medium" style="background-color: <%= @settings[:secondary_color] %>; font-family: <%= @settings[:body_font] %>;">
            Secondary Button
          </button>
        </div>
      </div>

      <!-- Info Box -->
      <div class="bg-blue-900/20 border-l-4 border-blue-500 rounded-lg p-6">
        <div class="flex items-start gap-3">
          <svg class="w-6 h-6 text-blue-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <div>
            <h3 class="text-sm font-semibold text-blue-400 mb-2">
              Appearance Tips
            </h3>
            <ul class="text-sm text-blue-300 space-y-1">
              <li>• Changes will apply to the admin panel only</li>
              <li>• Choose colors with good contrast for readability</li>
              <li>• Use consistent fonts for a professional look</li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Save Button -->
      <div class="flex items-center justify-between pt-6 border-t border-[#2a2a2a]">
        <div class="text-sm text-gray-400">
          Changes will take effect immediately after saving
        </div>
        <%= f.submit 'Save Appearance Settings', class: 'px-6 py-3 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-lg transition cursor-pointer' %>
      </div>
    <% end %>
</div>

<!-- Appearance preview functionality is now handled by the Stimulus controller -->

<script>
  function setSecondaryColor(color) {
    document.querySelector('input[name="settings[secondary_color]"]').value = color;
    document.querySelector('input[name="settings[secondary_color_text]"]').value = color;
  }
  
  function setLinkColor(color) {
    document.querySelector('input[name="settings[link_color]"]').value = color;
    document.querySelector('input[name="settings[link_color_text]"]').value = color;
  }
</script>

<style>
  /* Color scheme radio button styling - works without Tailwind peer dependency */
  .color-scheme-option:has(input:checked) > div {
    border-color: #6366f1 !important;
    box-shadow: 0 0 0 2px rgba(99, 102, 241, 0.2);
  }
  
  .color-scheme-option:has(input:checked) .color-scheme-indicator {
    background-color: #6366f1 !important;
    border-color: #6366f1 !important;
  }
  
  .color-scheme-option:hover {
    opacity: 0.9;
  }
</style>
