<% content_for :title, "Shortcuts Settings" %>

<div class="max-w-4xl mx-auto">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-white mb-2">Shortcuts Settings</h1>
    <p class="text-gray-400">Configure keyboard shortcuts for the admin interface</p>
  </div>

  <%= form_with url: admin_shortcuts_settings_path, method: :patch, class: "space-y-8" do |f| %>
    <!-- Command Palette Shortcut -->
    <div class="bg-[#1a1a1a] border border-[#2a2a2a] rounded-xl p-6">
      <div class="flex items-start justify-between mb-6">
        <div>
          <h2 class="text-xl font-semibold text-white mb-2">Command Palette</h2>
          <p class="text-gray-400">Set the keyboard shortcut to open the global command palette</p>
        </div>
        <div class="flex items-center gap-3">
          <svg class="w-6 h-6 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
          </svg>
        </div>
      </div>

      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-300 mb-3">Keyboard Shortcut</label>
          <%= f.select :command_palette_shortcut, 
              options_for_select([
                ['⌘K - Command + K (Mac)', 'cmd+k'],
                ['Ctrl+K - Control + K (Windows/Linux)', 'ctrl+k'],
                ['⌘⇧P - Command + Shift + P (Mac)', 'cmd+shift+p'],
                ['Ctrl+Shift+P - Control + Shift + P (Windows/Linux)', 'ctrl+shift+p'],
                ['⌘I - Command + I (Mac)', 'cmd+i'],
                ['Ctrl+I - Control + I (Windows/Linux)', 'ctrl+i']
              ], @command_palette_shortcut),
              {},
              class: "w-full px-4 py-3 bg-[#0a0a0a] border border-[#2a2a2a] text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
        </div>

        <div class="bg-blue-500/5 border border-blue-500/20 rounded-lg p-4">
          <div class="flex items-start gap-3">
            <svg class="w-5 h-5 text-blue-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <div class="text-sm">
              <h4 class="text-blue-400 font-medium mb-1">About the Command Palette</h4>
              <p class="text-gray-300 mb-2">The command palette allows you to quickly navigate to any admin page or execute actions using keyboard shortcuts.</p>
              <ul class="text-gray-400 space-y-1">
                <li>• Type to search through available commands</li>
                <li>• Use ↑↓ arrows to navigate</li>
                <li>• Press Enter to execute</li>
                <li>• Press Escape to close</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="flex items-center justify-between pt-6 border-t border-[#2a2a2a]">
      <div class="text-sm text-gray-400">
        Changes are saved automatically when you submit the form
      </div>
      <div class="flex items-center gap-3">
        <%= link_to admin_shortcuts_settings_path, class: "px-6 py-3 bg-[#0a0a0a] hover:bg-[#111111] border border-[#2a2a2a] text-gray-300 hover:text-white rounded-lg transition" do %>
          Cancel
        <% end %>
        <%= f.submit "Save Settings", class: "px-6 py-3 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg font-medium transition" %>
      </div>
    </div>
  <% end %>
</div>






