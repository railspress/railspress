<div class="bg-gradient-to-br from-indigo-500/10 to-purple-500/10 border-2 border-indigo-500/30 rounded-xl overflow-hidden hover:border-indigo-500/50 transition group">
  <div class="p-6">
    <div class="flex items-start justify-between mb-4">
      <div class="flex items-center space-x-3">
        <div class="text-4xl"><%= plugin[:icon] %></div>
        <div>
          <h3 class="text-lg font-bold text-white group-hover:text-indigo-400 transition"><%= plugin[:name] %></h3>
          <p class="text-sm text-gray-400">by <%= plugin[:author] %></p>
        </div>
      </div>
      <span class="px-2 py-1 bg-yellow-500/10 text-yellow-400 rounded-md text-xs font-semibold">
        ⭐ Featured
      </span>
    </div>
    
    <p class="text-gray-300 text-sm mb-4 line-clamp-2"><%= plugin[:description] %></p>
    
    <div class="flex items-center justify-between text-sm text-gray-500 mb-4">
      <div class="flex items-center space-x-4">
        <span class="flex items-center">
          <svg class="w-4 h-4 mr-1 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
          </svg>
          <%= plugin[:rating] %>
        </span>
        <span><%= number_with_delimiter(plugin[:downloads]) %> downloads</span>
      </div>
    </div>
    
    <div class="flex items-center space-x-2">
      <% if Plugin.exists?(name: plugin[:name]) %>
        <span class="flex-1 px-4 py-2 bg-emerald-500/10 text-emerald-400 rounded-lg text-center text-sm font-medium">
          ✓ Installed
        </span>
      <% else %>
        <%= button_to "Install Now", install_admin_plugins_path(plugin_slug: plugin[:slug]), 
            method: :post,
            class: "flex-1 px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg transition text-center text-sm font-medium cursor-pointer" %>
      <% end %>
      <button onclick="showPluginDetails('<%= plugin[:slug] %>')" 
              class="px-4 py-2 border border-[#2a2a2a] hover:border-[#3a3a3a] text-gray-300 hover:text-white rounded-lg transition">
        Details
      </button>
    </div>
  </div>
</div>




