<div class="max-w-7xl mx-auto">
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    
    <!-- Main Content - Settings (Left, 70%) -->
    <div class="lg:col-span-2">
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6">
        <div class="flex items-center justify-between mb-6">
          <div>
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white">
              Plugin Settings
            </h2>
            <p class="text-gray-600 dark:text-gray-400 mt-1">
              Configure your plugin settings below
            </p>
          </div>
          <%= link_to admin_plugins_path, class: "px-3 py-1.5 text-sm text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white border border-gray-300 dark:border-gray-600 rounded hover:bg-gray-50 dark:hover:bg-gray-700 transition" do %>
            ‚Üê Back to Plugins
          <% end %>
        </div>

        <% if @schema.present? && @schema.any? %>
          <%= form_with url: update_settings_admin_plugin_path(@plugin), method: :patch, class: "space-y-6" do |form| %>
            <%= render_plugin_settings_form(@plugin_instance, @plugin_settings) %>
            
            <div class="flex justify-end space-x-2 pt-6 border-t border-gray-200 dark:border-gray-700">
              <%= link_to "Cancel", admin_plugins_path, class: "px-4 py-2 text-sm text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white border border-gray-300 dark:border-gray-600 rounded hover:bg-gray-50 dark:hover:bg-gray-700 transition" %>
              <%= form.submit "Save Settings", class: "px-4 py-2 text-sm bg-indigo-600 hover:bg-indigo-700 text-white rounded transition" %>
            </div>
          <% end %>
        <% else %>
          <div class="text-center py-12">
            <div class="text-gray-400 dark:text-gray-500 mb-4">
              <svg class="w-16 h-16 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            </div>
            <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">
              This Plugin Has No Settings Available
            </h3>
            <p class="text-gray-600 dark:text-gray-400 mb-6">
              This plugin doesn't have any configurable settings.
            </p>
          </div>
        <% end %>

      </div>
    </div>

    <!-- Right Sidebar - Plugin Info (Right, 30%) -->
    <div class="lg:col-span-1">
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6 sticky top-6">
        <!-- Plugin Header -->
        <div class="text-center mb-6">
          <div class="w-16 h-16 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
            </svg>
          </div>
          <h1 class="text-xl font-bold text-gray-900 dark:text-white mb-2">
            <%= @plugin.name %>
          </h1>
          <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">
            <%= @plugin.description.presence || "Plugin description not available" %>
          </p>
          
          <!-- Plugin Status -->
          <div class="flex items-center justify-center space-x-2 mb-4">
            <% if @plugin.active? %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200">
                <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                Active
              </span>
            <% else %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800 dark:bg-gray-900 dark:text-gray-200">
                <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                </svg>
                Inactive
              </span>
            <% end %>
          </div>
        </div>

        <!-- Plugin Actions -->
        <div class="space-y-2 mb-6">
          <% if @plugin.active? %>
            <%= link_to "Deactivate", admin_plugin_path(@plugin), method: :patch, params: { plugin: { active: false } }, 
                class: "w-full px-3 py-2 text-sm bg-red-100 hover:bg-red-200 text-red-700 rounded transition text-center block",
                data: { confirm: "Are you sure you want to deactivate this plugin?" } %>
          <% else %>
            <%= link_to "Activate", admin_plugin_path(@plugin), method: :patch, params: { plugin: { active: true } }, 
                class: "w-full px-3 py-2 text-sm bg-green-100 hover:bg-green-200 text-green-700 rounded transition text-center block" %>
          <% end %>
          
          <%= link_to "Uninstall", admin_plugin_path(@plugin), method: :delete, 
              class: "w-full px-3 py-2 text-sm bg-gray-100 hover:bg-gray-200 text-gray-700 rounded transition text-center block",
              data: { confirm: "Are you sure you want to uninstall this plugin? This action cannot be undone." } %>
        </div>

        <!-- Plugin Info -->
        <div class="border-t border-gray-200 dark:border-gray-700 pt-4">
          <div class="space-y-2 text-sm">
            <div class="flex justify-between">
              <span class="text-gray-600 dark:text-gray-400">Version:</span>
              <span class="text-gray-900 dark:text-white font-medium"><%= @plugin.version.presence || "1.0.0" %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600 dark:text-gray-400">Author:</span>
              <span class="text-gray-900 dark:text-white font-medium"><%= @plugin.author.presence || "Unknown" %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600 dark:text-gray-400">Status:</span>
              <span class="text-gray-900 dark:text-white font-medium"><%= @plugin.active? ? "Active" : "Inactive" %></span>
            </div>
          </div>
        </div>

        <!-- Support Link -->
        <div class="border-t border-gray-200 dark:border-gray-700 pt-4 mt-4">
          <%= link_to "#", class: "text-sm text-indigo-600 dark:text-indigo-400 hover:text-indigo-800 dark:hover:text-indigo-300 transition" do %>
            <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M12 2.25a9.75 9.75 0 100 19.5 9.75 9.75 0 000-19.5z"/>
            </svg>
            Get Support
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>