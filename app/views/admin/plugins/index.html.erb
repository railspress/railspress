<% content_for :page_title, "Plugins" %>

<div class="max-w-7xl mx-auto">
  <div class="flex items-center justify-between mb-6">
    <div>
      <h1 class="text-2xl font-bold text-white mb-2">Installed Plugins</h1>
      <p class="text-gray-400">Manage and configure your installed plugins</p>
    </div>
    <div class="flex items-center space-x-3">
      <%= link_to browse_admin_plugins_path, class: "flex items-center space-x-2 px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg transition" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
        </svg>
        <span>Browse Marketplace</span>
      <% end %>
      <%= link_to new_admin_plugin_path, class: "flex items-center space-x-2 px-4 py-2 border border-[#2a2a2a] hover:border-[#3a3a3a] text-gray-300 hover:text-white rounded-lg transition" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        <span>Upload Plugin</span>
      <% end %>
    </div>
  </div>

  <% if @installed_plugins.any? %>
    <!-- Active Plugins -->
    <% active_plugins = @installed_plugins.select(&:active?) %>
    <% if active_plugins.any? %>
      <div class="mb-8">
        <h2 class="text-lg font-semibold text-white mb-4">Active Plugins (<%= active_plugins.count %>)</h2>
        <div class="space-y-4">
          <% active_plugins.each do |plugin| %>
            <div class="bg-[#111111] border-l-4 border-emerald-500 rounded-r-xl overflow-hidden group">
              <div class="p-6">
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <div class="flex items-center space-x-3 mb-2">
                      <h3 class="text-lg font-bold text-white"><%= plugin.name %></h3>
                      <span class="px-2 py-1 bg-emerald-500/10 text-emerald-400 rounded-md text-xs font-semibold">
                        Active
                      </span>
                    </div>
                    <p class="text-gray-300 mb-3"><%= plugin.description %></p>
                    <div class="flex items-center space-x-4 text-sm text-gray-500">
                      <span>Version <%= plugin.version %></span>
                      <span>•</span>
                      <span>By <%= plugin.author %></span>
                    </div>
                  </div>
                  
                  <div class="flex items-center space-x-2 ml-4">
                    <% plugin_instance = Railspress::PluginSystem.get_plugin(plugin.name.underscore) %>
                    <% if plugin_instance&.has_admin_pages? %>
                      <% plugin_instance.admin_pages.each do |page| %>
                        <%= link_to page[:menu_title] || page[:title], 
                            admin_plugin_page_path(plugin_identifier: plugin.name.underscore, page_slug: page[:slug]),
                            class: "px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition text-sm" %>
                      <% end %>
                    <% elsif plugin.settings.present? %>
                      <%= link_to "Settings", settings_admin_plugin_path(plugin), class: "px-4 py-2 bg-gray-600 hover:bg-gray-700 text-white rounded-lg transition text-sm" %>
                    <% end %>
                    <%= button_to "Deactivate", deactivate_admin_plugin_path(plugin), 
                        method: :patch,
                        class: "px-4 py-2 bg-gray-600 hover:bg-gray-700 text-white rounded-lg transition text-sm cursor-pointer" %>
                    <%= link_to admin_plugin_path(plugin), 
                        data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete #{plugin.name}?" },
                        class: "px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg transition text-sm" do %>
                      Delete
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Inactive Plugins -->
    <% inactive_plugins = @installed_plugins.reject(&:active?) %>
    <% if inactive_plugins.any? %>
      <div>
        <h2 class="text-lg font-semibold text-white mb-4">Inactive Plugins (<%= inactive_plugins.count %>)</h2>
        <div class="space-y-4">
          <% inactive_plugins.each do |plugin| %>
            <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl hover:border-[#3a3a3a] transition overflow-hidden">
              <div class="p-6">
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <h3 class="text-lg font-bold text-white mb-2"><%= plugin.name %></h3>
                    <p class="text-gray-400 mb-3"><%= plugin.description %></p>
                    <div class="flex items-center space-x-4 text-sm text-gray-500">
                      <span>Version <%= plugin.version %></span>
                      <span>•</span>
                      <span>By <%= plugin.author %></span>
                    </div>
                  </div>
                  
                  <div class="flex items-center space-x-2 ml-4">
                    <%= button_to "Activate", activate_admin_plugin_path(plugin), 
                        method: :patch,
                        class: "px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg transition text-sm cursor-pointer" %>
                    <%= link_to admin_plugin_path(plugin), 
                        data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete #{plugin.name}?" },
                        class: "px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg transition text-sm" do %>
                      Delete
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

  <% else %>
    <div class="bg-[#111111] border border-[#2a2a2a] rounded-xl p-12 text-center">
      <svg class="w-16 h-16 text-gray-600 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10l-2 1m0 0l-2-1m2 1v2.5M20 7l-2 1m2-1l-2-1m2 1v2.5M14 4l-2-1-2 1M4 7l2-1M4 7l2 1M4 7v2.5M12 21l-2-1m2 1l2-1m-2 1v-2.5M6 18l-2-1v-2.5M18 18l2-1v-2.5"/>
      </svg>
      <h3 class="text-lg font-semibold text-white mb-2">No Plugins Installed</h3>
      <p class="text-gray-400 mb-6">Get started by browsing our plugin marketplace</p>
      <%= link_to "Browse Plugins", browse_admin_plugins_path, class: "inline-flex items-center space-x-2 px-6 py-3 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg transition" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
        </svg>
        <span>Discover Plugins</span>
      <% end %>
    </div>
  <% end %>

  <!-- Plugin Development Info -->
  <div class="mt-8 bg-gradient-to-r from-indigo-500/10 to-purple-500/10 border border-indigo-500/20 rounded-xl p-6">
    <div class="flex items-start space-x-4">
      <div class="bg-indigo-500/20 p-3 rounded-lg">
        <svg class="w-6 h-6 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>
      <div class="flex-1">
        <h3 class="text-white font-semibold mb-2">Developing Plugins</h3>
        <p class="text-gray-400 text-sm mb-3">
          Create custom plugins for RailsPress. Plugins are located in <code class="px-2 py-1 bg-[#0a0a0a] rounded text-indigo-400">lib/plugins/</code>
        </p>
        <div class="flex items-center space-x-4">
          <%= link_to "View Documentation", "#", class: "text-indigo-400 hover:text-indigo-300 text-sm font-medium" %>
          <span class="text-gray-600">•</span>
          <%= link_to "Plugin Development Guide", "#", class: "text-indigo-400 hover:text-indigo-300 text-sm font-medium" %>
        </div>
      </div>
    </div>
  </div>
</div>
