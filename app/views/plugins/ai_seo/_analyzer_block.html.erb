<div class="bg-[#1a1a1a] border border-[#2a2a2a] rounded-lg p-4 mb-4" data-controller="ai-seo-analyzer">
  <div class="flex items-start gap-3 mb-3">
    <%= block[:icon].html_safe %>
    <div class="flex-1">
      <h3 class="text-sm font-semibold text-white"><%= block[:label] %></h3>
      <p class="text-xs text-gray-400 mt-1"><%= block[:description] %></p>
    </div>
    <button type="button" 
            class="text-gray-400 hover:text-white transition"
            data-action="click->ai-seo-analyzer#toggle">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
      </svg>
    </button>
  </div>
  
  <div class="space-y-3" data-ai-seo-analyzer-target="content">
    <!-- SEO Score -->
    <div class="flex items-center justify-between p-3 bg-[#0f0f0f] rounded">
      <span class="text-sm text-gray-300">SEO Score</span>
      <div class="flex items-center gap-2">
        <div class="w-16 h-2 bg-[#2a2a2a] rounded-full overflow-hidden">
          <div class="h-full bg-gradient-to-r from-green-500 to-emerald-500" style="width: 75%"></div>
        </div>
        <span class="text-sm font-semibold text-green-500">75/100</span>
      </div>
    </div>
    
    <!-- Meta Analysis -->
    <div class="space-y-2">
      <div class="flex items-start gap-2 text-xs">
        <svg class="w-4 h-4 text-green-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
        <span class="text-gray-400">Title length is optimal (58 chars)</span>
      </div>
      
      <div class="flex items-start gap-2 text-xs">
        <svg class="w-4 h-4 text-yellow-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
        </svg>
        <span class="text-gray-400">Meta description could be longer (145 chars)</span>
      </div>
      
      <div class="flex items-start gap-2 text-xs">
        <svg class="w-4 h-4 text-red-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
        </svg>
        <span class="text-gray-400">Focus keyphrase missing</span>
      </div>
    </div>
    
    <!-- Generate Button -->
    <button type="button"
            class="w-full px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium rounded-lg transition flex items-center justify-center gap-2"
            data-action="click->ai-seo-analyzer#generate">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
      </svg>
      <span>Generate with AI</span>
    </button>
    
    <!-- Suggestions -->
    <div class="mt-3 pt-3 border-t border-[#2a2a2a]">
      <h4 class="text-xs font-semibold text-gray-300 mb-2">AI Suggestions</h4>
      <ul class="space-y-1.5 text-xs text-gray-400">
        <li>• Add more relevant keywords to content</li>
        <li>• Include focus keyphrase in first paragraph</li>
        <li>• Add alt text to images</li>
        <li>• Improve internal linking</li>
      </ul>
    </div>
  </div>
</div>




