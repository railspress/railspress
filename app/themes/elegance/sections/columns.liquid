<section class="columns section" data-section-type="columns" data-section-id="{{ section.id }}">
  <div class="container">
    <div class="columns-content">
      
      {% if section.settings.heading %}
        <div class="columns-header" style="text-align: {{ section.settings.text_alignment | default: 'center' }}; margin-bottom: {{ section.settings.header_margin_bottom | default: 3 }}rem;">
          <h2 class="columns-heading">{{ section.settings.heading }}</h2>
          {% if section.settings.subheading %}
            <p class="columns-subheading">{{ section.settings.subheading }}</p>
          {% endif %}
        </div>
      {% endif %}

      <div class="columns-wrapper {{ section.settings.layout }} {{ section.settings.style }}">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'column' %}
              <div class="column" {{ block.shopify_attributes }}>
                <div class="column-content">
                  
                  {% if block.settings.show_icon and block.settings.icon %}
                    <div class="column-icon">
                      <span class="icon-text">{{ block.settings.icon }}</span>
                    </div>
                  {% endif %}

                  {% if block.settings.image %}
                    <div class="column-image">
                      <img src="{{ block.settings.image }}" alt="{{ block.settings.image_alt }}" loading="lazy">
                    </div>
                  {% endif %}

                  {% if block.settings.title %}
                    <h3 class="column-title">{{ block.settings.title }}</h3>
                  {% endif %}

                  {% if block.settings.content %}
                    <div class="column-description">
                      {{ block.settings.content }}
                    </div>
                  {% endif %}

                  {% if block.settings.show_button and block.settings.button_text %}
                    <div class="column-button">
                      <a href="{{ block.settings.button_url | default: '#' }}" class="btn {{ block.settings.button_style }}">
                        {{ block.settings.button_text }}
                        {% if block.settings.button_icon %}
                          <span class="btn-icon">{{ block.settings.button_icon }}</span>
                        {% endif %}
                      </a>
                    </div>
                  {% endif %}

                </div>
              </div>
          {% endcase %}
        {% endfor %}
      </div>

    </div>
  </div>
</section>

<style>
  .columns {
    background-color: {{ section.settings.background_color | default: 'var(--color-background)' }};
  }
  
  .columns-header {
    max-width: 800px;
    margin: 0 auto;
  }
  
  .columns-heading {
    color: {{ section.settings.heading_color | default: 'var(--h2-color)' }};
    font-size: {{ section.settings.heading_size | default: 36 }}px;
    font-weight: {{ section.settings.heading_weight | default: 700 }};
    margin-bottom: 1rem;
    line-height: 1.2;
  }
  
  .columns-subheading {
    color: {{ section.settings.subheading_color | default: 'var(--p-color)' }};
    font-size: {{ section.settings.subheading_size | default: 18 }}px;
    line-height: 1.6;
  }
  
  .columns-wrapper {
    display: grid;
    gap: {{ section.settings.column_gap | default: 2 }}rem;
    align-items: {{ section.settings.column_alignment | default: 'start' }};
  }
  
  /* Layout Variations */
  .columns-wrapper.two-columns {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .columns-wrapper.three-columns {
    grid-template-columns: repeat(3, 1fr);
  }
  
  .columns-wrapper.four-columns {
    grid-template-columns: repeat(4, 1fr);
  }
  
  .columns-wrapper.auto-fit {
    grid-template-columns: repeat(auto-fit, minmax({{ section.settings.min_column_width | default: 300 }}px, 1fr));
  }
  
  .columns-wrapper.masonry {
    column-count: {{ section.settings.column_count | default: 3 }};
    column-gap: {{ section.settings.column_gap | default: 2 }}rem;
  }
  
  .columns-wrapper.masonry .column {
    break-inside: avoid;
    margin-bottom: {{ section.settings.column_gap | default: 2 }}rem;
  }
  
  .column {
    background-color: {{ section.settings.column_bg_color | default: 'transparent' }};
    border-radius: {{ section.settings.column_border_radius | default: 0 }}px;
    {% if section.settings.column_border %}
      border: 1px solid {{ section.settings.column_border_color | default: 'var(--color-border)' }};
    {% endif %}
    {% if section.settings.column_shadow %}
      box-shadow: var(--shadow-md);
    {% endif %}
    overflow: hidden;
    transition: all 0.3s ease;
  }
  
  .column:hover {
    {% if section.settings.column_hover_effect %}
      transform: translateY(-4px);
      box-shadow: var(--shadow-lg);
    {% endif %}
  }
  
  .column-content {
    padding: {{ section.settings.column_padding | default: 2 }}rem;
    text-align: {{ section.settings.column_text_alignment | default: 'center' }};
  }
  
  .column-icon {
    margin-bottom: 1.5rem;
  }
  
  .icon-text {
    font-size: {{ section.settings.icon_size | default: 48 }}px;
    color: {{ section.settings.icon_color | default: 'var(--color-primary)' }};
    display: inline-block;
  }
  
  .column-image {
    margin-bottom: 1.5rem;
    border-radius: {{ section.settings.image_border_radius | default: 8 }}px;
    overflow: hidden;
  }
  
  .column-image img {
    width: 100%;
    height: {{ section.settings.image_height | default: 200 }}px;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .column:hover .column-image img {
    {% if section.settings.image_hover_zoom %}
      transform: scale(1.05);
    {% endif %}
  }
  
  .column-title {
    color: {{ section.settings.title_color | default: 'var(--h3-color)' }};
    font-size: {{ section.settings.title_size | default: 20 }}px;
    font-weight: {{ section.settings.title_weight | default: 600 }};
    margin-bottom: 1rem;
    line-height: 1.3;
  }
  
  .column-description {
    color: {{ section.settings.description_color | default: 'var(--p-color)' }};
    font-size: {{ section.settings.description_size | default: 16 }}px;
    line-height: {{ section.settings.description_line_height | default: 1.6 }};
    margin-bottom: 1.5rem;
  }
  
  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: {{ section.settings.button_padding_vertical | default: 10 }}px {{ section.settings.button_padding_horizontal | default: 20 }}px;
    border-radius: {{ section.settings.button_border_radius | default: 6 }}px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s ease;
    border: 2px solid transparent;
    font-size: {{ section.settings.button_size | default: 14 }}px;
  }
  
  .btn.primary {
    background-color: {{ section.settings.button_bg_color | default: 'var(--color-primary)' }};
    color: {{ section.settings.button_text_color | default: 'white' }};
    border-color: {{ section.settings.button_bg_color | default: 'var(--color-primary)' }};
  }
  
  .btn.primary:hover {
    background-color: {{ section.settings.button_hover_bg_color | default: 'var(--color-primary-dark)' }};
    border-color: {{ section.settings.button_hover_bg_color | default: 'var(--color-primary-dark)' }};
    transform: translateY(-2px);
  }
  
  .btn.secondary {
    background-color: transparent;
    color: {{ section.settings.button_bg_color | default: 'var(--color-primary)' }};
    border-color: {{ section.settings.button_bg_color | default: 'var(--color-primary)' }};
  }
  
  .btn.secondary:hover {
    background-color: {{ section.settings.button_bg_color | default: 'var(--color-primary)' }};
    color: white;
    transform: translateY(-2px);
  }
  
  .btn.outline {
    background-color: transparent;
    color: {{ section.settings.button_text_color | default: 'var(--color-text)' }};
    border-color: {{ section.settings.button_border_color | default: 'var(--color-border)' }};
  }
  
  .btn.outline:hover {
    background-color: {{ section.settings.button_hover_bg_color | default: 'var(--color-surface)' }};
    border-color: {{ section.settings.button_bg_color | default: 'var(--color-primary)' }};
    color: {{ section.settings.button_bg_color | default: 'var(--color-primary)' }};
  }
  
  .btn-icon {
    font-size: 1rem;
  }
  
  /* Style Variations */
  .columns-wrapper.card .column {
    background-color: {{ section.settings.column_bg_color | default: 'white' }};
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
    border: none;
  }
  
  .columns-wrapper.bordered .column {
    border: 2px solid {{ section.settings.column_border_color | default: 'var(--color-border)' }};
    border-radius: var(--radius-lg);
  }
  
  .columns-wrapper.minimal .column {
    background-color: transparent;
    border: none;
    box-shadow: none;
    border-radius: 0;
  }
  
  .columns-wrapper.minimal .column-content {
    padding: 1rem 0;
  }
  
  /* Responsive */
  @media (max-width: 1024px) {
    .columns-wrapper.four-columns {
      grid-template-columns: repeat(2, 1fr);
    }
    
    .columns-wrapper.masonry {
      column-count: 2;
    }
  }
  
  @media (max-width: 768px) {
    .columns-wrapper.two-columns,
    .columns-wrapper.three-columns,
    .columns-wrapper.four-columns {
      grid-template-columns: 1fr;
    }
    
    .columns-wrapper.masonry {
      column-count: 1;
    }
    
    .columns-heading {
      font-size: 28px;
    }
    
    .columns-subheading {
      font-size: 16px;
    }
    
    .column-content {
      padding: 1.5rem;
    }
    
    .icon-text {
      font-size: 36px;
    }
  }
</style>

