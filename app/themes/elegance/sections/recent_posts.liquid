<section class="recent-posts section" data-section-type="recent_posts" data-section-id="{{ section.id }}">
  <div class="container">
    <div class="recent-posts-content">
      
      {% if section.settings.heading %}
        <div class="posts-header" style="text-align: {{ section.settings.text_alignment | default: 'center' }}; margin-bottom: {{ section.settings.header_margin_bottom | default: 3 }}rem;">
          <h2 class="posts-heading">{{ section.settings.heading }}</h2>
          {% if section.settings.subheading %}
            <p class="posts-subheading">{{ section.settings.subheading }}</p>
          {% endif %}
        </div>
      {% endif %}

      <div class="posts-grid {{ section.settings.layout }} {{ section.settings.card_style }}">
        {% for post in site.posts limit: section.settings.post_count %}
          <article class="post-card">
            
            {% if post.featured_image and section.settings.show_images %}
              <div class="post-image">
                <a href="{{ post.url }}">
                  <img src="{{ post.featured_image }}" alt="{{ post.title | escape }}" loading="lazy">
                  {% if section.settings.show_date_overlay and post.published_at %}
                    <div class="post-date-overlay">
                      <span class="date-day">{{ post.published_at | date: '%d' }}</span>
                      <span class="date-month">{{ post.published_at | date: '%b' }}</span>
                    </div>
                  {% endif %}
                </a>
              </div>
            {% endif %}

            <div class="post-content">
              
              {% if section.settings.show_categories and post.categories.size > 0 %}
                <div class="post-categories">
                  {% for category in post.categories limit: 2 %}
                    <span class="category-tag">{{ category.name }}</span>
                  {% endfor %}
                </div>
              {% endif %}

              <h3 class="post-title">
                <a href="{{ post.url }}">{{ post.title }}</a>
              </h3>

              {% if section.settings.show_excerpt and post.excerpt %}
                <div class="post-excerpt">
                  {{ post.excerpt | truncate: section.settings.excerpt_length | strip_html }}
                </div>
              {% endif %}

              <div class="post-meta">
                {% if section.settings.show_author and post.author %}
                  <span class="post-author">
                    {% if section.settings.show_author_avatar and post.author.avatar %}
                      <img src="{{ post.author.avatar }}" alt="{{ post.author.name }}" class="author-avatar">
                    {% endif %}
                    <span class="author-name">{{ post.author.name }}</span>
                  </span>
                {% endif %}

                {% if section.settings.show_date and post.published_at %}
                  <span class="post-date">
                    {{ post.published_at | date: section.settings.date_format }}
                  </span>
                {% endif %}

                {% if section.settings.show_read_time and post.read_time %}
                  <span class="post-read-time">
                    {{ post.read_time }} min read
                  </span>
                {% endif %}
              </div>

              {% if section.settings.show_tags and post.tags.size > 0 %}
                <div class="post-tags">
                  {% for tag in post.tags limit: 3 %}
                    <span class="tag">{{ tag.name }}</span>
                  {% endfor %}
                </div>
              {% endif %}

              {% if section.settings.show_read_more %}
                <div class="post-actions">
                  <a href="{{ post.url }}" class="read-more-btn {{ section.settings.button_style }}">
                    {{ section.settings.read_more_text | default: 'Read More' }}
                    {% if section.settings.button_icon %}
                      <span class="btn-icon">{{ section.settings.button_icon }}</span>
                    {% endif %}
                  </a>
                </div>
              {% endif %}

            </div>
          </article>
        {% endfor %}
      </div>

      {% if section.settings.show_view_all and section.settings.view_all_url %}
        <div class="posts-footer" style="text-align: {{ section.settings.text_alignment | default: 'center' }}; margin-top: {{ section.settings.footer_margin_top | default: 3 }}rem;">
          <a href="{{ section.settings.view_all_url }}" class="view-all-btn {{ section.settings.view_all_style }}">
            {{ section.settings.view_all_text | default: 'View All Posts' }}
            {% if section.settings.view_all_icon %}
              <span class="btn-icon">{{ section.settings.view_all_icon }}</span>
            {% endif %}
          </a>
        </div>
      {% endif %}

    </div>
  </div>
</section>

<style>
  .recent-posts {
    background-color: {{ section.settings.background_color | default: 'var(--color-background)' }};
  }
  
  .posts-header {
    max-width: 800px;
    margin: 0 auto;
  }
  
  .posts-heading {
    color: {{ section.settings.heading_color | default: 'var(--h2-color)' }};
    font-size: {{ section.settings.heading_size | default: 36 }}px;
    font-weight: {{ section.settings.heading_weight | default: 700 }};
    margin-bottom: 1rem;
    line-height: 1.2;
  }
  
  .posts-subheading {
    color: {{ section.settings.subheading_color | default: 'var(--p-color)' }};
    font-size: {{ section.settings.subheading_size | default: 18 }}px;
    line-height: 1.6;
  }
  
  .posts-grid {
    display: grid;
    gap: {{ section.settings.card_gap | default: 2 }}rem;
  }
  
  /* Layout Variations */
  .posts-grid.grid {
    grid-template-columns: repeat(auto-fit, minmax({{ section.settings.min_card_width | default: 300 }}px, 1fr));
  }
  
  .posts-grid.list {
    grid-template-columns: 1fr;
  }
  
  .posts-grid.masonry {
    column-count: {{ section.settings.masonry_columns | default: 3 }};
    column-gap: {{ section.settings.card_gap | default: 2 }}rem;
  }
  
  .posts-grid.masonry .post-card {
    break-inside: avoid;
    margin-bottom: {{ section.settings.card_gap | default: 2 }}rem;
  }
  
  .post-card {
    background-color: {{ section.settings.card_bg_color | default: 'white' }};
    border-radius: {{ section.settings.card_border_radius | default: 12 }}px;
    overflow: hidden;
    transition: all 0.3s ease;
    {% if section.settings.card_shadow %}
      box-shadow: var(--shadow-md);
    {% endif %}
    {% if section.settings.card_border %}
      border: 1px solid {{ section.settings.card_border_color | default: 'var(--color-border)' }};
    {% endif %}
  }
  
  .post-card:hover {
    {% if section.settings.card_hover_effect %}
      transform: translateY(-4px);
      box-shadow: var(--shadow-lg);
    {% endif %}
  }
  
  .post-image {
    position: relative;
    overflow: hidden;
  }
  
  .post-image img {
    width: 100%;
    height: {{ section.settings.image_height | default: 200 }}px;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .post-card:hover .post-image img {
    {% if section.settings.image_hover_zoom %}
      transform: scale(1.05);
    {% endif %}
  }
  
  .post-date-overlay {
    position: absolute;
    top: {{ section.settings.date_overlay_position | default: 12 }}px;
    {% if section.settings.date_overlay_position == '12' %}
      left: 12px;
    {% else %}
      right: 12px;
    {% endif %}
    background-color: {{ section.settings.date_overlay_bg_color | default: 'var(--color-primary)' }};
    color: {{ section.settings.date_overlay_text_color | default: 'white' }};
    padding: 8px;
    border-radius: var(--radius-md);
    text-align: center;
    font-size: 12px;
    font-weight: 600;
  }
  
  .date-day {
    display: block;
    font-size: 16px;
    line-height: 1;
  }
  
  .date-month {
    display: block;
    font-size: 10px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  .post-content {
    padding: {{ section.settings.card_padding | default: 1.5 }}rem;
  }
  
  .post-categories {
    margin-bottom: 1rem;
  }
  
  .category-tag {
    display: inline-block;
    background-color: {{ section.settings.category_bg_color | default: 'var(--color-surface)' }};
    color: {{ section.settings.category_text_color | default: 'var(--color-primary)' }};
    padding: 4px 8px;
    border-radius: var(--radius-sm);
    font-size: 12px;
    font-weight: 500;
    margin-right: 8px;
    margin-bottom: 4px;
  }
  
  .post-title {
    margin-bottom: 1rem;
  }
  
  .post-title a {
    color: {{ section.settings.title_color | default: 'var(--h3-color)' }};
    font-size: {{ section.settings.title_size | default: 20 }}px;
    font-weight: {{ section.settings.title_weight | default: 600 }};
    text-decoration: none;
    line-height: 1.3;
    transition: color 0.2s ease;
  }
  
  .post-title a:hover {
    color: {{ section.settings.title_hover_color | default: 'var(--color-primary)' }};
  }
  
  .post-excerpt {
    color: {{ section.settings.excerpt_color | default: 'var(--p-color)' }};
    font-size: {{ section.settings.excerpt_size | default: 14 }}px;
    line-height: {{ section.settings.excerpt_line_height | default: 1.6 }};
    margin-bottom: 1rem;
  }
  
  .post-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
    font-size: {{ section.settings.meta_size | default: 12 }}px;
    color: {{ section.settings.meta_color | default: 'var(--text-light-color)' }};
  }
  
  .post-author {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .author-avatar {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    object-fit: cover;
  }
  
  .author-name {
    font-weight: 500;
  }
  
  .post-date,
  .post-read-time {
    font-weight: 400;
  }
  
  .post-tags {
    margin-bottom: 1rem;
  }
  
  .tag {
    display: inline-block;
    background-color: {{ section.settings.tag_bg_color | default: 'transparent' }};
    color: {{ section.settings.tag_text_color | default: 'var(--text-light-color)' }};
    padding: 2px 6px;
    border-radius: var(--radius-sm);
    font-size: 11px;
    margin-right: 6px;
    margin-bottom: 4px;
    {% if section.settings.tag_border %}
      border: 1px solid {{ section.settings.tag_border_color | default: 'var(--color-border)' }};
    {% endif %}
  }
  
  .post-actions {
    margin-top: auto;
  }
  
  .read-more-btn,
  .view-all-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: {{ section.settings.button_padding_vertical | default: 8 }}px {{ section.settings.button_padding_horizontal | default: 16 }}px;
    border-radius: var(--radius-md);
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s ease;
    border: 2px solid transparent;
    font-size: {{ section.settings.button_size | default: 14 }}px;
  }
  
  .read-more-btn.primary,
  .view-all-btn.primary {
    background-color: {{ section.settings.button_bg_color | default: 'var(--color-primary)' }};
    color: {{ section.settings.button_text_color | default: 'white' }};
    border-color: {{ section.settings.button_bg_color | default: 'var(--color-primary)' }};
  }
  
  .read-more-btn.primary:hover,
  .view-all-btn.primary:hover {
    background-color: {{ section.settings.button_hover_bg_color | default: 'var(--color-primary-dark)' }};
    border-color: {{ section.settings.button_hover_bg_color | default: 'var(--color-primary-dark)' }};
    transform: translateY(-2px);
  }
  
  .read-more-btn.secondary,
  .view-all-btn.secondary {
    background-color: transparent;
    color: {{ section.settings.button_bg_color | default: 'var(--color-primary)' }};
    border-color: {{ section.settings.button_bg_color | default: 'var(--color-primary)' }};
  }
  
  .read-more-btn.secondary:hover,
  .view-all-btn.secondary:hover {
    background-color: {{ section.settings.button_bg_color | default: 'var(--color-primary)' }};
    color: white;
    transform: translateY(-2px);
  }
  
  .read-more-btn.outline,
  .view-all-btn.outline {
    background-color: transparent;
    color: {{ section.settings.button_text_color | default: 'var(--color-text)' }};
    border-color: {{ section.settings.button_border_color | default: 'var(--color-border)' }};
  }
  
  .read-more-btn.outline:hover,
  .view-all-btn.outline:hover {
    background-color: {{ section.settings.button_hover_bg_color | default: 'var(--color-surface)' }};
    border-color: {{ section.settings.button_bg_color | default: 'var(--color-primary)' }};
    color: {{ section.settings.button_bg_color | default: 'var(--color-primary)' }};
  }
  
  .btn-icon {
    font-size: 1rem;
  }
  
  /* Style Variations */
  .posts-grid.card .post-card {
    background-color: {{ section.settings.card_bg_color | default: 'white' }};
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
    border: none;
  }
  
  .posts-grid.minimal .post-card {
    background-color: transparent;
    border: none;
    box-shadow: none;
    border-radius: 0;
    border-bottom: 1px solid {{ section.settings.card_border_color | default: 'var(--color-border)' }};
    padding-bottom: 2rem;
    margin-bottom: 2rem;
  }
  
  .posts-grid.minimal .post-card:last-child {
    border-bottom: none;
    margin-bottom: 0;
  }
  
  /* Responsive */
  @media (max-width: 1024px) {
    .posts-grid.masonry {
      column-count: 2;
    }
  }
  
  @media (max-width: 768px) {
    .posts-grid.masonry {
      column-count: 1;
    }
    
    .posts-heading {
      font-size: 28px;
    }
    
    .posts-subheading {
      font-size: 16px;
    }
    
    .post-content {
      padding: 1rem;
    }
    
    .post-meta {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
  }
</style>

