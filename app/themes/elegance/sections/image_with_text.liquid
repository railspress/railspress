<section class="image-with-text section" data-section-type="image_with_text" data-section-id="{{ section.id }}">
  <div class="container">
    <div class="image-with-text-wrapper">
      <div class="image-with-text-content {{ section.settings.layout }} {{ section.settings.image_position }}">
        {% if section.settings.image %}
          <div class="image-column">
            <div class="image-wrapper">
              <img 
                src="{{ section.settings.image }}" 
                alt="{{ section.settings.image_alt | default: section.settings.heading }}"
                class="section-image"
                loading="lazy"
              >
              {% if section.settings.show_image_overlay %}
                <div class="image-overlay">
                  <div class="overlay-content">
                    {% if section.settings.overlay_text %}
                      <p class="overlay-text">{{ section.settings.overlay_text }}</p>
                    {% endif %}
                  </div>
                </div>
              {% endif %}
            </div>
          </div>
        {% endif %}

        <div class="text-column">
          <div class="text-content">
            {% if section.settings.heading %}
              <h2 class="section-heading">{{ section.settings.heading }}</h2>
            {% endif %}

            {% if section.settings.subheading %}
              <h3 class="section-subheading">{{ section.settings.subheading }}</h3>
            {% endif %}

            {% if section.settings.description %}
              <div class="section-description">
                {{ section.settings.description }}
              </div>
            {% endif %}

            {% if section.settings.show_features and section.settings.features %}
              <div class="features-list">
                {% assign features_array = section.settings.features | split: ',' %}
                {% for feature in features_array %}
                  <div class="feature-item">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <polyline points="20,6 9,17 4,12"></polyline>
                    </svg>
                    <span>{{ feature | strip }}</span>
                  </div>
                {% endfor %}
              </div>
            {% endif %}

            {% if section.settings.show_buttons %}
              <div class="buttons-wrapper">
                {% if section.settings.primary_button_text and section.settings.primary_button_url %}
                  <a href="{{ section.settings.primary_button_url }}" class="btn btn-primary">
                    {{ section.settings.primary_button_text }}
                    {% if section.settings.primary_button_icon %}
                      <span class="btn-icon">{{ section.settings.primary_button_icon }}</span>
                    {% endif %}
                  </a>
                {% endif %}

                {% if section.settings.secondary_button_text and section.settings.secondary_button_url %}
                  <a href="{{ section.settings.secondary_button_url }}" class="btn btn-secondary">
                    {{ section.settings.secondary_button_text }}
                    {% if section.settings.secondary_button_icon %}
                      <span class="btn-icon">{{ section.settings.secondary_button_icon }}</span>
                    {% endif %}
                  </a>
                {% endif %}
              </div>
            {% endif %}

            {% if section.settings.show_stats and section.settings.stats %}
              <div class="stats-grid">
                {% assign stats_array = section.settings.stats | split: '|' %}
                {% for stat in stats_array %}
                  {% assign stat_parts = stat | split: ',' %}
                  {% if stat_parts.size >= 2 %}
                    <div class="stat-item">
                      <div class="stat-number">{{ stat_parts[0] | strip }}</div>
                      <div class="stat-label">{{ stat_parts[1] | strip }}</div>
                    </div>
                  {% endif %}
                {% endfor %}
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .image-with-text {
    background-color: {{ section.settings.background_color | default: 'var(--color-background)' }};
  }
  
  .image-with-text-content {
    display: grid;
    gap: {{ section.settings.gap | default: 3 }}rem;
    align-items: center;
  }
  
  /* Layout: Side by Side */
  .image-with-text-content.side-by-side {
    grid-template-columns: 1fr 1fr;
  }
  
  .image-with-text-content.side-by-side.image-left .image-column {
    order: 1;
  }
  
  .image-with-text-content.side-by-side.image-right .image-column {
    order: 2;
  }
  
  /* Layout: Stacked */
  .image-with-text-content.stacked {
    grid-template-columns: 1fr;
  }
  
  .image-with-text-content.stacked.image-top .image-column {
    order: 1;
  }
  
  .image-with-text-content.stacked.image-bottom .image-column {
    order: 2;
  }
  
  /* Layout: Overlay */
  .image-with-text-content.overlay {
    position: relative;
    grid-template-columns: 1fr;
    min-height: {{ section.settings.overlay_height | default: 400 }}px;
  }
  
  .image-with-text-content.overlay .image-column {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1;
  }
  
  .image-with-text-content.overlay .text-column {
    position: relative;
    z-index: 2;
    display: flex;
    align-items: center;
    justify-content: {{ section.settings.overlay_alignment | default: 'center' }};
    text-align: {{ section.settings.overlay_text_align | default: 'center' }};
  }
  
  .image-wrapper {
    position: relative;
    border-radius: {{ section.settings.image_border_radius | default: 12 }}px;
    overflow: hidden;
    {% if section.settings.image_shadow %}
      box-shadow: var(--shadow-lg);
    {% endif %}
  }
  
  .section-image {
    width: 100%;
    height: auto;
    display: block;
    {% if section.settings.image_aspect_ratio %}
      aspect-ratio: {{ section.settings.image_aspect_ratio }};
      object-fit: cover;
    {% endif %}
  }
  
  .image-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      to bottom,
      transparent 0%,
      {{ section.settings.overlay_color | default: 'rgba(0,0,0,0.5)' }} 100%
    );
    display: flex;
    align-items: flex-end;
    padding: 2rem;
  }
  
  .overlay-text {
    color: white;
    font-size: 1.125rem;
    font-weight: 500;
    margin: 0;
  }
  
  .text-content {
    padding: {{ section.settings.text_padding | default: 2 }}rem;
  }
  
  .section-heading {
    color: {{ section.settings.heading_color | default: 'var(--h2-color)' }};
    font-size: {{ section.settings.heading_size | default: 36 }}px;
    font-weight: {{ section.settings.heading_weight | default: 600 }};
    margin-bottom: 1rem;
    line-height: 1.2;
  }
  
  .section-subheading {
    color: {{ section.settings.subheading_color | default: 'var(--color-primary)' }};
    font-size: {{ section.settings.subheading_size | default: 20 }}px;
    font-weight: 500;
    margin-bottom: 1rem;
  }
  
  .section-description {
    color: {{ section.settings.description_color | default: 'var(--p-color)' }};
    font-size: {{ section.settings.description_size | default: 16 }}px;
    line-height: {{ section.settings.description_line_height | default: 1.6 }};
    margin-bottom: 2rem;
  }
  
  .features-list {
    margin-bottom: 2rem;
  }
  
  .feature-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
    color: {{ section.settings.feature_color | default: 'var(--color-text)' }};
  }
  
  .feature-item svg {
    color: {{ section.settings.feature_icon_color | default: 'var(--color-primary)' }};
    flex-shrink: 0;
  }
  
  .buttons-wrapper {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin-bottom: 2rem;
  }
  
  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: {{ section.settings.button_padding_vertical | default: 12 }}px {{ section.settings.button_padding_horizontal | default: 24 }}px;
    border-radius: var(--radius-lg);
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s ease;
    border: 2px solid transparent;
  }
  
  .btn-primary {
    background-color: {{ section.settings.primary_button_bg | default: 'var(--color-primary)' }};
    color: {{ section.settings.primary_button_text_color | default: 'white' }};
    border-color: {{ section.settings.primary_button_bg | default: 'var(--color-primary)' }};
  }
  
  .btn-primary:hover {
    background-color: {{ section.settings.primary_button_hover_bg | default: 'var(--color-primary-dark)' }};
    border-color: {{ section.settings.primary_button_hover_bg | default: 'var(--color-primary-dark)' }};
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }
  
  .btn-secondary {
    background-color: transparent;
    color: {{ section.settings.secondary_button_text_color | default: 'var(--color-primary)' }};
    border-color: {{ section.settings.secondary_button_text_color | default: 'var(--color-primary)' }};
  }
  
  .btn-secondary:hover {
    background-color: {{ section.settings.secondary_button_text_color | default: 'var(--color-primary)' }};
    color: white;
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }
  
  .btn-icon {
    font-size: 1.25rem;
  }
  
  .stats-grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.stats_columns | default: 3 }}, 1fr);
    gap: 2rem;
  }
  
  .stat-item {
    text-align: center;
  }
  
  .stat-number {
    font-size: {{ section.settings.stat_number_size | default: 32 }}px;
    font-weight: {{ section.settings.stat_number_weight | default: 700 }};
    color: {{ section.settings.stat_number_color | default: 'var(--color-primary)' }};
    margin-bottom: 0.5rem;
  }
  
  .stat-label {
    font-size: {{ section.settings.stat_label_size | default: 14 }}px;
    color: {{ section.settings.stat_label_color | default: 'var(--color-text-light)' }};
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .image-with-text-content.side-by-side {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .image-with-text-content.overlay {
      min-height: 300px;
    }
    
    .section-heading {
      font-size: 28px;
    }
    
    .section-subheading {
      font-size: 18px;
    }
    
    .section-description {
      font-size: 15px;
    }
    
    .buttons-wrapper {
      flex-direction: column;
    }
    
    .btn {
      width: 100%;
      justify-content: center;
    }
    
    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }
    
    .text-content {
      padding: 1.5rem;
    }
  }
  
  @media (min-width: 769px) and (max-width: 1024px) {
    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>

