<section class="rich-text section" data-section-type="rich_text" data-section-id="{{ section.id }}">
  <div class="container">
    <div class="rich-text-content">
      <div class="rich-text-wrapper" style="max-width: {{ section.settings.content_width | default: '800' }}px; margin: 0 auto;">
        {% if section.settings.heading %}
          <div class="rich-text-header">
            <h2 class="rich-text-heading">{{ section.settings.heading }}</h2>
            {% if section.settings.subheading %}
              <p class="rich-text-subheading">{{ section.settings.subheading }}</p>
            {% endif %}
          </div>
        {% endif %}

        <div class="rich-text-body">
          {{ section.settings.content }}
        </div>

        {% if section.settings.show_cta and section.settings.cta_text %}
          <div class="rich-text-cta">
            <a href="{{ section.settings.cta_url | default: '#' }}" class="cta-button {{ section.settings.cta_style }}">
              {{ section.settings.cta_text }}
              {% if section.settings.cta_icon %}
                <span class="cta-icon">{{ section.settings.cta_icon }}</span>
              {% endif %}
            </a>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

<style>
  .rich-text {
    background-color: {{ section.settings.background_color | default: 'var(--color-background)' }};
  }
  
  .rich-text-wrapper {
    text-align: {{ section.settings.text_alignment | default: 'left' }};
  }
  
  .rich-text-header {
    margin-bottom: {{ section.settings.header_spacing | default: 2 }}rem;
  }
  
  .rich-text-heading {
    color: {{ section.settings.heading_color | default: 'var(--h2-color)' }};
    margin-bottom: 1rem;
    font-size: {{ section.settings.heading_size | default: 36 }}px;
    font-weight: {{ section.settings.heading_weight | default: 600 }};
  }
  
  .rich-text-subheading {
    color: {{ section.settings.subheading_color | default: 'var(--p-color)' }};
    font-size: {{ section.settings.subheading_size | default: 18 }}px;
    line-height: 1.6;
    margin: 0;
  }
  
  .rich-text-body {
    color: {{ section.settings.content_color | default: 'var(--p-color)' }};
    font-size: {{ section.settings.content_size | default: 16 }}px;
    line-height: {{ section.settings.content_line_height | default: 1.6 }};
    margin-bottom: {{ section.settings.content_spacing | default: 2 }}rem;
  }
  
  .rich-text-body h1,
  .rich-text-body h2,
  .rich-text-body h3,
  .rich-text-body h4,
  .rich-text-body h5,
  .rich-text-body h6 {
    color: {{ section.settings.heading_color | default: 'var(--h2-color)' }};
    margin-bottom: 1rem;
    margin-top: 2rem;
  }
  
  .rich-text-body h1:first-child,
  .rich-text-body h2:first-child,
  .rich-text-body h3:first-child,
  .rich-text-body h4:first-child,
  .rich-text-body h5:first-child,
  .rich-text-body h6:first-child {
    margin-top: 0;
  }
  
  .rich-text-body p {
    margin-bottom: 1.5rem;
  }
  
  .rich-text-body ul,
  .rich-text-body ol {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }
  
  .rich-text-body li {
    margin-bottom: 0.5rem;
  }
  
  .rich-text-body blockquote {
    border-left: 4px solid var(--color-primary);
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: {{ section.settings.blockquote_color | default: 'var(--color-text-light)' }};
    background-color: {{ section.settings.blockquote_bg_color | default: 'var(--color-surface)' }};
    padding: 1.5rem;
    border-radius: var(--radius-md);
  }
  
  .rich-text-body a {
    color: var(--color-primary);
    text-decoration: {{ section.settings.link_decoration | default: 'underline' }};
    transition: color 0.2s ease;
  }
  
  .rich-text-body a:hover {
    color: var(--color-primary-dark);
    text-decoration: {{ section.settings.link_hover_decoration | default: 'none' }};
  }
  
  .rich-text-body img {
    max-width: 100%;
    height: auto;
    border-radius: {{ section.settings.image_border_radius | default: 8 }}px;
    margin: 1.5rem 0;
    {% if section.settings.image_shadow %}
      box-shadow: var(--shadow-md);
    {% endif %}
  }
  
  .rich-text-body code {
    background-color: {{ section.settings.code_bg_color | default: 'var(--color-surface)' }};
    color: {{ section.settings.code_color | default: 'var(--color-primary)' }};
    padding: 0.25rem 0.5rem;
    border-radius: var(--radius-sm);
    font-family: var(--font-code);
    font-size: 0.875rem;
  }
  
  .rich-text-body pre {
    background-color: {{ section.settings.pre_bg_color | default: 'var(--color-gray-900)' }};
    color: {{ section.settings.pre_color | default: 'var(--color-gray-100)' }};
    padding: 1.5rem;
    border-radius: var(--radius-md);
    overflow-x: auto;
    margin: 1.5rem 0;
  }
  
  .rich-text-body pre code {
    background: none;
    padding: 0;
    color: inherit;
  }
  
  .rich-text-body table {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
    background-color: var(--color-white);
    border-radius: var(--radius-md);
    overflow: hidden;
    {% if section.settings.table_shadow %}
      box-shadow: var(--shadow-sm);
    {% endif %}
  }
  
  .rich-text-body th,
  .rich-text-body td {
    padding: 1rem;
    text-align: left;
    border-bottom: 1px solid var(--color-border);
  }
  
  .rich-text-body th {
    background-color: {{ section.settings.table_header_bg_color | default: 'var(--color-surface)' }};
    font-weight: 600;
    color: {{ section.settings.table_header_color | default: 'var(--color-text)' }};
  }
  
  .rich-text-cta {
    text-align: {{ section.settings.cta_alignment | default: 'center' }};
  }
  
  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: {{ section.settings.cta_padding_vertical | default: 12 }}px {{ section.settings.cta_padding_horizontal | default: 24 }}px;
    border-radius: var(--radius-lg);
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s ease;
    border: 2px solid transparent;
  }
  
  .cta-button.primary {
    background-color: var(--color-primary);
    color: white;
    border-color: var(--color-primary);
  }
  
  .cta-button.primary:hover {
    background-color: var(--color-primary-dark);
    border-color: var(--color-primary-dark);
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }
  
  .cta-button.secondary {
    background-color: transparent;
    color: var(--color-primary);
    border-color: var(--color-primary);
  }
  
  .cta-button.secondary:hover {
    background-color: var(--color-primary);
    color: white;
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }
  
  .cta-button.outline {
    background-color: transparent;
    color: var(--color-text);
    border-color: var(--color-border);
  }
  
  .cta-button.outline:hover {
    background-color: var(--color-surface);
    border-color: var(--color-primary);
    color: var(--color-primary);
  }
  
  .cta-icon {
    font-size: 1.25rem;
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .rich-text-heading {
      font-size: 28px;
    }
    
    .rich-text-subheading {
      font-size: 16px;
    }
    
    .rich-text-body {
      font-size: 15px;
    }
    
    .rich-text-body ul,
    .rich-text-body ol {
      padding-left: 1.5rem;
    }
    
    .rich-text-body blockquote {
      padding: 1rem;
      margin: 1.5rem 0;
    }
    
    .rich-text-body pre {
      padding: 1rem;
    }
    
    .rich-text-body th,
    .rich-text-body td {
      padding: 0.75rem;
    }
  }
</style>

