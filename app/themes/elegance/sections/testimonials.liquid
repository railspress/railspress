<section class="testimonials section" data-section-type="testimonials" data-section-id="{{ section.id }}">
  <div class="container">
    <div class="testimonials-content">
      {% if section.settings.heading %}
        <div class="testimonials-header">
          <h2 class="testimonials-heading">{{ section.settings.heading }}</h2>
          {% if section.settings.subheading %}
            <p class="testimonials-subheading">{{ section.settings.subheading }}</p>
          {% endif %}
        </div>
      {% endif %}
      
      <div class="testimonials-grid" style="grid-template-columns: repeat({{ section.settings.columns | default: 2 }}, 1fr);">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'testimonial' %}
              <div class="testimonial-item" {{ block.shopify_attributes }}>
                <div class="testimonial-content">
                  {% if section.settings.show_quotes %}
                    <div class="testimonial-quote">
                      <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h4v10h-10z"/>
                      </svg>
                    </div>
                  {% endif %}
                  
                  {% if block.settings.content %}
                    <blockquote class="testimonial-text">
                      "{{ block.settings.content }}"
                    </blockquote>
                  {% endif %}
                  
                  <div class="testimonial-author">
                    {% if block.settings.avatar and section.settings.show_avatars %}
                      <div class="testimonial-avatar">
                        <img src="{{ block.settings.avatar }}" alt="{{ block.settings.name | default: 'Customer' }}" class="avatar-img">
                      </div>
                    {% endif %}
                    
                    <div class="testimonial-author-info">
                      {% if block.settings.name %}
                        <div class="testimonial-name">{{ block.settings.name }}</div>
                      {% endif %}
                      
                      {% if block.settings.title %}
                        <div class="testimonial-title">{{ block.settings.title }}</div>
                      {% endif %}
                      
                      {% if block.settings.company %}
                        <div class="testimonial-company">{{ block.settings.company }}</div>
                      {% endif %}
                      
                      {% if section.settings.show_ratings and block.settings.rating %}
                        <div class="testimonial-rating">
                          {% assign rating = block.settings.rating | times: 1 %}
                          {% for i in (1..5) %}
                            {% if i <= rating %}
                              <span class="star filled">★</span>
                            {% else %}
                              <span class="star">☆</span>
                            {% endif %}
                          {% endfor %}
                        </div>
                      {% endif %}
                    </div>
                  </div>
                </div>
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<style>
  .testimonials {
    background-color: {{ section.settings.background_color | default: 'var(--color-surface)' }};
  }
  
  .testimonials-header {
    text-align: {{ section.settings.text_alignment | default: 'center' }};
    margin-bottom: 3rem;
  }
  
  .testimonials-heading {
    color: {{ section.settings.heading_color | default: 'var(--h2-color)' }};
    margin-bottom: 1rem;
  }
  
  .testimonials-subheading {
    color: {{ section.settings.subheading_color | default: 'var(--p-color)' }};
    font-size: 1.125rem;
    max-width: 600px;
    margin: 0 auto;
  }
  
  .testimonials-grid {
    display: grid;
    gap: 2rem;
    align-items: start;
  }
  
  .testimonial-item {
    background-color: {{ section.settings.card_background_color | default: 'var(--color-white)' }};
    border-radius: var(--radius-lg);
    padding: 2rem;
    {% if section.settings.card_border %}
      border: 1px solid var(--color-border);
    {% endif %}
    {% if section.settings.card_shadow %}
      box-shadow: var(--shadow-md);
    {% endif %}
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    position: relative;
  }
  
  .testimonial-item:hover {
    {% if section.settings.card_hover_effect %}
      transform: translateY(-4px);
      box-shadow: var(--shadow-lg);
    {% endif %}
  }
  
  .testimonial-quote {
    color: {{ section.settings.quote_color | default: 'var(--color-primary)' }};
    margin-bottom: 1rem;
    opacity: 0.3;
  }
  
  .testimonial-text {
    font-size: 1.125rem;
    line-height: 1.6;
    color: {{ section.settings.text_color | default: 'var(--p-color)' }};
    margin-bottom: 2rem;
    font-style: italic;
    border: none;
    padding: 0;
  }
  
  .testimonial-author {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  
  .testimonial-avatar {
    flex-shrink: 0;
  }
  
  .avatar-img {
    width: {{ section.settings.avatar_size | default: 48 }}px;
    height: {{ section.settings.avatar_size | default: 48 }}px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid var(--color-border);
  }
  
  .testimonial-author-info {
    flex: 1;
  }
  
  .testimonial-name {
    font-weight: var(--font-semibold);
    color: {{ section.settings.name_color | default: 'var(--h4-color)' }};
    margin-bottom: 0.25rem;
  }
  
  .testimonial-title {
    font-size: 0.875rem;
    color: {{ section.settings.title_color | default: 'var(--color-primary)' }};
    margin-bottom: 0.25rem;
  }
  
  .testimonial-company {
    font-size: 0.875rem;
    color: {{ section.settings.company_color | default: 'var(--color-text-light)' }};
    margin-bottom: 0.5rem;
  }
  
  .testimonial-rating {
    display: flex;
    gap: 0.125rem;
  }
  
  .star {
    font-size: 1rem;
    color: var(--color-gray-300);
  }
  
  .star.filled {
    color: {{ section.settings.rating_color | default: '#fbbf24' }};
  }
  
  /* Alternative Layout: Single Column with Carousel Effect */
  {% if section.settings.layout == 'carousel' %}
    .testimonials-grid {
      display: flex;
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      gap: 1.5rem;
      padding-bottom: 1rem;
    }
    
    .testimonial-item {
      min-width: 300px;
      scroll-snap-align: start;
    }
    
    .testimonials-grid::-webkit-scrollbar {
      height: 4px;
    }
    
    .testimonials-grid::-webkit-scrollbar-track {
      background: var(--color-gray-200);
      border-radius: 2px;
    }
    
    .testimonials-grid::-webkit-scrollbar-thumb {
      background: var(--color-primary);
      border-radius: 2px;
    }
  {% endif %}
  
  /* Responsive */
  @media (max-width: 768px) {
    .testimonials-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
    
    .testimonial-item {
      padding: 1.5rem;
    }
    
    .testimonials-header {
      margin-bottom: 2rem;
    }
    
    .testimonial-author {
      flex-direction: column;
      text-align: center;
      gap: 0.75rem;
    }
  }
  
  @media (min-width: 769px) and (max-width: 1024px) {
    .testimonials-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

