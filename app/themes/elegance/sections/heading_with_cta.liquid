<section class="heading-with-cta section" data-section-type="heading_with_cta" data-section-id="{{ section.id }}">
  <div class="container">
    <div class="heading-with-cta-content">
      <div class="heading-cta-wrapper" style="text-align: {{ section.settings.text_alignment | default: 'center' }}; max-width: {{ section.settings.max_width | default: 800 }}px; margin: 0 auto;">
        
        {% if section.settings.show_badge and section.settings.badge_text %}
          <div class="heading-badge">
            <span class="badge-text">{{ section.settings.badge_text }}</span>
          </div>
        {% endif %}

        {% if section.settings.heading %}
          <h{{ section.settings.heading_level | default: 2 }} class="section-heading {{ section.settings.heading_style }}">
            {{ section.settings.heading }}
          </h{{ section.settings.heading_level | default: 2 }}>
        {% endif %}

        {% if section.settings.subheading %}
          <h3 class="section-subheading">{{ section.settings.subheading }}</h3>
        {% endif %}

        {% if section.settings.description %}
          <div class="section-description">
            {{ section.settings.description }}
          </div>
        {% endif %}

        {% if section.settings.show_divider %}
          <div class="heading-divider {{ section.settings.divider_style }}">
            {% if section.settings.divider_style == 'line' %}
              <hr class="divider-line">
            {% elsif section.settings.divider_style == 'dots' %}
              <div class="divider-dots">
                <span></span>
                <span></span>
                <span></span>
              </div>
            {% elsif section.settings.divider_style == 'icon' and section.settings.divider_icon %}
              <div class="divider-icon">
                <span>{{ section.settings.divider_icon }}</span>
              </div>
            {% endif %}
          </div>
        {% endif %}

        <div class="cta-group {{ section.settings.button_layout }}">
          {% if section.settings.primary_cta_text %}
            <a href="{{ section.settings.primary_cta_url | default: '#' }}" class="cta-button primary {{ section.settings.primary_cta_style }}">
              {{ section.settings.primary_cta_text }}
              {% if section.settings.primary_cta_icon %}
                <span class="cta-icon">{{ section.settings.primary_cta_icon }}</span>
              {% endif %}
            </a>
          {% endif %}

          {% if section.settings.secondary_cta_text %}
            <a href="{{ section.settings.secondary_cta_url | default: '#' }}" class="cta-button secondary {{ section.settings.secondary_cta_style }}">
              {{ section.settings.secondary_cta_text }}
              {% if section.settings.secondary_cta_icon %}
                <span class="cta-icon">{{ section.settings.secondary_cta_icon }}</span>
              {% endif %}
            </a>
          {% endif %}
        </div>

        {% if section.settings.show_trust_indicators %}
          <div class="trust-indicators">
            {% if section.settings.trust_text %}
              <p class="trust-text">{{ section.settings.trust_text }}</p>
            {% endif %}
            
            {% if section.settings.show_trust_badges %}
              <div class="trust-badges">
                {% if section.settings.badge_1_text %}
                  <span class="trust-badge">{{ section.settings.badge_1_text }}</span>
                {% endif %}
                {% if section.settings.badge_2_text %}
                  <span class="trust-badge">{{ section.settings.badge_2_text }}</span>
                {% endif %}
                {% if section.settings.badge_3_text %}
                  <span class="trust-badge">{{ section.settings.badge_3_text }}</span>
                {% endif %}
              </div>
            {% endif %}
          </div>
        {% endif %}

      </div>
    </div>
  </div>
</section>

<style>
  .heading-with-cta {
    background-color: {{ section.settings.background_color | default: 'var(--color-background)' }};
    padding: {{ section.settings.section_padding_vertical | default: 4 }}rem 0;
  }
  
  .heading-cta-wrapper {
    position: relative;
  }
  
  .heading-badge {
    margin-bottom: 1.5rem;
  }
  
  .badge-text {
    display: inline-block;
    background-color: {{ section.settings.badge_background_color | default: 'var(--color-primary)' }};
    color: {{ section.settings.badge_text_color | default: 'white' }};
    padding: {{ section.settings.badge_padding_vertical | default: 8 }}px {{ section.settings.badge_padding_horizontal | default: 16 }}px;
    border-radius: var(--radius-full);
    font-size: {{ section.settings.badge_size | default: 14 }}px;
    font-weight: {{ section.settings.badge_weight | default: 600 }};
    text-transform: uppercase;
    letter-spacing: 0.5px;
    {% if section.settings.badge_border %}
      border: 2px solid {{ section.settings.badge_border_color | default: 'var(--color-primary)' }};
    {% endif %}
  }
  
  .section-heading {
    color: {{ section.settings.heading_color | default: 'var(--h2-color)' }};
    font-size: {{ section.settings.heading_size | default: 48 }}px;
    font-weight: {{ section.settings.heading_weight | default: 700 }};
    line-height: {{ section.settings.heading_line_height | default: 1.1 }};
    margin-bottom: {{ section.settings.heading_margin_bottom | default: 1 }}rem;
    letter-spacing: {{ section.settings.heading_letter_spacing | default: 0 }}px;
  }
  
  .section-heading.gradient {
    background: linear-gradient(135deg, {{ section.settings.gradient_start_color | default: 'var(--color-primary)' }}, {{ section.settings.gradient_end_color | default: 'var(--color-secondary)' }});
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .section-heading.outline {
    -webkit-text-stroke: 2px {{ section.settings.outline_color | default: 'var(--color-primary)' }};
    -webkit-text-fill-color: transparent;
  }
  
  .section-heading.shadow {
    text-shadow: {{ section.settings.text_shadow_x | default: 2 }}px {{ section.settings.text_shadow_y | default: 2 }}px {{ section.settings.text_shadow_blur | default: 4 }}px {{ section.settings.text_shadow_color | default: 'rgba(0,0,0,0.3)' }};
  }
  
  .section-subheading {
    color: {{ section.settings.subheading_color | default: 'var(--color-primary)' }};
    font-size: {{ section.settings.subheading_size | default: 20 }}px;
    font-weight: {{ section.settings.subheading_weight | default: 500 }};
    margin-bottom: 1.5rem;
    line-height: 1.4;
  }
  
  .section-description {
    color: {{ section.settings.description_color | default: 'var(--p-color)' }};
    font-size: {{ section.settings.description_size | default: 18 }}px;
    line-height: {{ section.settings.description_line_height | default: 1.6 }};
    margin-bottom: 2rem;
    max-width: 600px;
    {% if section.settings.text_alignment == 'center' %}
      margin-left: auto;
      margin-right: auto;
    {% endif %}
  }
  
  .heading-divider {
    margin: {{ section.settings.divider_margin | default: 2 }}rem 0;
  }
  
  .divider-line {
    width: {{ section.settings.divider_width | default: 80 }}px;
    height: {{ section.settings.divider_thickness | default: 4 }}px;
    background-color: {{ section.settings.divider_color | default: 'var(--color-primary)' }};
    border: none;
    border-radius: var(--radius-full);
    margin: 0 auto;
  }
  
  .divider-dots {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
  }
  
  .divider-dots span {
    width: {{ section.settings.divider_dot_size | default: 8 }}px;
    height: {{ section.settings.divider_dot_size | default: 8 }}px;
    background-color: {{ section.settings.divider_color | default: 'var(--color-primary)' }};
    border-radius: 50%;
  }
  
  .divider-icon {
    display: flex;
    justify-content: center;
  }
  
  .divider-icon span {
    font-size: {{ section.settings.divider_icon_size | default: 24 }}px;
    color: {{ section.settings.divider_color | default: 'var(--color-primary)' }};
  }
  
  .cta-group {
    margin: 2rem 0;
  }
  
  .cta-group.horizontal {
    display: flex;
    gap: 1rem;
    justify-content: {{ section.settings.text_alignment | default: 'center' }};
    flex-wrap: wrap;
  }
  
  .cta-group.vertical {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: {{ section.settings.text_alignment | default: 'center' }};
  }
  
  .cta-group.stacked {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    align-items: {{ section.settings.text_alignment | default: 'center' }};
  }
  
  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: {{ section.settings.button_padding_vertical | default: 12 }}px {{ section.settings.button_padding_horizontal | default: 24 }}px;
    border-radius: {{ section.settings.button_border_radius | default: 8 }}px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s ease;
    border: 2px solid transparent;
    font-size: {{ section.settings.button_size | default: 16 }}px;
    white-space: nowrap;
  }
  
  .cta-button.primary {
    background-color: {{ section.settings.primary_cta_bg_color | default: 'var(--color-primary)' }};
    color: {{ section.settings.primary_cta_text_color | default: 'white' }};
    border-color: {{ section.settings.primary_cta_bg_color | default: 'var(--color-primary)' }};
  }
  
  .cta-button.primary:hover {
    background-color: {{ section.settings.primary_cta_hover_bg_color | default: 'var(--color-primary-dark)' }};
    border-color: {{ section.settings.primary_cta_hover_bg_color | default: 'var(--color-primary-dark)' }};
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }
  
  .cta-button.secondary {
    background-color: {{ section.settings.secondary_cta_bg_color | default: 'transparent' }};
    color: {{ section.settings.secondary_cta_text_color | default: 'var(--color-primary)' }};
    border-color: {{ section.settings.secondary_cta_bg_color | default: 'var(--color-primary)' }};
  }
  
  .cta-button.secondary:hover {
    background-color: {{ section.settings.secondary_cta_hover_bg_color | default: 'var(--color-primary)' }};
    color: {{ section.settings.secondary_cta_hover_text_color | default: 'white' }};
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }
  
  .cta-button.outline {
    background-color: transparent;
    color: {{ section.settings.primary_cta_text_color | default: 'var(--color-text)' }};
    border-color: {{ section.settings.button_border_color | default: 'var(--color-border)' }};
  }
  
  .cta-button.outline:hover {
    background-color: {{ section.settings.button_hover_bg_color | default: 'var(--color-surface)' }};
    border-color: {{ section.settings.primary_cta_bg_color | default: 'var(--color-primary)' }};
    color: {{ section.settings.primary_cta_bg_color | default: 'var(--color-primary)' }};
  }
  
  .cta-icon {
    font-size: 1.25rem;
  }
  
  .trust-indicators {
    margin-top: 3rem;
    text-align: center;
  }
  
  .trust-text {
    color: {{ section.settings.trust_text_color | default: 'var(--text-light-color)' }};
    font-size: {{ section.settings.trust_text_size | default: 14 }}px;
    margin-bottom: 1rem;
    font-style: italic;
  }
  
  .trust-badges {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }
  
  .trust-badge {
    display: inline-block;
    background-color: {{ section.settings.trust_badge_bg_color | default: 'var(--color-surface)' }};
    color: {{ section.settings.trust_badge_text_color | default: 'var(--color-text)' }};
    padding: {{ section.settings.trust_badge_padding_vertical | default: 6 }}px {{ section.settings.trust_badge_padding_horizontal | default: 12 }}px;
    border-radius: var(--radius-md);
    font-size: {{ section.settings.trust_badge_size | default: 12 }}px;
    font-weight: 500;
    {% if section.settings.trust_badge_border %}
      border: 1px solid {{ section.settings.trust_badge_border_color | default: 'var(--color-border)' }};
    {% endif %}
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .section-heading {
      font-size: 32px;
    }
    
    .section-subheading {
      font-size: 18px;
    }
    
    .section-description {
      font-size: 16px;
    }
    
    .heading-with-cta {
      padding: 2rem 0;
    }
    
    .cta-group.horizontal {
      flex-direction: column;
      align-items: center;
    }
    
    .cta-button {
      width: 100%;
      max-width: 300px;
      justify-content: center;
    }
    
    .trust-badges {
      flex-direction: column;
      align-items: center;
      gap: 0.5rem;
    }
  }
</style>

