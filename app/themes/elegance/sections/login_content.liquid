    background-color: {{ section.settings.twitter_hover_bg_color | default: '#0d8bd9' }};
    transform: translateY(-1px);
    box-shadow: var(--shadow-md);
  }
  
  .social-icon {
    font-size: 1.25rem;
  }
  
  .signup-link {
