    color: {{ section.settings.google_text_color | default: '#333' }};
    border-color: {{ section.settings.google_border_color | default: '#dadce0' }};
  }
  
  .social-button.google:hover {
    background-color: {{ section.settings.google_hover_bg_color | default: '#f8f9fa' }};
    transform: translateY(-1px);
    box-shadow: var(--shadow-md);
  }
  
  .social-button.facebook {
    background-color: {{ section.settings.facebook_bg_color | default: '#1877f2' }};
    color: white;
    border-color: {{ section.settings.facebook_bg_color | default: '#1877f2' }};
  }
  
  .social-button.facebook:hover {
    background-color: {{ section.settings.facebook_hover_bg_color | default: '#166fe5' }};
    transform: translateY(-1px);
    box-shadow: var(--shadow-md);
  }
  
  .social-button.twitter {
    background-color: {{ section.settings.twitter_bg_color | default: '#1da1f2' }};
    color: white;
    border-color: {{ section.settings.twitter_bg_color | default: '#1da1f2' }};
  }
  
