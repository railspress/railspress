    color: {{ section.settings.signup_link_hover_color | default: 'var(--color-primary-dark)' }};
    text-decoration: underline;
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .login-content {
      padding: 2rem 0;
    }
    
