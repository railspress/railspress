<section class="login-content section" data-section-type="login_content" data-section-id="{{ section.id }}">
  <div class="container">
    <div class="login-content-wrapper">
      <div class="login-form-container" style="max-width: {{ section.settings.form_width | default: 400 }}px; margin: 0 auto;">
        
        {% if section.settings.show_logo and section.settings.logo_url %}
          <div class="login-logo">
            <img src="{{ section.settings.logo_url }}" alt="{{ section.settings.company_name | default: 'Logo' }}" class="logo-image">
          </div>
        {% endif %}

        <div class="login-header" style="text-align: {{ section.settings.text_alignment | default: 'center' }};">
          {% if section.settings.login_title %}
            <h1 class="login-title">{{ section.settings.login_title }}</h1>
          {% endif %}
          
          {% if section.settings.login_subtitle %}
            <p class="login-subtitle">{{ section.settings.login_subtitle }}</p>
          {% endif %}
        </div>

        <div class="login-form-wrapper">
          <form class="login-form" action="/users/sign_in" method="post">
            {% if section.settings.show_email_field %}
              <div class="form-group">
                <label for="user_email" class="form-label">{{ section.settings.email_label | default: 'Email' }}</label>
                <input type="email" id="user_email" name="user[email]" class="form-input" required>
              </div>
            {% endif %}

            {% if section.settings.show_password_field %}
              <div class="form-group">
                <label for="user_password" class="form-label">{{ section.settings.password_label | default: 'Password' }}</label>
                <input type="password" id="user_password" name="user[password]" class="form-input" required>
              </div>
            {% endif %}

            {% if section.settings.show_remember_me %}
              <div class="form-group remember-group">
                <label class="checkbox-label">
                  <input type="checkbox" name="user[remember_me]" class="checkbox-input">
                  <span class="checkbox-text">{{ section.settings.remember_me_text | default: 'Remember me' }}</span>
                </label>
              </div>
            {% endif %}

            <div class="form-group">
              <button type="submit" class="login-button {{ section.settings.button_style }}">
                {{ section.settings.login_button_text | default: 'Sign In' }}
                {% if section.settings.login_button_icon %}
                  <span class="btn-icon">{{ section.settings.login_button_icon }}</span>
                {% endif %}
              </button>
            </div>

            {% if section.settings.show_forgot_password %}
              <div class="form-group forgot-password">
                <a href="/users/password/new" class="forgot-link">
                  {{ section.settings.forgot_password_text | default: 'Forgot your password?' }}
                </a>
              </div>
            {% endif %}
          </form>

          {% if section.settings.show_social_login %}
            <div class="social-login">
              {% if section.settings.show_divider %}
                <div class="social-divider">
                  <span class="divider-text">{{ section.settings.divider_text | default: 'or' }}</span>
                </div>
              {% endif %}

              <div class="social-buttons">
                {% if section.settings.google_client_id %}
                  <a href="/users/auth/google_oauth2" class="social-button google">
                    <span class="social-icon">üîç</span>
                    {{ section.settings.google_button_text | default: 'Continue with Google' }}
                  </a>
                {% endif %}

                {% if section.settings.facebook_app_id %}
                  <a href="/users/auth/facebook" class="social-button facebook">
                    <span class="social-icon">üìò</span>
                    {{ section.settings.facebook_button_text | default: 'Continue with Facebook' }}
                  </a>
                {% endif %}

                {% if section.settings.twitter_api_key %}
                  <a href="/users/auth/twitter" class="social-button twitter">
                    <span class="social-icon">üê¶</span>
                    {{ section.settings.twitter_button_text | default: 'Continue with Twitter' }}
                  </a>
                {% endif %}
              </div>
            </div>
          {% endif %}

          {% if section.settings.show_signup_link %}
            <div class="signup-link">
              <p class="signup-text">
                {{ section.settings.signup_text | default: "Don't have an account?" }}
                <a href="/users/sign_up" class="signup-link-text">
                  {{ section.settings.signup_link_text | default: 'Sign up' }}
                </a>
              </p>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .login-content {
    background-color: {{ section.settings.background_color | default: 'var(--color-background)' }};
    padding: {{ section.settings.section_padding_vertical | default: 4 }}rem 0;
    min-height: 80vh;
    display: flex;
    align-items: center;
  }
  
  .login-logo {
    text-align: center;
    margin-bottom: 2rem;
  }
  
  .logo-image {
    max-width: {{ section.settings.logo_width | default: 120 }}px;
    max-height: {{ section.settings.logo_height | default: 60 }}px;
    object-fit: contain;
  }
  
  .login-title {
    color: {{ section.settings.title_color | default: 'var(--h1-color)' }};
    font-size: {{ section.settings.title_size | default: 32 }}px;
    font-weight: {{ section.settings.title_weight | default: 700 }};
    margin-bottom: 0.5rem;
    line-height: 1.2;
  }
  
  .login-subtitle {
    color: {{ section.settings.subtitle_color | default: 'var(--p-color)' }};
    font-size: {{ section.settings.subtitle_size | default: 16 }}px;
    line-height: 1.5;
    margin-bottom: 2rem;
  }
  
  .login-form-wrapper {
    background-color: {{ section.settings.form_bg_color | default: 'white' }};
    padding: {{ section.settings.form_padding | default: 2 }}rem;
    border-radius: {{ section.settings.form_border_radius | default: 12 }}px;
    {% if section.settings.form_shadow %}
      box-shadow: var(--shadow-lg);
    {% endif %}
    {% if section.settings.form_border %}
      border: 1px solid {{ section.settings.form_border_color | default: 'var(--color-border)' }};
    {% endif %}
  }
  
  .form-group {
    margin-bottom: 1.5rem;
  }
  
  .form-label {
    display: block;
    color: {{ section.settings.label_color | default: 'var(--color-text)' }};
    font-size: {{ section.settings.label_size | default: 14 }}px;
    font-weight: 500;
    margin-bottom: 0.5rem;
  }
  
  .form-input {
    width: 100%;
    padding: {{ section.settings.input_padding_vertical | default: 12 }}px {{ section.settings.input_padding_horizontal | default: 16 }}px;
    border: {{ section.settings.input_border_width | default: 1 }}px solid {{ section.settings.input_border_color | default: 'var(--color-border)' }};
    border-radius: {{ section.settings.input_border_radius | default: 6 }}px;
    font-size: {{ section.settings.input_size | default: 16 }}px;
    color: {{ section.settings.input_text_color | default: 'var(--color-text)' }};
    background-color: {{ section.settings.input_bg_color | default: 'white' }};
    transition: all 0.2s ease;
  }
  
  .form-input:focus {
    outline: none;
    border-color: {{ section.settings.input_focus_border_color | default: 'var(--color-primary)' }};
    box-shadow: 0 0 0 3px {{ section.settings.input_focus_shadow_color | default: 'rgba(37, 99, 235, 0.1)' }};
  }
  
  .form-input::placeholder {
    color: {{ section.settings.input_placeholder_color | default: 'var(--text-light-color)' }};
  }
  
  .remember-group {
    margin-bottom: 1rem;
  }
  
  .checkbox-label {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    cursor: pointer;
    font-size: {{ section.settings.checkbox_text_size | default: 14 }}px;
    color: {{ section.settings.checkbox_text_color | default: 'var(--color-text)' }};
  }
  
  .checkbox-input {
    width: 16px;
    height: 16px;
    accent-color: {{ section.settings.checkbox_accent_color | default: 'var(--color-primary)' }};
  }
  
  .checkbox-text {
    user-select: none;
  }
  
  .login-button {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: {{ section.settings.button_padding_vertical | default: 14 }}px {{ section.settings.button_padding_horizontal | default: 24 }}px;
    border-radius: {{ section.settings.button_border_radius | default: 8 }}px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s ease;
    border: 2px solid transparent;
    font-size: {{ section.settings.button_size | default: 16 }}px;
    cursor: pointer;
  }
  
  .login-button.primary {
    background-color: {{ section.settings.button_bg_color | default: 'var(--color-primary)' }};
    color: {{ section.settings.button_text_color | default: 'white' }};
    border-color: {{ section.settings.button_bg_color | default: 'var(--color-primary)' }};
  }
  
  .login-button.primary:hover {
    background-color: {{ section.settings.button_hover_bg_color | default: 'var(--color-primary-dark)' }};
    border-color: {{ section.settings.button_hover_bg_color | default: 'var(--color-primary-dark)' }};
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }
  
  .login-button.secondary {
    background-color: transparent;
    color: {{ section.settings.button_bg_color | default: 'var(--color-primary)' }};
    border-color: {{ section.settings.button_bg_color | default: 'var(--color-primary)' }};
  }
  
  .login-button.secondary:hover {
    background-color: {{ section.settings.button_bg_color | default: 'var(--color-primary)' }};
    color: white;
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }
  
  .btn-icon {
    font-size: 1rem;
  }
  
  .forgot-password {
    text-align: center;
    margin-bottom: 1rem;
  }
  
  .forgot-link {
    color: {{ section.settings.forgot_link_color | default: 'var(--color-primary)' }};
    text-decoration: none;
    font-size: {{ section.settings.forgot_link_size | default: 14 }}px;
    transition: color 0.2s ease;
  }
  
  .forgot-link:hover {
    color: {{ section.settings.forgot_link_hover_color | default: 'var(--color-primary-dark)' }};
    text-decoration: underline;
  }
  
  .social-divider {
    text-align: center;
    margin: 2rem 0;
    position: relative;
  }
  
  .divider-text {
    background-color: {{ section.settings.form_bg_color | default: 'white' }};
    color: {{ section.settings.divider_text_color | default: 'var(--text-light-color)' }};
    padding: 0 1rem;
    font-size: {{ section.settings.divider_text_size | default: 14 }}px;
    position: relative;
  }
  
  .social-divider::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    height: 1px;
    background-color: {{ section.settings.divider_line_color | default: 'var(--color-border)' }};
    z-index: -1;
  }
  
  .social-buttons {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }
  
  .social-button {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    padding: {{ section.settings.social_button_padding_vertical | default: 12 }}px {{ section.settings.social_button_padding_horizontal | default: 16 }}px;
    border-radius: {{ section.settings.social_button_border_radius | default: 6 }}px;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s ease;
    border: 1px solid {{ section.settings.social_button_border_color | default: 'var(--color-border)' }};
    font-size: {{ section.settings.social_button_size | default: 14 }}px;
  }
  
  .social-button.google {
