    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid {{ section.settings.signup_divider_color | default: 'var(--color-border)' }};
  }
  
  .signup-text {
    color: {{ section.settings.signup_text_color | default: 'var(--p-color)' }};
    font-size: {{ section.settings.signup_text_size | default: 14 }}px;
    margin: 0;
  }
  
  .signup-link-text {
    color: {{ section.settings.signup_link_color | default: 'var(--color-primary)' }};
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
  }
  
