<footer class="footer section" data-section-type="footer" data-section-id="{{ section.id }}">
  <div class="footer-container">
    <div class="footer-content">
      <!-- Footer Columns -->
      <div class="footer-columns" style="grid-template-columns: repeat({{ section.settings.columns | default: 4 }}, 1fr);">
        
        <!-- Company Info Column -->
        <div class="footer-column">
          {% if section.settings.logo_image %}
            <img src="{{ section.settings.logo_image }}" alt="{{ section.settings.logo_alt | default: site.title }}" class="footer-logo">
          {% else %}
            <h3 class="footer-logo-text">{{ section.settings.logo_text | default: site.title }}</h3>
          {% endif %}
          
          {% if section.settings.description %}
            <p class="footer-description">{{ section.settings.description }}</p>
          {% endif %}
          
          {% if section.settings.show_social_links %}
            <div class="footer-social">
              {% if section.settings.facebook_url %}
                <a href="{{ section.settings.facebook_url }}" class="social-link" aria-label="Facebook">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                  </svg>
                </a>
              {% endif %}
              
              {% if section.settings.twitter_url %}
                <a href="{{ section.settings.twitter_url }}" class="social-link" aria-label="Twitter">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                  </svg>
                </a>
              {% endif %}
              
              {% if section.settings.instagram_url %}
                <a href="{{ section.settings.instagram_url }}" class="social-link" aria-label="Instagram">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                  </svg>
                </a>
              {% endif %}
              
              {% if section.settings.linkedin_url %}
                <a href="{{ section.settings.linkedin_url }}" class="social-link" aria-label="LinkedIn">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                </a>
              {% endif %}
            </div>
          {% endif %}
        </div>
        
        <!-- Links Columns -->
        {% for i in (1..3) %}
          {% assign link_list_key = 'link_list_' | append: i %}
          {% if section.settings[link_list_key] %}
            <div class="footer-column">
              {% assign heading_key = 'heading_' | append: i %}
              {% if section.settings[heading_key] %}
                <h4 class="footer-heading">{{ section.settings[heading_key] }}</h4>
              {% endif %}
              
              <ul class="footer-links">
                {% for link in section.settings[link_list_key] %}
                  <li class="footer-link-item">
                    <a href="{{ link.url }}" class="footer-link">{{ link.title }}</a>
                  </li>
                {% endfor %}
              </ul>
            </div>
          {% endif %}
        {% endfor %}
        
        <!-- Newsletter Column -->
        {% if section.settings.show_newsletter %}
          <div class="footer-column">
            <h4 class="footer-heading">{{ section.settings.newsletter_heading | default: 'Newsletter' }}</h4>
            <p class="footer-description">{{ section.settings.newsletter_description | default: 'Subscribe to our newsletter for updates.' }}</p>
            
            <form class="footer-newsletter" action="/newsletter" method="post">
              <div class="newsletter-input-group">
                <input 
                  type="email" 
                  name="email" 
                  placeholder="{{ section.settings.newsletter_placeholder | default: 'Enter your email' }}"
                  class="newsletter-input"
                  required
                >
                <button type="submit" class="newsletter-button">
                  {{ section.settings.newsletter_button_text | default: 'Subscribe' }}
                </button>
              </div>
            </form>
          </div>
        {% endif %}
      </div>
    </div>
    
    <!-- Footer Bottom -->
    <div class="footer-bottom">
      <div class="footer-bottom-content">
        <p class="footer-copyright">
          &copy; {{ 'now' | date: '%Y' }} {{ section.settings.copyright_text | default: site.title }}. 
          {{ section.settings.copyright_suffix | default: 'All rights reserved.' }}
        </p>
        
        {% if section.settings.show_payment_icons %}
          <div class="footer-payment">
            <span class="payment-text">{{ section.settings.payment_text | default: 'We accept' }}</span>
            <div class="payment-icons">
              <!-- Payment icons would go here -->
              <span class="payment-icon">üí≥</span>
              <span class="payment-icon">üí∞</span>
              <span class="payment-icon">üè¶</span>
            </div>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--footer-bg);
    color: var(--footer-text);
    margin-top: auto;
  }
  
  .footer-container {
    max-width: var(--container-max-width);
    margin: 0 auto;
    padding: 0 var(--container-padding);
  }
  
  .footer-content {
    padding: var(--section-spacing) 0;
  }
  
  .footer-columns {
    display: grid;
    gap: 2rem;
  }
  
  .footer-column {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  
  .footer-logo {
    height: 40px;
    width: auto;
  }
  
  .footer-logo-text {
    font-size: 1.5rem;
    font-weight: var(--weight-heading);
    color: var(--color-primary);
    margin: 0;
  }
  
  .footer-heading {
    font-size: 1.125rem;
    font-weight: var(--weight-heading);
    color: var(--footer-heading);
    margin: 0 0 1rem 0;
  }
  
  .footer-description {
    color: var(--footer-text);
    line-height: 1.6;
    margin: 0;
  }
  
  .footer-links {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .footer-link {
    color: var(--footer-text);
    text-decoration: none;
    transition: color 0.2s ease;
  }
  
  .footer-link:hover {
    color: var(--color-primary);
  }
  
  .footer-social {
    display: flex;
    gap: 1rem;
  }
  
  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    color: var(--footer-text);
    transition: all 0.2s ease;
  }
  
  .social-link:hover {
    background-color: var(--color-primary);
    color: white;
    transform: translateY(-2px);
  }
  
  .footer-newsletter {
    margin-top: 1rem;
  }
  
  .newsletter-input-group {
    display: flex;
    gap: 0.5rem;
  }
  
  .newsletter-input {
    flex: 1;
    padding: 0.75rem;
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: var(--button-radius);
    background-color: rgba(255, 255, 255, 0.1);
    color: var(--footer-text);
    font-size: 0.875rem;
  }
  
  .newsletter-input::placeholder {
    color: rgba(255, 255, 255, 0.6);
  }
  
  .newsletter-input:focus {
    outline: none;
    border-color: var(--color-primary);
    background-color: rgba(255, 255, 255, 0.15);
  }
  
  .newsletter-button {
    padding: 0.75rem 1.5rem;
    background-color: var(--color-primary);
    color: white;
    border: none;
    border-radius: var(--button-radius);
    font-weight: 500;
    cursor: pointer;
    transition: background-color 0.2s ease;
    white-space: nowrap;
  }
  
  .newsletter-button:hover {
    background-color: var(--color-secondary);
  }
  
  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding: 1.5rem 0;
  }
  
  .footer-bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }
  
  .footer-copyright {
    color: var(--footer-text);
    font-size: 0.875rem;
    margin: 0;
  }
  
  .footer-payment {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .payment-text {
    font-size: 0.875rem;
    color: var(--footer-text);
  }
  
  .payment-icons {
    display: flex;
    gap: 0.5rem;
  }
  
  .payment-icon {
    font-size: 1.25rem;
    opacity: 0.7;
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .footer-columns {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .footer-bottom-content {
      flex-direction: column;
      text-align: center;
    }
    
    .newsletter-input-group {
      flex-direction: column;
    }
    
    .footer-social {
      justify-content: center;
    }
  }
</style>

