<section class="quote section" data-section-type="quote" data-section-id="{{ section.id }}">
  <div class="container">
    <div class="quote-content">
      <div class="quote-wrapper" style="text-align: {{ section.settings.text_alignment | default: 'center' }}; max-width: {{ section.settings.max_width | default: 800 }}px; margin: 0 auto;">
        
        {% if section.settings.show_quote_icon %}
          <div class="quote-icon">
            <span class="icon-text">{{ section.settings.quote_icon | default: '"' }}</span>
          </div>
        {% endif %}

        {% if section.settings.quote_text %}
          <blockquote class="quote-text {{ section.settings.quote_style }}">
            {{ section.settings.quote_text }}
          </blockquote>
        {% endif %}

        {% if section.settings.author_name or section.settings.author_title %}
          <div class="quote-author">
            {% if section.settings.author_name %}
              <div class="author-name">{{ section.settings.author_name }}</div>
            {% endif %}
            {% if section.settings.author_title %}
              <div class="author-title">{{ section.settings.author_title }}</div>
            {% endif %}
            {% if section.settings.author_company %}
              <div class="author-company">{{ section.settings.author_company }}</div>
            {% endif %}
          </div>
        {% endif %}

        {% if section.settings.show_divider %}
          <div class="quote-divider {{ section.settings.divider_style }}">
            {% if section.settings.divider_style == 'line' %}
              <hr class="divider-line">
            {% elsif section.settings.divider_style == 'dots' %}
              <div class="divider-dots">
                <span></span>
                <span></span>
                <span></span>
              </div>
            {% elsif section.settings.divider_style == 'icon' and section.settings.divider_icon %}
              <div class="divider-icon">
                <span>{{ section.settings.divider_icon }}</span>
              </div>
            {% endif %}
          </div>
        {% endif %}

        {% if section.settings.show_cta and section.settings.cta_text %}
          <div class="quote-cta">
            <a href="{{ section.settings.cta_url | default: '#' }}" class="cta-button {{ section.settings.cta_style }}">
              {{ section.settings.cta_text }}
              {% if section.settings.cta_icon %}
                <span class="cta-icon">{{ section.settings.cta_icon }}</span>
              {% endif %}
            </a>
          </div>
        {% endif %}

      </div>
    </div>
  </div>
</section>

<style>
  .quote {
    background-color: {{ section.settings.background_color | default: 'var(--color-background)' }};
    padding: {{ section.settings.section_padding_vertical | default: 4 }}rem 0;
  }
  
  .quote-wrapper {
    position: relative;
  }
  
  .quote-icon {
    margin-bottom: 2rem;
  }
  
  .icon-text {
    font-size: {{ section.settings.quote_icon_size | default: 72 }}px;
    color: {{ section.settings.quote_icon_color | default: 'var(--color-primary)' }};
    font-family: serif;
    font-weight: bold;
    line-height: 1;
  }
  
  .quote-text {
    font-size: {{ section.settings.quote_size | default: 24 }}px;
    font-weight: {{ section.settings.quote_weight | default: 400 }};
    line-height: {{ section.settings.quote_line_height | default: 1.5 }};
    color: {{ section.settings.quote_color | default: 'var(--p-color)' }};
    margin-bottom: 2rem;
    font-style: {{ section.settings.quote_style == 'italic' ? 'italic' : 'normal' }};
    border: none;
    padding: 0;
    {% if section.settings.quote_style == 'border' %}
      border-left: 4px solid {{ section.settings.quote_border_color | default: 'var(--color-primary)' }};
      padding-left: 2rem;
      margin-left: 0;
    {% endif %}
    {% if section.settings.quote_style == 'background' %}
      background-color: {{ section.settings.quote_bg_color | default: 'var(--color-surface)' }};
      padding: 2rem;
      border-radius: var(--radius-lg);
    {% endif %}
    {% if section.settings.quote_style == 'shadow' %}
      box-shadow: var(--shadow-lg);
      padding: 2rem;
      border-radius: var(--radius-lg);
      background-color: {{ section.settings.quote_bg_color | default: 'white' }};
    {% endif %}
  }
  
  .quote-author {
    margin-bottom: 2rem;
  }
  
  .author-name {
    font-size: {{ section.settings.author_name_size | default: 18 }}px;
    font-weight: {{ section.settings.author_name_weight | default: 600 }};
    color: {{ section.settings.author_name_color | default: 'var(--h3-color)' }};
    margin-bottom: 0.5rem;
  }
  
  .author-title {
    font-size: {{ section.settings.author_title_size | default: 16 }}px;
    font-weight: {{ section.settings.author_title_weight | default: 500 }};
    color: {{ section.settings.author_title_color | default: 'var(--color-primary)' }};
    margin-bottom: 0.25rem;
  }
  
  .author-company {
    font-size: {{ section.settings.author_company_size | default: 14 }}px;
    font-weight: {{ section.settings.author_company_weight | default: 400 }};
    color: {{ section.settings.author_company_color | default: 'var(--text-light-color)' }};
  }
  
  .quote-divider {
    margin: {{ section.settings.divider_margin | default: 2 }}rem 0;
  }
  
  .divider-line {
    width: {{ section.settings.divider_width | default: 80 }}px;
    height: {{ section.settings.divider_thickness | default: 2 }}px;
    background-color: {{ section.settings.divider_color | default: 'var(--color-border)' }};
    border: none;
    border-radius: var(--radius-full);
    margin: 0 auto;
  }
  
  .divider-dots {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
  }
  
  .divider-dots span {
    width: {{ section.settings.divider_dot_size | default: 6 }}px;
    height: {{ section.settings.divider_dot_size | default: 6 }}px;
    background-color: {{ section.settings.divider_color | default: 'var(--color-border)' }};
    border-radius: 50%;
  }
  
  .divider-icon {
    display: flex;
    justify-content: center;
  }
  
  .divider-icon span {
    font-size: {{ section.settings.divider_icon_size | default: 20 }}px;
    color: {{ section.settings.divider_color | default: 'var(--color-border)' }};
  }
  
  .quote-cta {
    margin-top: 2rem;
  }
  
  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: {{ section.settings.cta_padding_vertical | default: 12 }}px {{ section.settings.cta_padding_horizontal | default: 24 }}px;
    border-radius: var(--radius-lg);
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s ease;
    border: 2px solid transparent;
  }
  
  .cta-button.primary {
    background-color: {{ section.settings.cta_bg_color | default: 'var(--color-primary)' }};
    color: {{ section.settings.cta_text_color | default: 'white' }};
    border-color: {{ section.settings.cta_bg_color | default: 'var(--color-primary)' }};
  }
  
  .cta-button.primary:hover {
    background-color: {{ section.settings.cta_hover_bg_color | default: 'var(--color-primary-dark)' }};
    border-color: {{ section.settings.cta_hover_bg_color | default: 'var(--color-primary-dark)' }};
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }
  
  .cta-button.secondary {
    background-color: transparent;
    color: {{ section.settings.cta_bg_color | default: 'var(--color-primary)' }};
    border-color: {{ section.settings.cta_bg_color | default: 'var(--color-primary)' }};
  }
  
  .cta-button.secondary:hover {
    background-color: {{ section.settings.cta_bg_color | default: 'var(--color-primary)' }};
    color: white;
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }
  
  .cta-button.outline {
    background-color: transparent;
    color: {{ section.settings.cta_text_color | default: 'var(--color-text)' }};
    border-color: {{ section.settings.cta_border_color | default: 'var(--color-border)' }};
  }
  
  .cta-button.outline:hover {
    background-color: {{ section.settings.cta_hover_bg_color | default: 'var(--color-surface)' }};
    border-color: {{ section.settings.cta_bg_color | default: 'var(--color-primary)' }};
    color: {{ section.settings.cta_bg_color | default: 'var(--color-primary)' }};
  }
  
  .cta-icon {
    font-size: 1.25rem;
  }
  
  /* Style Variations */
  .quote-wrapper.large .quote-text {
    font-size: 32px;
  }
  
  .quote-wrapper.small .quote-text {
    font-size: 18px;
  }
  
  .quote-wrapper.centered {
    text-align: center;
  }
  
  .quote-wrapper.left-aligned {
    text-align: left;
  }
  
  .quote-wrapper.right-aligned {
    text-align: right;
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .quote-text {
      font-size: 20px;
    }
    
    .icon-text {
      font-size: 48px;
    }
    
    .quote {
      padding: 2rem 0;
    }
    
    .quote-text.border {
      padding-left: 1rem;
      border-left-width: 3px;
    }
  }
</style>

