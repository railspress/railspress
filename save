#!/bin/bash
# RailsPress Save Script
# Usage: ./save "commit message"
# Backs up database, adds, commits, and pushes

set -e

# Colors
GREEN='\033[0;32m'
BLUE='\033[0;34m'
RED='\033[0;31m'
NC='\033[0m'

# Check if commit message provided
if [ -z "$1" ]; then
  echo -e "${RED}โ Error: Commit message required${NC}"
  echo "Usage: ./save \"your commit message\""
  exit 1
fi

COMMIT_MESSAGE="$1"
TIMESTAMP=$(date +%Y%m%d-%H%M%S)
BACKUP_DIR="backups"
BACKUP_FILE="$BACKUP_DIR/database-$TIMESTAMP.sqlite3"

echo -e "${BLUE}๐พ RailsPress Save Script${NC}"
echo "=========================="
echo ""

# Create backup directory if it doesn't exist
mkdir -p "$BACKUP_DIR"

# Step 1: Backup database
echo -e "${BLUE}๐ฆ Backing up database...${NC}"
if [ -f "storage/development.sqlite3" ]; then
  cp storage/development.sqlite3 "$BACKUP_FILE"
  echo -e "${GREEN}โ Database backed up to: $BACKUP_FILE${NC}"
  
  # Clean up old backups if total size exceeds 1GB
  TOTAL_SIZE=$(du -sm "$BACKUP_DIR" | cut -f1)
  if [ "$TOTAL_SIZE" -gt 1024 ]; then
    echo -e "${BLUE}๐งน Cleaning up old backups (total size: ${TOTAL_SIZE}MB > 1GB)...${NC}"
    # Keep only the 5 most recent backups
    ls -t "$BACKUP_DIR"/database-*.sqlite3 | tail -n +6 | xargs rm -f
    REMAINING=$(ls -1 "$BACKUP_DIR"/database-*.sqlite3 2>/dev/null | wc -l | tr -d ' ')
    echo -e "${GREEN}โ Kept $REMAINING most recent backups${NC}"
  fi
else
  echo -e "${RED}โ๏ธ  No database file found at storage/development.sqlite3${NC}"
fi

# Step 2: Add all changes
echo -e "${BLUE}๐ Adding all changes...${NC}"
git add -A
CHANGED_FILES=$(git diff --cached --name-only | wc -l | tr -d ' ')
echo -e "${GREEN}โ Added $CHANGED_FILES files${NC}"

# Step 3: Commit
echo -e "${BLUE}๐ฌ Committing changes...${NC}"
git commit -m "$COMMIT_MESSAGE"
echo -e "${GREEN}โ Committed: $COMMIT_MESSAGE${NC}"

# Step 4: Show summary
echo ""
echo -e "${GREEN}โโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโ${NC}"
echo -e "${GREEN}โ Save complete!${NC}"
echo -e "${GREEN}โโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโ${NC}"
echo ""
echo "๐ฆ Database backup: $BACKUP_FILE"
echo "๐ฌ Commit: $COMMIT_MESSAGE"
echo "๐ Files changed: $CHANGED_FILES"
echo ""
echo "To push to remote: git push"
echo ""

